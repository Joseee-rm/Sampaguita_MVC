@model List<SeniorManagement.Models.Event>
@{
    // Safe admin check
    bool isAdmin = false;
    if (User.Identity.IsAuthenticated)
    {
        isAdmin = User.IsInRole("Administrator");
    }
    // Also check ViewBag if it was set in controller
    if (ViewBag.IsAdmin != null)
    {
        bool viewBagAdmin;
        if (bool.TryParse(ViewBag.IsAdmin.ToString(), out viewBagAdmin))
        {
            isAdmin = isAdmin || viewBagAdmin;
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Events - Senior Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .badge-event {
            padding: 0.5em 1em;
            border-radius: 20px;
            font-weight: 500;
        }

        .status-scheduled {
            background-color: #0dcaf0;
            color: white;
        }

        .status-ongoing {
            background-color: #ffc107;
            color: black;
        }

        .status-completed {
            background-color: #198754;
            color: white;
        }

        .status-cancelled {
            background-color: #dc3545;
            color: white;
        }

        .attendance-progress {
            height: 8px;
            border-radius: 4px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Main Content -->
            <main class="col-md-12 ms-sm-auto px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-calendar-alt me-2"></i>Events Management
                    </h1>
                    @if (isAdmin)
                    {
                        <div class="btn-toolbar mb-2 mb-md-0">
                            <a href="@Url.Action("Create", "Event")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Create New Event
                            </a>
                        </div>
                    }
                </div>

                <!-- Messages -->
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Filter Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="get" class="row g-3">
                            <div class="col-md-4">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="">All Status</option>
                                    <option value="Scheduled" selected='@(Context.Request.Query["status"] == "Scheduled")'>Scheduled</option>
                                    <option value="Ongoing" selected='@(Context.Request.Query["status"] == "Ongoing")'>Ongoing</option>
                                    <option value="Completed" selected='@(Context.Request.Query["status"] == "Completed")'>Completed</option>
                                    <option value="Cancelled" selected='@(Context.Request.Query["status"] == "Cancelled")'>Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="type" class="form-label">Event Type</label>
                                <select class="form-select" id="type" name="type">
                                    <option value="">All Types</option>
                                    <option value="Medical Mission" selected='@(Context.Request.Query["type"] == "Medical Mission")'>Medical Mission</option>
                                    <option value="Assistance Program" selected='@(Context.Request.Query["type"] == "Assistance Program")'>Assistance Program</option>
                                    <option value="Wellness Activity" selected='@(Context.Request.Query["type"] == "Wellness Activity")'>Wellness Activity</option>
                                    <option value="Community Gathering" selected='@(Context.Request.Query["type"] == "Community Gathering")'>Community Gathering</option>
                                </select>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-filter me-1"></i> Filter
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo me-1"></i> Clear
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Events Table -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Events List
                            <span class="badge bg-light text-dark ms-2">@Model.Count events</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Event Title</th>
                                            <th>Type</th>
                                            <th>Date & Time</th>
                                            <th>Location</th>
                                            <th>Attendance</th>
                                            <th>Status</th>
                                            @if (isAdmin)
                                            {
                                                <th>Actions</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var eventItem in Model)
                                        {
                                            var attendancePercentage = eventItem.MaxCapacity.HasValue && eventItem.MaxCapacity.Value > 0
                                            ? (int)Math.Round((double)eventItem.AttendanceCount / eventItem.MaxCapacity.Value * 100)
                                            : 0;
                                            var isFull = eventItem.MaxCapacity.HasValue && eventItem.AttendanceCount >= eventItem.MaxCapacity.Value;

                                            <tr>
                                                <td>
                                                    <div class="fw-bold">@eventItem.EventTitle</div>
                                                    <small class="text-muted">
                                                        @(eventItem.EventDescription?.Length > 50 ?
                                                                                                        eventItem.EventDescription.Substring(0, 50) + "..." :
                                                                                                        eventItem.EventDescription)
                                            </small>
                                            <div class="mt-1">
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>@eventItem.OrganizedBy
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@eventItem.EventType</span>
                                        </td>
                                        <td>
                                            <div class="fw-bold">@eventItem.EventDate.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@eventItem.TimeFormatted</small>
                                        </td>
                                        <td>@eventItem.EventLocation</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-3 text-center">
                                                    <div class="fw-bold fs-5">@eventItem.AttendanceCount</div>
                                                    @if (eventItem.MaxCapacity.HasValue)
                                                            {
                                                                <small class="text-muted">/@eventItem.MaxCapacity</small>
                                                            }
                                                        </div>
                                                        @if (eventItem.MaxCapacity.HasValue)
                                                        {
                                                            <div class="flex-grow-1">
                                                                <div class="progress attendance-progress">
                                                                    <div class="progress-bar
                                                                                    @(attendancePercentage >= 90 ? "bg-danger" :
                                                                                                                                                   attendancePercentage >= 70 ? "bg-warning" : "bg-success")"
                                                             role="progressbar"
                                                             style="width: @(attendancePercentage)%">
                                                        </div>
                                                    </div>
                                                    <small class="text-muted">@attendancePercentage% full</small>
                                                    @if (isFull)
                                                                {
                                                                    <span class="badge bg-danger ms-1">Full</span>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    @{
                                                        var statusClass = eventItem.Status switch
                                                        {
                                                            "Scheduled" => "status-scheduled",
                                                            "Ongoing" => "status-ongoing",
                                                            "Completed" => "status-completed",
                                                            "Cancelled" => "status-cancelled",
                                                            _ => "bg-secondary"
                                                        };
                                                    }
                                                    <span class="badge @statusClass">@eventItem.Status</span>
                                                </td>
                                                @if (isAdmin)
                                                {
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="@Url.Action("Edit", "Event", new { id = eventItem.Id })"
                                                               class="btn btn-outline-primary" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button type="button"
                                                                    class="btn btn-outline-warning archive-btn"
                                                                    data-event-id="@eventItem.Id"
                                                                    data-event-title="@eventItem.EventTitle"
                                                                    title="Archive">
                                                                <i class="fas fa-archive"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                                <h4 class="text-muted">No Events Found</h4>
                                <p class="text-muted">There are no events matching your criteria.</p>
                                @if (isAdmin)
                                {
                                    <a href="@Url.Action("Create", "Event")" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i> Create Your First Event
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Archived Events Link (Admin only) -->
                @if (isAdmin && Model.Any(e => e.IsDeleted))
                {
                    <div class="mt-4">
                        <a href="@Url.Action("Archived", "Event")" class="btn btn-outline-secondary">
                            <i class="fas fa-archive me-1"></i> View Archived Events (@Model.Count(e => e.IsDeleted))
                        </a>
                    </div>
                }
            </main>
        </div>
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            // Archive button click
            $('.archive-btn').click(function() {
                const eventId = $(this).data('event-id');
                const eventTitle = $(this).data('event-title');

                Swal.fire({
                    title: 'Archive Event',
                    html: `<p>Are you sure you want to archive <strong>"${eventTitle}"</strong>?</p>
                           <p class="text-muted small">Archived events can be restored from the Archived Events page.</p>`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ffc107',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, archive it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Submit archive form
                        const form = $('<form>', {
                            'method': 'post',
                            'action': '@Url.Action("Archive", "Event")/' + eventId
                        });

                        const token = $('input[name="__RequestVerificationToken"]').val();
                        $('<input>').attr({
                            type: 'hidden',
                            name: '__RequestVerificationToken',
                            value: token
                        }).appendTo(form);

                        form.appendTo('body').submit();
                    }
                });
            });

            // Update attendance
            window.updateAttendance = function(eventId, change) {
                const currentCount = parseInt($(`.attendance-count[data-event-id="${eventId}"]`).text());
                const newCount = currentCount + change;
                const maxCapacity = parseInt($(`.attendance-count[data-event-id="${eventId}"]`).data('max-capacity'));

                if (newCount < 0) return;
                if (maxCapacity > 0 && newCount > maxCapacity) return;

                // Send AJAX request
                $.ajax({
                    url: '@Url.Action("UpdateAttendance", "Event")/' + eventId,
                    type: 'POST',
                    data: { count: newCount },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function() {
                        $(`.attendance-count[data-event-id="${eventId}"]`).text(newCount);
                        // Update progress bar if exists
                        if (maxCapacity > 0) {
                            const percentage = Math.round((newCount / maxCapacity) * 100);
                            $(`.progress-bar[data-event-id="${eventId}"]`).css('width', percentage + '%');
                            $(`.attendance-percentage[data-event-id="${eventId}"]`).text(percentage + '%');
                        }
                    }
                });
            };

            // Status dropdown change
            $('.status-dropdown').change(function() {
                const eventId = $(this).data('event-id');
                const newStatus = $(this).val();
                const originalStatus = $(this).data('original-status');

                if (newStatus === originalStatus) return;

                Swal.fire({
                    title: 'Update Status',
                    text: `Change status from "${originalStatus}" to "${newStatus}"?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Update',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("UpdateStatus", "Event")/' + eventId,
                            type: 'POST',
                            data: { status: newStatus },
                            headers: {
                                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function() {
                                location.reload();
                            }
                        });
                    } else {
                        $(this).val(originalStatus);
                    }
                });
            });
        });
    </script>
</body>
</html>