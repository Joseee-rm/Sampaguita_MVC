@model SeniorManagement.Models.Event
@{
    ViewData["Title"] = "";
    bool isAdmin = ViewBag.IsAdmin as bool? ?? false;
    bool isStaff = ViewBag.IsStaff as bool? ?? false;
    string userName = ViewBag.UserName as string;
    string defaultOrganizer = ViewBag.DefaultOrganizer as string;
    string defaultDate = ViewBag.DefaultDate as string;
    string defaultTime = ViewBag.DefaultTime as string;
    bool hideStatus = ViewBag.HideStatus as bool? ?? false;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Event</h3>
            <small class="opacity-90">New events are automatically set to "Upcoming" status</small>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="eventForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EventTitle" class="form-label fw-bold">Event Title *</label>
                            <input asp-for="EventTitle" class="form-control" placeholder="Enter event title" />
                            <span asp-validation-for="EventTitle" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EventType" class="form-label fw-bold">Event Type *</label>
                            <select asp-for="EventType" class="form-select">
                                <option value="">-- Select Event Type --</option>
                                <option value="Medical Mission">Medical Mission</option>
                                <option value="Assistance Program">Assistance Program</option>
                                <option value="Wellness Activity">Wellness Activity</option>
                                <option value="Community Gathering">Community Gathering</option>
                                <option value="Educational">Educational</option>
                                <option value="Social">Social</option>
                                <option value="Birthday Celebration">Birthday Celebration</option>
                                <option value="Health Checkup">Health Checkup</option>
                                <option value="Food Distribution">Food Distribution</option>
                                <option value="Training Workshop">Training Workshop</option>
                            </select>
                            <span asp-validation-for="EventType" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EventDate" class="form-label fw-bold">Event Date *</label>
                            <input asp-for="EventDate" type="date" class="form-control"
                                   value="@defaultDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="EventDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EventTime" class="form-label fw-bold">Event Time *</label>
                            <input asp-for="EventTime" type="time" class="form-control"
                                   value="@defaultTime" step="300" />
                            <span asp-validation-for="EventTime" class="text-danger small"></span>
                            <small class="text-muted">Use 24-hour format (e.g., 14:30 for 2:30 PM)</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EventLocation" class="form-label fw-bold">Event Location *</label>
                            <input asp-for="EventLocation" class="form-control" placeholder="Enter event location" />
                            <span asp-validation-for="EventLocation" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OrganizedBy" class="form-label fw-bold">Organized By *</label>
                            <input asp-for="OrganizedBy" class="form-control"
                                   placeholder="Enter organizer name"
                                   value="@defaultOrganizer" />
                            <span asp-validation-for="OrganizedBy" class="text-danger small"></span>
                            @if (isStaff)
                            {
                                <small class="text-muted">Automatically filled with your name</small>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MaxCapacity" class="form-label">Maximum Capacity (Optional)</label>
                            <input asp-for="MaxCapacity" type="number" min="0" class="form-control"
                                   placeholder="Leave empty for unlimited" id="maxCapacity" />
                            <span asp-validation-for="MaxCapacity" class="text-danger small"></span>
                            <small class="text-muted">Set to 0 or leave empty for no limit. Use for attendance tracking.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- Status field removed - always set to "Upcoming" -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Status</label>
                            <input type="text" class="form-control bg-light" value="Upcoming" readonly />
                            <small class="text-muted">Status is automatically set to "Upcoming" for new events</small>
                            <input type="hidden" asp-for="Status" value="Upcoming" />
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EventDescription" class="form-label fw-bold">Event Description *</label>
                    <textarea asp-for="EventDescription" class="form-control" rows="4"
                              placeholder="Enter detailed event description..."></textarea>
                    <span asp-validation-for="EventDescription" class="text-danger small"></span>
                </div>

                <!-- Attendance Information -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Attendance Tracking Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h6><i class="fas fa-check-circle me-2 text-success"></i>Automatic Attendance System</h6>
                                <p>After creating this event, you will be able to:</p>
                                <ul>
                                    <li>Mark seniors as Present or Absent using the attendance page</li>
                                    <li>Attendance count updates automatically</li>
                                    <li>Once marked Present, cannot be changed to Absent</li>
                                    <li>Track attendance by zones and barangays</li>
                                    <li>Use bulk actions for multiple seniors</li>
                                </ul>
                            </div>
                            <div class="col-md-4">
                                <div class="alert alert-success">
                                    <h6><i class="fas fa-lightbulb me-2"></i>Tip</h6>
                                    <p class="mb-0">Set a maximum capacity to track how full your event is getting.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Important Notes:</strong>
                    <ul class="mb-0 mt-2">
                        <li>All new events are created with status <strong>"Upcoming"</strong></li>
                        <li>Attendance tracking will be available after event creation</li>
                        <li>Once status becomes "Confirmed", it cannot be changed</li>
                        <li>Cancelled events are automatically moved to archive</li>
                    </ul>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Create Event
                    </button>
                    <a href="@Url.Action("Index", "Event")" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('eventForm');

            form.addEventListener('submit', function(e) {
                // Validate date
                const eventDateInput = document.getElementById('EventDate');
                const eventDate = new Date(eventDateInput.value);
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                if (eventDate < today) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid Date',
                        text: 'Event date cannot be in the past.',
                        confirmButtonColor: '#3085d6'
                    });
                    return false;
                }

                // Validate required fields
                const eventTitle = document.getElementById('EventTitle').value;
                const eventType = document.getElementById('EventType').value;
                const eventTime = document.getElementById('EventTime').value;
                const eventLocation = document.getElementById('EventLocation').value;
                const organizedBy = document.getElementById('OrganizedBy').value;
                const eventDescription = document.getElementById('EventDescription').value;

                if (!eventTitle || !eventType || !eventTime || !eventLocation || !organizedBy || !eventDescription) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Missing Information',
                        html: '<p>Please fill in all required fields marked with *</p>' +
                              '<ul class="text-start">' +
                              (!eventTitle ? '<li>Event Title</li>' : '') +
                              (!eventType ? '<li>Event Type</li>' : '') +
                              (!eventTime ? '<li>Event Time</li>' : '') +
                              (!eventLocation ? '<li>Event Location</li>' : '') +
                              (!organizedBy ? '<li>Organized By</li>' : '') +
                              (!eventDescription ? '<li>Event Description</li>' : '') +
                              '</ul>',
                        confirmButtonColor: '#3085d6'
                    });
                    return false;
                }

                // Validate capacity
                const maxCapacity = document.getElementById('maxCapacity').value;
                if (maxCapacity && parseInt(maxCapacity) < 0) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid Capacity',
                        text: 'Maximum capacity cannot be negative.',
                        confirmButtonColor: '#3085d6'
                    });
                    return false;
                }

                // Show loading
                const submitBtn = form.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Creating Event...';
                submitBtn.disabled = true;

                // Re-enable button if form validation fails
                setTimeout(() => {
                    if (!form.checkValidity()) {
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    }
                }, 3000);
            });

            // Set today's date as default if empty
            const dateInput = document.getElementById('EventDate');
            if (dateInput && !dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }

            // Set default time if empty
            const timeInput = document.getElementById('EventTime');
            if (timeInput && !timeInput.value) {
                const now = new Date();
                const nextHour = new Date(now.getTime() + 60 * 60 * 1000);
                const hours = nextHour.getHours().toString().padStart(2, '0');
                const minutes = '00';
                timeInput.value = `${hours}:${minutes}`;
            }

            // Auto-capitalize event title
            const titleInput = document.getElementById('EventTitle');
            if (titleInput) {
                titleInput.addEventListener('blur', function() {
                    this.value = this.value.charAt(0).toUpperCase() + this.value.slice(1);
                });
            }

            // Show success message if redirected from another page
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: '@TempData["SuccessMessage"]',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000
                    });
                    </text>
            }
        });
    </script>
}