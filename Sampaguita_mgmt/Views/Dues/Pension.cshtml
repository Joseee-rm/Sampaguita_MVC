<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-money-bill-wave text-info mr-2"></i>Monthly Pension
            @if (!string.IsNullOrEmpty(selectedPensionType))
            {
                <span class="badge badge-primary ml-2">@selectedPensionType</span>
            }
        </h1>
        <div class="btn-group">
            <a href="@Url.Action("Index", "Dues")" class="btn btn-outline-primary">
                <i class="fas fa-calendar-check mr-2"></i>Monthly Contributions
            </a>
            <a href="@Url.Action("ViewPensionLogs", "Dues")" class="btn btn-outline-primary ml-2">
                <i class="fas fa-history mr-2"></i>Pension Logs
            </a>
            <a href="@Url.Action("PensionFrequencyDashboard", "Dues", new { month = selectedMonth, year = selectedYear })"
               class="btn btn-outline-info ml-2">
                <i class="fas fa-chart-pie mr-2"></i>Frequency Dashboard
            </a>
        </div>
    </div>

    <!-- Notification Alert -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-@(ViewBag.MessageType) alert-dismissible fade show" role="alert">
            @ViewBag.Message
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- New Pension Seniors Alert -->
    @if (newPensionSeniorsCount > 0)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle mr-2"></i>
            <strong>@newPensionSeniorsCount new senior(s)</strong> have been added to the pension system.
            They have been automatically included in this month's pension.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- RMD Warning for Age 73+ -->
    @if (rmdEligible.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i>
            <strong>RMD Alert:</strong> @rmdEligible.Count senior(s) age 73+ with flexible pensions require Required Minimum Distributions (RMDs).
            <a href="@Url.Action("PensionFrequencyDashboard", "Dues", new { month = selectedMonth, year = selectedYear })" class="alert-link">View RMD List</a>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Pensioners
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                            <div class="text-xs text-muted mt-1">
                                @if (!string.IsNullOrEmpty(selectedPensionType))
                                {
                                    <span>Filtered by: @selectedPensionType</span>
                                }
                                else
                                {
                                    <span>All pension types</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Claimed
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@claimedCount</div>
                            <div class="text-xs text-muted mt-1">
                                @if (Model.Count > 0)
                                {
                                    double claimRate = ((double)claimedCount / Model.Count * 100);
                                    <span>@claimRate.ToString("0.0")% claim rate</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Not Claimed
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@unclaimedCount</div>
                            <div class="text-xs text-muted mt-1">
                                @if (Model.Count > 0)
                                {
                                    double unclaimedRate = ((double)unclaimedCount / Model.Count * 100);
                                    <span>@unclaimedRate.ToString("0.0")% unclaimed</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Claimed Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">₱@claimedAmount</div>
                            <div class="text-xs text-muted">
                                Total: ₱@totalPensionAmount
                            </div>
                            <div class="text-xs text-muted mt-1">
                                @monthlyPensions.Count monthly / @flexiblePensions.Count flexible
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Filter Pension</h6>
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="exportPensionCsv()">
                    <i class="fas fa-file-excel mr-1"></i>Export Excel
                </button>
                @if (!hasLog)
                {
                    <button type="button" class="btn btn-sm btn-success" onclick="savePensionLog()">
                        <i class="fas fa-save mr-1"></i>Save Log
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-sm btn-warning" onclick="updatePensionLog()">
                        <i class="fas fa-sync-alt mr-1"></i>Update Log
                    </button>
                }
            </div>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Month</label>
                    <select name="month" class="form-control">
                        @for (int m = 1; m <= 12; m++)
                        {
                            bool isSelected = m == selectedMonth;
                            <option value="@m" selected="@isSelected">
                                @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Year</label>
                    <input type="number" name="year" value="@selectedYear" class="form-control" min="2000" max="2100" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Pension Type</label>
                    <select name="pensionType" class="form-control">
                        <option value="">All Pension Types</option>
                        @foreach (var type in pensionTypes)
                        {
                            bool isSelected = type == selectedPensionType;
                            <option value="@type" selected="@isSelected">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter mr-1"></i>Filter
                    </button>
                </div>
            </form>

            <!-- Pension Type Stats -->
            @if (pensionTypeStats.Any())
            {
                <div class="mt-3">
                    <h6 class="font-weight-bold text-muted mb-2">Pension Type Breakdown:</h6>
                    <div class="d-flex flex-wrap">
                        @foreach (var stat in pensionTypeStats)
                        {
                            <div class="mr-3 mb-2">
                                @if (stat.Type == "No Pension")
                                {
                                    <span class="badge no-pension-badge pension-type-badge" title="Seniors without pensions cannot be claimed">
                                        @stat.Type: @stat.Total (@stat.Claimed marked as claimed*)
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-info pension-type-badge">
                                        @stat.Type: @stat.Total (@stat.Claimed claimed)
                                    </span>
                                }
                            </div>
                        }
                    </div>
                    @if (pensionTypeStats.Any(s => s.Type == "No Pension"))
                    {
                        <small class="text-muted mt-1">
                            <i class="fas fa-info-circle"></i> *"No Pension" claims are from legacy data and cannot be modified.
                        </small>
                    }
                </div>
            }

            <!-- Frequency Summary -->
            <div class="mt-3">
                <h6 class="font-weight-bold text-muted mb-2">Frequency Summary:</h6>
                <div class="d-flex flex-wrap">
                    <div class="mr-3 mb-2">
                        <span class="badge frequency-badge frequency-monthly">
                            <i class="fas fa-calendar-check mr-1"></i>Monthly (12x/year): @monthlyPensions.Count
                        </span>
                    </div>
                    <div class="mr-3 mb-2">
                        <span class="badge frequency-badge frequency-flexible">
                            <i class="fas fa-user-clock mr-1"></i>Flexible: @flexiblePensions.Count
                        </span>
                    </div>
                    @if (rmdEligible.Any())
                    {
                        <div class="mr-3 mb-2">
                            <span class="badge badge-warning">
                                <i class="fas fa-exclamation-triangle mr-1"></i>RMD Required: @rmdEligible.Count
                            </span>
                        </div>
                    }
                    <div class="mr-3 mb-2">
                        <span class="badge no-pension-badge">
                            <i class="fas fa-ban mr-1"></i>No Pension: @Model.Count(p => string.IsNullOrEmpty(p.PensionType) || p.PensionType == "No Pension")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pension Table -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                Pension for @monthName @selectedYear
                @if (!string.IsNullOrEmpty(selectedPensionType))
                {
                    <span class="badge badge-primary ml-2">@selectedPensionType</span>
                }
                <span class="badge badge-secondary ml-2">@Model.Count pensioners</span>
            </h6>
            <div class="text-muted">
                <small>
                    <i class="fas fa-chart-pie mr-1"></i>
                    @pensionTypeStats.Count pension type(s)
                </small>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="pensionTable" width="100%" cellspacing="0">
                        <thead class="bg-light">
                            <tr>
                                <th>#</th>
                                <th>Senior Name</th>
                                <th>Zone</th>
                                <th>Age</th>
                                <th>Pension Type & Frequency</th>
                                <th>Senior Status</th>
                                <th>Claim Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                                foreach (var item in Model)
                                {
                                    bool isMonthly = monthlyPensionTypes.Contains(item.PensionType);
                                    bool isFlexible = flexiblePensionTypes.Contains(item.PensionType);
                                    bool requiresRmd = item.Age >= 73 && isFlexible;
                                    bool hasPension = !string.IsNullOrEmpty(item.PensionType) && item.PensionType != "No Pension";

                                    <tr data-id="@item.Id" @(requiresRmd ? "class=table-warning" : "")>
                                        <td>@counter</td>
                                        <td style="font-weight: 500;">
                                            @item.FullName
                                            @if (requiresRmd)
                                            {
                                                <br>
                                                <small class="text-warning">
                                                    <i class="fas fa-exclamation-triangle mr-1"></i>RMD Required (Age @item.Age)
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge badge-secondary">Zone @item.Zone</span>
                                        </td>
                                        <td>@item.Age</td>
                                        <td>
                                            @if (hasPension)
                                            {
                                                <div class="d-flex flex-column">
                                                    <span class="badge badge-info mb-1">
                                                        @item.PensionType
                                                    </span>
                                                    @if (isMonthly)
                                                    {
                                                        <span class="badge frequency-badge frequency-monthly">
                                                            <i class="fas fa-calendar-check mr-1"></i>Monthly (Required)
                                                        </span>
                                                    }
                                                    else if (isFlexible)
                                                    {
                                                        <span class="badge frequency-badge frequency-flexible">
                                                            <i class="fas fa-user-clock mr-1"></i>Flexible (Optional)
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">
                                                            Other Pension Type
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex flex-column">
                                                    <span class="badge no-pension-badge">
                                                        No Pension
                                                    </span>
                                                    <small class="text-muted mt-1">
                                                        <i class="fas fa-info-circle mr-1"></i>No pension to claim
                                                    </small>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == "Active")
                                            {
                                                <span class="badge badge-success">@item.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">@item.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsClaimed)
                                            {
                                                <span class="badge badge-success">
                                                    <i class="fas fa-check mr-1"></i>CLAIMED
                                                </span>
                                                <br />
                                                <small class="text-muted">@(item.ClaimedDate?.ToString("MMM dd, yyyy HH:mm"))</small>
                                            }
                                            else
                                            {
                                                @if (hasPension)
                                                {
                                                    <span class="badge badge-danger">
                                                        <i class="fas fa-times mr-1"></i>NOT CLAIMED
                                                    </span>
                                                    @if (isMonthly && item.Status == "Active")
                                                    {
                                                        <br />
                                                        <small class="text-danger">
                                                            <i class="fas fa-exclamation-circle mr-1"></i>Required this month
                                                        </small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge no-pension-badge">
                                                        <i class="fas fa-ban mr-1"></i>NO PENSION
                                                    </span>
                                                    <br />
                                                    <small class="text-muted">Not applicable</small>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == "Active")
                                            {
                                                if (hasPension)
                                                {
                                                    if (!item.IsClaimed)
                                                    {
                                                        <button class="btn btn-sm btn-success toggle-pension"
                                                                data-id="@item.Id"
                                                                data-claimed="false"
                                                                data-pension-type="@item.PensionType">
                                                            <i class="fas fa-check mr-1"></i>
                                                            @if (isMonthly)
                                                            {
                                                                <text>Mark Claimed</text>
                                                            }
                                                            else
                                                            {
                                                                <text>Record Withdrawal</text>
                                                            }
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">
                                                            <i class="fas fa-check-circle text-success mr-1"></i>
                                                            @if (isMonthly)
                                                            {
                                                                <text>Claimed</text>
                                                            }
                                                            else
                                                            {
                                                                <text>Withdrawn</text>
                                                            }
                                                        </span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted" title="No pension to claim">
                                                        <i class="fas fa-ban mr-1"></i>No Pension
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Archived</span>
                                            }
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <p class="mb-0">
                        @if (!string.IsNullOrEmpty(selectedPensionType))
                        {
                            <text>No pension records found for @monthName @selectedYear with pension type: @selectedPensionType</text>
                        }
                        else
                        {
                            <text>No pension records found for @monthName @selectedYear</text>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(selectedPensionType))
                    {
                        <a href="@Url.Action("Pension", "Dues", new { month = selectedMonth, year = selectedYear })" class="btn btn-outline-primary mt-3">
                            <i class="fas fa-eye mr-1"></i>View All Pension Types
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable if table exists
            if ($('#pensionTable').length) {
                $('#pensionTable').DataTable({
                    "pageLength": 25,
                    "order": [[1, "asc"]],
                    "language": {
                        "search": "Search pensioners:",
                        "lengthMenu": "Show _MENU_ entries",
                        "info": "Showing _START_ to _END_ of _TOTAL_ pensioners"
                    }
                });
            }
        });

        // Toggle Pension Claim Status
        $(document).on('click', '.toggle-pension', function () {
            var button = $(this);
            var pensionId = button.data('id');
            var isClaimed = button.data('claimed') === 'true';
            var pensionType = button.data('pension-type');

            // Check if it's "No Pension" type or empty
            if (!pensionType || pensionType === "No Pension") {
                showAlert('This senior has no pension type assigned. Cannot claim pension.', 'warning');
                return;
            }

            if (isClaimed) {
                showAlert('Cannot mark unclaimed. Once claimed, status cannot be changed.', 'warning');
                return;
            }

            var actionText = pensionType.includes('Social Security') ||
                            pensionType.includes('Defined Benefit') ||
                            pensionType.includes('Annuity') ||
                            pensionType.includes('Government/Military')
                            ? 'mark as CLAIMED'
                            : 'record a WITHDRAWAL';

            if (confirm(`Are you sure you want to ${actionText} for this ${pensionType} pension? This action cannot be undone.`)) {
                var originalHtml = button.html();
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i>Processing...');

                $.ajax({
                    url: '@Url.Action("TogglePensionClaim", "Dues")',
                    type: 'POST',
                    data: { id: pensionId },
                    success: function (response) {
                        if (response.success) {
                            showAlert(`Pension ${actionText} successfully!`, 'success');
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            showAlert(response.message, 'danger');
                            button.prop('disabled', false).html(originalHtml);
                        }
                    },
                    error: function (xhr, status, error) {
                        showAlert('Error updating pension claim status: ' + error, 'danger');
                        button.prop('disabled', false).html(originalHtml);
                    }
                });
            }
        });

        // Update Pension Log
        function updatePensionLog() {
            if (confirm('Are you sure you want to update the pension log for @monthName @selectedYear? This will overwrite the existing log with current data.')) {
                var month = @selectedMonth;
                var year = @selectedYear;
                var pensionType = '@selectedPensionType';

                var updateButton = $('button:contains("Update Log")');
                var originalText = updateButton.html();
                updateButton.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i>Updating...');

                $.ajax({
                    url: '@Url.Action("UpdatePensionLog", "Dues")',
                    type: 'POST',
                    data: {
                        month: month,
                        year: year,
                        pensionType: pensionType
                    },
                    success: function () {
                        showAlert('Pension log updated successfully! The page will reload.', 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    },
                    error: function (xhr, status, error) {
                        showAlert('Error updating pension log: ' + error, 'danger');
                        updateButton.prop('disabled', false).html(originalText);
                    }
                });
            }
        }

        // Export Pension CSV
        function exportPensionCsv() {
            var month = @selectedMonth;
            var year = @selectedYear;
            var pensionType = '@selectedPensionType';
            window.location.href = '@Url.Action("ExportPensionCsv", "Dues")?month=' + month + '&year=' + year + '&pensionType=' + encodeURIComponent(pensionType);
        }

        // Save Pension Log
        function savePensionLog() {
            if (confirm('Are you sure you want to save a pension log for @monthName @selectedYear? This will create a permanent record that cannot be deleted.')) {
                var month = @selectedMonth;
                var year = @selectedYear;
                var pensionType = '@selectedPensionType';

                var saveButton = $('button:contains("Save Log")');
                var originalText = saveButton.html();
                saveButton.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i>Saving...');

                $.ajax({
                    url: '@Url.Action("SavePensionLog", "Dues")',
                    type: 'POST',
                    data: {
                        month: month,
                        year: year,
                        pensionType: pensionType
                    },
                    success: function () {
                        showAlert('Pension log saved successfully! The page will reload.', 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    },
                    error: function (xhr, status, error) {
                        showAlert('Error saving pension log: ' + error, 'danger');
                        saveButton.prop('disabled', false).html(originalText);
                    }
                });
            }
        }

        // Helper function to show alerts
        function showAlert(message, type) {
            var alertClass = 'alert-' + type;
            var alertHtml = '<div class="alert ' + alertClass + ' alert-dismissible fade show" role="alert">' +
                '<i class="fas fa-info-circle mr-2"></i>' + message +
                '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                '<span aria-hidden="true">&times;</span>' +
                '</button>' +
                '</div>';

            $('.container-fluid').prepend(alertHtml);

            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
