@model List<SeniorManagement.Models.PensionContribution>
@using System.Globalization
@{
    ViewData["Title"] = "";

    int currentMonth = DateTime.Now.Month;
    int currentYear = DateTime.Now.Year;
    int selectedMonth = ViewBag.Month != null ? (int)ViewBag.Month : currentMonth;
    int selectedYear = ViewBag.Year != null ? (int)ViewBag.Year : currentYear;
    string monthName = ViewBag.MonthName != null ? (string)ViewBag.MonthName : CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(selectedMonth);
    bool hasLog = ViewBag.HasLog != null && (bool)ViewBag.HasLog;
    List<string> pensionTypes = ViewBag.PensionTypes as List<string> ?? new List<string>();
    string selectedPensionType = ViewBag.SelectedPensionType as string;

    // Calculate statistics
    int claimedCount = ViewBag.ClaimedCount != null ? (int)ViewBag.ClaimedCount : 0;
    int unclaimedCount = ViewBag.UnclaimedCount != null ? (int)ViewBag.UnclaimedCount : 0;
    int totalPensionAmount = ViewBag.TotalPensionAmount != null ? (int)ViewBag.TotalPensionAmount : 0;
    int claimedAmount = ViewBag.ClaimedAmount != null ? (int)ViewBag.ClaimedAmount : 0;
    int newPensionSeniorsCount = ViewBag.NewPensionSeniorsCount != null ? (int)ViewBag.NewPensionSeniorsCount : 0;

    // Group by pension type for statistics
    var pensionTypeStats = Model
        .GroupBy(p => string.IsNullOrEmpty(p.PensionType) ? "No Pension" : p.PensionType)
        .Select(g => new
        {
            Type = g.Key,
            Total = g.Count(),
            Claimed = g.Count(p => p.IsClaimed),
            Unclaimed = g.Count(p => !p.IsClaimed)
        })
        .ToList();

    // Define frequency categories
    var monthlyPensionTypes = new List<string>
    {
        "Social Security",
        "Defined Benefit Plan",
        "Annuity",
        "Government/Military Pension"
    };

    var flexiblePensionTypes = new List<string>
    {
        "Defined Contribution Plan (401k/403b)",
        "IRA (Traditional/Roth)"
    };

    // Calculate frequency-based statistics
    var monthlyPensions = Model.Where(p => monthlyPensionTypes.Contains(p.PensionType)).ToList();
    var flexiblePensions = Model.Where(p => flexiblePensionTypes.Contains(p.PensionType)).ToList();
    var rmdEligible = Model.Where(p => p.Age >= 73 && flexiblePensionTypes.Contains(p.PensionType)).ToList();
}

