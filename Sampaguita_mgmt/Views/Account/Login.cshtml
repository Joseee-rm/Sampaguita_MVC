@model SeniorManagement.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Senior Management System - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            /* REMOVED: overflow: hidden; - Allows scrolling */
        }

        .login-container {
            min-height: 100vh;
            background: linear-gradient( rgba(30, 60, 114, 0.7), rgba(42, 82, 152, 0.7) ), url('/images/login-bg.jpg') center/cover no-repeat fixed;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 20px; /* Added padding for mobile */
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            margin: 2rem;
            position: relative;
            z-index: 10;
            transform: translateY(0);
            transition: all 0.3s ease;
            max-height: 95vh; /* Limits height on tall screens */
            overflow-y: auto; /* Makes card scrollable if content overflows */
        }

            .login-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.2);
            }

        /* NEW: Logout Success Toast/Popup */
        .logout-toast {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: #155724;
            border-left: 4px solid #28a745;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            gap: 12px;
            transform: translateX(120%);
            transition: transform 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            max-width: 350px;
            animation: slideIn 0.5s forwards, slideOut 0.5s forwards 2.5s;
        }

            .logout-toast.show {
                transform: translateX(0);
            }

        .logout-toast-content {
            display: flex;
            align-items: center;
            gap: 12px;
            flex: 1;
        }

        .logout-toast-icon {
            font-size: 1.5rem;
            color: #28a745;
        }

        .logout-toast-message {
            font-weight: 500;
            font-size: 0.95rem;
        }

        .logout-toast-close {
            background: none;
            border: none;
            color: #155724;
            font-size: 1.2rem;
            cursor: pointer;
            opacity: 0.7;
            transition: opacity 0.2s;
            padding: 4px;
        }

            .logout-toast-close:hover {
                opacity: 1;
            }

        @@keyframes slideIn {
            from

        {
            transform: translateX(120%);
        }

        to {
            transform: translateX(0);
        }

        }

       @@keyframes slideOut {
            from

        {
            transform: translateX(0);
            opacity: 1;
        }

        to {
            transform: translateX(120%);
            opacity: 0;
        }

        }

        /* Fade in/out animation */
        @@keyframes fadeInOut {
            0%

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        15% {
            opacity: 1;
            transform: translateY(0);
        }

        85% {
            opacity: 1;
            transform: translateY(0);
        }

        100% {
            opacity: 0;
            transform: translateY(-10px);
        }

        }

        .logo-section {
            text-align: center;
            margin-bottom: 2.5rem;
        }

            .logo-section h1 {
                color: #1e3c72;
                font-weight: 700;
                font-size: 2.2rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(135deg, #1e3c72, #2a5298);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .logo-section p {
                color: #6c757d;
                font-size: 1rem;
                margin: 0;
            }

        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #2c3e50;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e1e8ed;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #ffffff;
            color: #2c3e50;
        }

            .form-control:focus {
                border-color: #1e3c72;
                box-shadow: 0 0 0 3px rgba(30, 60, 114, 0.1);
                background: #ffffff;
                transform: translateY(-2px);
            }

            .form-control::placeholder {
                color: #a0a0a0;
                font-weight: 400;
            }

        .form-select {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e1e8ed;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #ffffff;
            color: #2c3e50;
            cursor: pointer;
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 12px center;
            background-repeat: no-repeat;
            background-size: 16px;
        }

            .form-select:focus {
                border-color: #1e3c72;
                box-shadow: 0 0 0 3px rgba(30, 60, 114, 0.1);
                transform: translateY(-2px);
            }

        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            transition: color 0.3s ease;
            padding: 5px;
        }

            .password-toggle:hover {
                color: #1e3c72;
            }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-right: 10px;
            border: 2px solid #e1e8ed;
            border-radius: 4px;
            cursor: pointer;
        }

            .form-check-input:checked {
                background-color: #1e3c72;
                border-color: #1e3c72;
            }

        .form-check-label {
            color: #2c3e50;
            font-size: 0.9rem;
            cursor: pointer;
            user-select: none;
        }

        .btn-login {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(30, 60, 114, 0.4);
            }

            .btn-login:active {
                transform: translateY(0);
            }

            .btn-login:disabled {
                opacity: 0.7;
                cursor: not-allowed;
                transform: none;
            }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }

        .validation-message {
            color: #dc3545;
            font-size: 0.8rem;
            margin-top: 0.25rem;
            display: block;
        }

        .alert {
            border-radius: 10px;
            border: none;
            margin-bottom: 1.5rem;
            padding: 1rem;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        .alert-success {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: #155724;
            border-left: 4px solid #28a745;
        }

        /* Floating animation for background */
        .floating-bg {
            position: absolute;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: floatAnimation 6s ease-in-out infinite;
        }

        @@keyframes floatAnimation {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(1deg);
            }
        }

        /* Responsive design */
        @@media (max-width: 576px) {
            .login-card {
                margin: 1rem;
                padding: 2rem;
                max-height: 90vh; /* Adjusted for mobile */
            }

            .logo-section h1 {
                font-size: 1.8rem;
            }

            .logout-toast {
                top: 10px;
                right: 10px;
                left: 10px;
                max-width: none;
            }
        }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(241, 241, 241, 0.5);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: #1e3c72;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #2a5298;
            }

        /* NEW: Better mobile scrolling */
        @@media (max-height: 700px) {
            .login-card {
                margin-top: auto;
                margin-bottom: auto;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Background overlay with blue tint -->
        <div class="floating-bg" style="top: -50%; left: -50%;"></div>

        <!-- NEW: Logout Success Toast -->
        @if (TempData["LogoutSuccess"] != null && (bool)TempData["LogoutSuccess"])
        {
            <div class="logout-toast" id="logoutToast">
                <div class="logout-toast-content">
                    <i class="fas fa-check-circle logout-toast-icon"></i>
                    <div class="logout-toast-message">
                        <strong>Success!</strong> You have been logged out successfully.
                    </div>
                </div>
                <button type="button" class="logout-toast-close" onclick="closeLogoutToast()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }

        <div class="login-card">
            <!-- Logo and Title Section -->
            <div class="logo-section">
                <h1>Senior Management</h1>
                <p>System Access Portal</p>
            </div>

            <!-- Display messages -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>@Html.Raw(TempData["SuccessMessage"])
                </div>
            }

            <form asp-action="Login" method="post" id="loginForm" autocomplete="off">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Username Field -->
                <div class="form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="" autocomplete="off" />
                    <span asp-validation-for="Username" class="validation-message"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="password-container">
                        <input asp-for="Password" type="password" class="form-control" id="passwordField" placeholder="" autocomplete="new-password" />
                        <button type="button" class="password-toggle" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <!-- User Role Dropdown -->
                <div class="form-group">
                    <label asp-for="UserRole" class="form-label"></label>
                    <select asp-for="UserRole" class="form-select" id="UserRole">
                        <option value="">-- Select Access Level --</option>
                        <option value="admin">Administrator</option>
                        <option value="staff">Staff Member</option>
                    </select>
                    <span asp-validation-for="UserRole" class="validation-message"></span>
                </div>

                <!-- Remember Me -->
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        Keep me signed in
                    </label>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn btn-login" id="loginButton">
                    <span id="loginText">Login</span>
                    <div id="loginSpinner" class="spinner-border spinner-border-sm text-light ms-2 d-none" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </button>
            </form>

            <!-- Security Notice -->
            <div class="mt-4 text-center">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i>
                    For security reasons, please select the appropriate access level and enter your credentials manually.
                </small>
            </div>
        </div>
    </div>

    <script>
        // Password visibility toggle
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordField = document.getElementById('passwordField');
            const icon = this.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // NEW: Logout Toast Functions
        function showLogoutToast() {
            const toast = document.getElementById('logoutToast');
            if (toast) {
                toast.classList.add('show');
                // Auto-remove after animation completes
                setTimeout(() => {
                    toast.remove();
                }, 3000);
            }
        }

        function closeLogoutToast() {
            const toast = document.getElementById('logoutToast');
            if (toast) {
                toast.style.animation = 'slideOut 0.5s forwards';
                setTimeout(() => {
                    toast.remove();
                }, 500);
            }
        }

        // Show logout toast on page load if it exists
        document.addEventListener('DOMContentLoaded', function() {
            showLogoutToast();

            // Clear form on page load
            document.getElementById('loginForm').reset();
            document.getElementById('Username').focus();
        });

        // Prevent autofill when dropdown changes
        document.getElementById('UserRole').addEventListener('change', function() {
            // Clear username and password fields
            document.getElementById('Username').value = '';
            document.getElementById('passwordField').value = '';

            // Focus on username field for manual entry
            document.getElementById('Username').focus();

            // Show instruction message
            const role = this.value;
            if (role) {
                showRoleInstruction(role);
            }
        });

        // Show instruction based on selected role
        function showRoleInstruction(role) {
            // Remove any existing instruction
            const existingInstruction = document.querySelector('.role-instruction');
            if (existingInstruction) {
                existingInstruction.remove();
            }

            // Create instruction element
            const instruction = document.createElement('div');
            instruction.className = 'alert alert-info mt-3 role-instruction';
            instruction.style.fontSize = '0.85rem';
            instruction.style.padding = '0.75rem';

            if (role === 'admin') {
                instruction.innerHTML = '<i class="fas fa-info-circle me-2"></i><strong>Administrator Access:</strong> Please enter your admin credentials manually.';
            } else if (role === 'staff') {
                instruction.innerHTML = '<i class="fas fa-info-circle me-2"></i><strong>Staff Access:</strong> Please enter your staff credentials manually.';
            }

            // Insert after the dropdown
            const dropdownGroup = document.getElementById('UserRole').closest('.form-group');
            dropdownGroup.appendChild(instruction);
        }

        // Form validation before submission
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const username = document.getElementById('Username').value.trim();
            const password = document.getElementById('passwordField').value.trim();
            const userRole = document.getElementById('UserRole').value;

            if (!userRole) {
                e.preventDefault();
                alert('Please select an access level.');
                return false;
            }

            if (!username || !password) {
                e.preventDefault();
                alert('Please enter both username and password.');
                return false;
            }

            // Additional validation for demo accounts
            if (userRole === 'admin' && username === 'staff') {
                e.preventDefault();
                alert('Staff account cannot access admin area. Please select "Staff Member" access level.');
                return false;
            }

            if (userRole === 'staff' && username === 'admin') {
                e.preventDefault();
                alert('Admin account cannot use staff access. Please select "Administrator" access level.');
                return false;
            }

            return true;
        });

        // Form submission loading state
        document.getElementById('loginForm').addEventListener('submit', function() {
            const loginButton = document.getElementById('loginButton');
            const loginText = document.getElementById('loginText');
            const loginSpinner = document.getElementById('loginSpinner');

            loginText.textContent = 'Authenticating...';
            loginSpinner.classList.remove('d-none');
            loginButton.disabled = true;

            // Re-enable after 3 seconds in case of error
            setTimeout(() => {
                loginText.textContent = 'Login';
                loginSpinner.classList.add('d-none');
                loginButton.disabled = false;
            }, 3000);
        });

        // Add focus effects
        document.querySelectorAll('.form-control, .form-select').forEach(element => {
            element.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });

            element.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
            });
        });

        // Add some interactive background effects
        document.addEventListener('mousemove', function(e) {
            const floatingBg = document.querySelector('.floating-bg');
            const x = (e.clientX / window.innerWidth) * 10;
            const y = (e.clientY / window.innerHeight) * 10;
            floatingBg.style.transform = `translate(${x}px, ${y}px)`;
        });

        // NEW: Make card scrollable when keyboard appears on mobile
        document.addEventListener('focusin', function(e) {
            if (window.innerWidth <= 576 && (e.target.matches('input') || e.target.matches('select'))) {
                setTimeout(() => {
                    const loginCard = document.querySelector('.login-card');
                    loginCard.scrollTop = loginCard.scrollHeight;
                }, 300);
            }
        });
    </script>
</body>
</html>