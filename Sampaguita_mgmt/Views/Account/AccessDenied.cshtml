@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied - Senior Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .access-denied-container {
            text-align: center;
            padding: 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 90%;
        }

        .access-denied-icon {
            font-size: 80px;
            color: #ff4757;
            margin-bottom: 20px;
            animation: shake 0.5s ease-in-out;
        }

        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        h1 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 15px;
        }

        p {
            color: #6c757d;
            font-size: 16px;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
                color: white;
            }

        .alert {
            margin-bottom: 20px;
            border-radius: 10px;
            border: none;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            color: #721c24;
        }

        .alert-success {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: #155724;
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }

        <div class="access-denied-icon">
            <i class="fas fa-ban"></i>
        </div>

        <h1>Access Denied</h1>
        <p>
            You do not have permission to access this resource.
            Please contact your system administrator if you believe this is an error.
        </p>

        <div class="d-grid gap-2 d-md-block">
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Administrator") || User.HasClaim("IsAdmin", "True"))
                {
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn-primary">
                        <i class="fas fa-tachometer-alt"></i> Go to Admin Dashboard
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Home")" class="btn-primary">
                        <i class="fas fa-home"></i> Go to Home
                    </a>
                }
                <a href="@Url.Action("Logout", "Account")" class="btn-primary" style="background: linear-gradient(135deg, #868f96 0%, #596164 100%);">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            }
        </div>
    </div>
</body>
</html>