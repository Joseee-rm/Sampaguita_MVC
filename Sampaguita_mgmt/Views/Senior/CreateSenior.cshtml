@model SeniorManagement.Models.Senior

@{
    ViewData["Title"] = "";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create New Senior Citizen</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateSenior" method="post" id="createSeniorForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Profile Picture Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-camera me-2"></i>Profile Picture (4x4)</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <div class="profile-picture-container text-center">
                                            <div class="profile-picture-placeholder" id="picturePreview">
                                                <i class="fas fa-user fa-4x text-muted"></i>
                                                <div class="mt-2">No picture</div>
                                            </div>
                                            <input type="file" id="profilePicture" name="profilePicture"
                                                   class="form-control mt-3" accept=".jpg,.jpeg,.png"
                                                   onchange="previewProfilePicture(this)" />
                                            <small class="text-muted">4x4 size recommended (JPG, PNG)</small>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Picture Guidelines:</strong>
                                            <ul class="mb-0 mt-2">
                                                <li>Recent passport size photo (4x4)</li>
                                                <li>Clear face visible</li>
                                                <li>File size limit: 2MB</li>
                                                <li>Accepted formats: JPG, PNG</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SCCN Number Section - MANUAL INPUT -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-id-card me-2"></i>OSCA Identification</h5>
                            </div>
                            <div class="section-body">
                                <div class="mb-3">
                                    <label asp-for="SeniorId" class="form-label required">OSCA Number</label>
                                    <div class="input-group">
                                        <input asp-for="SeniorId"
                                               class="form-control"
                                               placeholder="Enter 12-digit OSCA number"
                                               maxlength="12"
                                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 12)"
                                               required />
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                onclick="formatSCCN()"
                                                title="Format as XXX-XXX-XXX-XXX">
                                            <i class="fas fa-magic"></i> Format
                                        </button>
                                    </div>
                                    <div class="form-text">
                                        <small><i class="fas fa-info-circle text-primary"></i> Must be exactly 12 digits (numbers only)</small>
                                    </div>
                                    <span asp-validation-for="SeniorId" class="text-danger small"></span>
                                </div>

                                <!-- SCCN Format Example -->
                                <div class="alert alert-info mt-3">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-lightbulb me-2 mt-1"></i>
                                        <div>
                                            <h6 class="alert-heading mb-1">OSCA Format Example</h6>
                                            <p class="mb-1">Format: <code class="bg-light px-2 py-1 rounded">202-312-340-001</code></p>
                                            <p class="mb-0">Raw: <code class="bg-light px-2 py-1 rounded">202312340001</code> (12 digits)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-user me-2"></i>Personal Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="FirstName" class="form-label required">First Name</label>
                                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="LastName" class="form-label required">Last Name</label>
                                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                                        <span asp-validation-for="LastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label asp-for="MiddleInitial" class="form-label">Middle Name</label>
                                        <input asp-for="MiddleInitial" class="form-control" maxlength="100" placeholder="M" />
                                        <span asp-validation-for="MiddleInitial" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label asp-for="Extension" class="form-label">Extension</label>
                                        <input asp-for="Extension" class="form-control" maxlength="10" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="Extension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label asp-for="Gender" class="form-label required">Sex</label>
                                        <select asp-for="Gender" class="form-select" required>
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="CivilStatus" class="form-label">Civil Status</label>
                                        <select asp-for="CivilStatus" class="form-select">
                                            <option value="">Select Civil Status</option>
                                            <option value="Single">Single</option>
                                            <option value="Married">Married</option>
                                            <option value="Widowed">Widowed</option>
                                            <option value="Separated">Separated</option>
                                            <option value="Divorced">Divorced</option>
                                        </select>
                                        <span asp-validation-for="CivilStatus" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="Citizenship" class="form-label">Citizenship</label>
                                        <select asp-for="Citizenship" class="form-select">
                                            <option value="Filipino">Filipino</option>
                                            <option value="DualCitizen">Dual Citizen</option>
                                        </select>
                                        <span asp-validation-for="Citizenship" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Age & Birth Date Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-birthday-cake me-2"></i>Age & Birth Date</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Age" class="form-label required">Age</label>
                                        <div class="input-group">
                                            <input asp-for="Age" type="number" class="form-control"
                                                   min="60" max="120" placeholder="Enter age (60-120)" required
                                                   onchange="checkSpecialBenefits()" />
                                            <span class="input-group-text">years old</span>
                                        </div>
                                        <span asp-validation-for="Age" class="text-danger small"></span>
                                        <div id="specialBenefitsAlert" class="alert mt-2" style="display: none;">
                                            <i class="fas fa-award me-2"></i>
                                            <span id="benefitsText"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="BirthDate" class="form-label">Birth Date</label>
                                        <input asp-for="BirthDate" type="date" class="form-control birth-date-picker"
                                               max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                               min="1965-01-01" onchange="calculateAgeFromDate()" />
                                        <small class="text-muted">Start year: 1965 (minimum 60 years old)</small>
                                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Permanent Address Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-home me-2"></i>Permanent Address</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="HouseNumber" class="form-label">House Number</label>
                                        <input asp-for="HouseNumber" class="form-control" placeholder="House/Lot/Blk No." />
                                        <span asp-validation-for="HouseNumber" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Street (Zone)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">Zone</span>
                                            <select asp-for="Zone" class="form-select" required onchange="updateAddressPreview()">
                                                <option value="">Select Zone</option>
                                                <option value="1">Zone 1</option>
                                                <option value="2">Zone 2</option>
                                                <option value="3">Zone 3</option>
                                                <option value="4">Zone 4</option>
                                                <option value="5">Zone 5</option>
                                                <option value="6">Zone 6</option>
                                                <option value="7">Zone 7</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Zone" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Barangay</label>
                                        <input type="text" class="form-control" value="Sampaguita" readonly />
                                        <small class="text-muted">Default barangay</small>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="CityMunicipality" class="form-label">City/Municipality</label>
                                        <input asp-for="CityMunicipality" class="form-control" value="Naujan" />
                                        <span asp-validation-for="CityMunicipality" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Province" class="form-label">Province</label>
                                        <input asp-for="Province" class="form-control" value="Oriental Mindoro" />
                                        <span asp-validation-for="Province" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="ZipCode" class="form-label">Zip Code</label>
                                        <input asp-for="ZipCode" class="form-control" value="5204" />
                                        <span asp-validation-for="ZipCode" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Address Preview -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title"><i class="fas fa-eye me-2"></i>Address Preview</h6>
                                                <p class="card-text" id="addressPreview">
                                                    <em>Address will appear here as you fill the fields...</em>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Family Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-users me-2"></i>Family Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-ring me-2"></i>Spouse Information</h6>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseFirstName" class="form-label">First Name</label>
                                        <input asp-for="SpouseFirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="SpouseFirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseLastName" class="form-label">Last Name</label>
                                        <input asp-for="SpouseLastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="SpouseLastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseMiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="SpouseMiddleName" class="form-control" placeholder="Middle Name" />
                                        <span asp-validation-for="SpouseMiddleName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseExtension" class="form-label">Extension</label>
                                        <input asp-for="SpouseExtension" class="form-control" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="SpouseExtension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="SpouseCitizenship" class="form-label">Citizenship</label>
                                        <select asp-for="SpouseCitizenship" class="form-select">
                                            <option value="">Select Citizenship</option>
                                            <option value="Filipino">Filipino</option>
                                            <option value="DualCitizen">Dual Citizen</option>
                                        </select>
                                        <span asp-validation-for="SpouseCitizenship" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-child me-2"></i>Children Information</h6>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="ChildrenInfo" class="form-label">Children's Names</label>
                                        <textarea asp-for="ChildrenInfo" class="form-control" rows="4"
                                                  placeholder="Format: LastName, GivenName, MiddleName, Extension (if applicable)&#10;Example: Cruz, Juan, Santos, Jr.&#10;Example: Cruz, Maria, Santos, (leave empty if no extension)"></textarea>
                                        <div class="form-text">
                                            <small><i class="fas fa-info-circle text-primary"></i> Enter each child on a new line. Use commas to separate fields.</small>
                                        </div>
                                        <span asp-validation-for="ChildrenInfo" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-user-tie me-2"></i>Authorized Representative</h6>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="AuthorizedRepInfo" class="form-label">Authorized Representative(s)</label>
                                        <textarea asp-for="AuthorizedRepInfo" class="form-control" rows="3"
                                                  placeholder="Format: LastName, GivenName, MiddleName, Extension, Relationship&#10;Example: Cruz, Maria, Santos, , Daughter&#10;Example: Reyes, Juan, , Jr., Son"></textarea>
                                        <div class="form-text">
                                            <small><i class="fas fa-info-circle text-primary"></i> Enter each representative on a new line. Use commas to separate fields.</small>
                                        </div>
                                        <span asp-validation-for="AuthorizedRepInfo" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Designated Beneficiary Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-user-check me-2"></i>Designated Beneficiary</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-star me-2"></i>Primary Beneficiary</h6>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryFirstName" class="form-label">First Name</label>
                                        <input asp-for="PrimaryBeneficiaryFirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="PrimaryBeneficiaryFirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryLastName" class="form-label">Last Name</label>
                                        <input asp-for="PrimaryBeneficiaryLastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="PrimaryBeneficiaryLastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryMiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="PrimaryBeneficiaryMiddleName" class="form-control" placeholder="Middle Name" />
                                        <span asp-validation-for="PrimaryBeneficiaryMiddleName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryExtension" class="form-label">Extension</label>
                                        <input asp-for="PrimaryBeneficiaryExtension" class="form-control" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="PrimaryBeneficiaryExtension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PrimaryBeneficiaryRelationship" class="form-label">Relationship</label>
                                        <input asp-for="PrimaryBeneficiaryRelationship" class="form-control" placeholder="e.g., Spouse, Child, Sibling" />
                                        <span asp-validation-for="PrimaryBeneficiaryRelationship" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row mt-4">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-star-half-alt me-2"></i>Contingent Beneficiary</h6>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="ContingentBeneficiaryFirstName" class="form-label">First Name</label>
                                        <input asp-for="ContingentBeneficiaryFirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="ContingentBeneficiaryFirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="ContingentBeneficiaryLastName" class="form-label">Last Name</label>
                                        <input asp-for="ContingentBeneficiaryLastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="ContingentBeneficiaryLastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="ContingentBeneficiaryMiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="ContingentBeneficiaryMiddleName" class="form-control" placeholder="Middle Name" />
                                        <span asp-validation-for="ContingentBeneficiaryMiddleName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="ContingentBeneficiaryExtension" class="form-label">Extension</label>
                                        <input asp-for="ContingentBeneficiaryExtension" class="form-control" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="ContingentBeneficiaryExtension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ContingentBeneficiaryRelationship" class="form-label">Relationship</label>
                                        <input asp-for="ContingentBeneficiaryRelationship" class="form-control" placeholder="e.g., Child, Sibling, Relative" />
                                        <span asp-validation-for="ContingentBeneficiaryRelationship" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-address-book me-2"></i>Contact Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            <input asp-for="ContactNumber" class="form-control" placeholder="09XXXXXXXXX" />
                                        </div>
                                        <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label">Email Address</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="senior@example.com" />
                                        </div>
                                        <span asp-validation-for("Email", class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pension Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-money-check-alt me-2"></i>Pension Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="PensionType" class="form-label">Pension Type</label>
                                        <input asp-for="PensionType" class="form-control"
                                               placeholder="e.g., SSS, GSIS, Private Pension, None (leave empty if none)"
                                               maxlength="50" />
                                        <div class="form-text">
                                            <small><i class="fas fa-info-circle text-primary"></i> Enter the type of pension (SSS, GSIS, Private, etc.). Leave empty if none.</small>
                                        </div>
                                        <span asp-validation-for="PensionType" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="alert alert-light mt-2">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-lightbulb me-2 mt-1 text-warning"></i>
                                        <div>
                                            <h6 class="alert-heading mb-1">Common Pension Types</h6>
                                            <p class="mb-1">
                                                Examples: <code class="bg-light px-2 py-1 rounded">SSS</code>,
                                                <code class="bg-light px-2 py-1 rounded">GSIS</code>,
                                                <code class="bg-light px-2 py-1 rounded">Private Pension</code>,
                                                <code class="bg-light px-2 py-1 rounded">Veteran Pension</code>,
                                                <code class="bg-light px-2 py-1 rounded">None</code>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Senior")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Create Senior Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .section-card {
            border: 1px solid #e3f2fd;
            border-radius: 0.5rem;
            overflow: hidden;
            background: white;
        }

        .section-header {
            background: linear-gradient(135deg, #f8fbff 0%, #e3f2fd 100%);
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e3f2fd;
        }

            .section-header h5 {
                margin: 0;
                color: #1976d2;
                font-weight: 600;
            }

                .section-header h5 i {
                    color: #2196f3;
                }

        .section-body {
            padding: 1.5rem;
        }

        .form-label.required::after {
            content: " *";
            color: #f44336;
        }

        .form-control:focus, .form-select:focus {
            border-color: #2196f3;
            box-shadow: 0 0 0 0.2rem rgba(33, 150, 243, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            border: none;
            padding: 0.75rem 2rem;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
            }

