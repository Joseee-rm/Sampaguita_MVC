@section Scripts {
    <script>
        // Format SCCN with dashes
        function formatSCCN() {
            const sccnInput = document.querySelector('input[name="SeniorId"]');
            let value = sccnInput.value.replace(/[^0-9]/g, '');

            if (value.length === 12) {
                // Format as XXX-XXX-XXX-XXX
                value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{3})/, '$1-$2-$3-$4');
                sccnInput.value = value;
            } else {
                alert('Please enter exactly 12 digits before formatting.');
                sccnInput.focus();
            }
        }

        // Preview profile picture
        function previewProfilePicture(input) {
            const preview = document.getElementById('picturePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                const file = input.files[0];

                // Check file size (2MB limit)
                if (file.size > 2 * 1024 * 1024) {
                    alert('File size must be less than 2MB');
                    input.value = '';
                    return;
                }

                // Check file type
                const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                if (!validTypes.includes(file.type)) {
                    alert('Please select a JPG or PNG image file');
                    input.value = '';
                    return;
                }

                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" class="profile-picture-preview" alt="Profile Picture">`;
                }
                reader.readAsDataURL(file);
            } else {
                preview.innerHTML = '<i class="fas fa-user fa-4x text-muted"></i><div class="mt-2">No picture</div>';
            }
        }

        // Calculate age from birth date
        function calculateAgeFromDate() {
            const birthDateInput = document.querySelector('input[name="BirthDate"]');
            const ageInput = document.querySelector('input[name="Age"]');

            if (birthDateInput.value) {
                const birthDate = new Date(birthDateInput.value);
                const today = new Date();
                let age = today.getFullYear() - birthDate.getFullYear();
                const monthDiff = today.getMonth() - birthDate.getMonth();

                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                    age--;
                }

                if (age >= 60 && age <= 120) {
                    ageInput.value = age;
                    checkSpecialBenefits();
                } else {
                    alert('Age must be between 60 and 120 years old.');
                    birthDateInput.value = '';
                    ageInput.value = '';
                }
            }
        }

        // Check special benefits eligibility
        function checkSpecialBenefits() {
            const ageInput = document.querySelector('input[name="Age"]');
            const alertDiv = document.getElementById('specialBenefitsAlert');
            const benefitsText = document.getElementById('benefitsText');

            if (ageInput.value) {
                const age = parseInt(ageInput.value);

                if (age >= 100) {
                    alertDiv.className = 'alert alert-success mt-2';
                    benefitsText.innerHTML = '<strong>Centenarian Benefit Program Eligible!</strong> This senior is eligible for the Centenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else if (age >= 90) {
                    alertDiv.className = 'alert alert-warning mt-2';
                    benefitsText.innerHTML = '<strong>Nonagenarian Benefit Program Eligible!</strong> This senior is eligible for the Nonagenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else if (age >= 80) {
                    alertDiv.className = 'alert alert-info mt-2';
                    benefitsText.innerHTML = '<strong>Octogenarian Benefit Program Eligible!</strong> This senior is eligible for the Octogenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else {
                    alertDiv.style.display = 'none';
                }
            } else {
                alertDiv.style.display = 'none';
            }
        }

        // Update address preview
        function updateAddressPreview() {
            const houseNumber = document.querySelector('input[name="HouseNumber"]').value;
            const zone = document.querySelector('select[name="Zone"]').value;
            const city = document.querySelector('input[name="CityMunicipality"]').value;
            const province = document.querySelector('input[name="Province"]').value;
            const zipCode = document.querySelector('input[name="ZipCode"]').value;

            const addressParts = [];

            if (houseNumber) addressParts.push(houseNumber);
            if (zone) addressParts.push(`Zone ${zone}`);
            addressParts.push('Sampaguita');
            if (city) addressParts.push(city);
            if (province) addressParts.push(province);
            if (zipCode) addressParts.push(zipCode);

            const addressPreview = document.getElementById('addressPreview');
            if (addressParts.length > 2) {
                addressPreview.innerHTML = addressParts.join(', ');
            } else {
                addressPreview.innerHTML = '<em>Address will appear here as you fill the fields...</em>';
            }
        }

        // Custom birth date picker with descending years
        function setupBirthDatePicker() {
            const birthDateInput = document.querySelector('.birth-date-picker');
            const today = new Date();
            const currentYear = today.getFullYear();
            const startYear = 1965;
            const endYear = currentYear;

            // Create custom dropdown for years
            const dropdown = document.createElement('div');
            dropdown.className = 'birth-date-dropdown';

            const yearSelector = document.createElement('div');
            yearSelector.className = 'year-selector';

            // Add years in descending order
            for (let year = endYear; year >= startYear; year--) {
                const yearOption = document.createElement('div');
                yearOption.className = 'year-option';
                yearOption.textContent = year;
                yearOption.addEventListener('click', function() {
                    const selectedDate = new Date(year, 0, 1);
                    birthDateInput.value = selectedDate.toISOString().split('T')[0];
                    dropdown.style.display = 'none';
                    calculateAgeFromDate();
                });
                yearSelector.appendChild(yearOption);
            }

            dropdown.appendChild(yearSelector);
            birthDateInput.parentNode.appendChild(dropdown);

            // Show dropdown on click
            birthDateInput.addEventListener('click', function(e) {
                e.preventDefault();
                dropdown.style.display = 'block';

                // Position dropdown
                const rect = birthDateInput.getBoundingClientRect();
                dropdown.style.position = 'fixed';
                dropdown.style.left = rect.left + 'px';
                dropdown.style.top = (rect.bottom + 5) + 'px';
                dropdown.style.width = rect.width + 'px';
            });

            // Hide dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!birthDateInput.contains(e.target) && !dropdown.contains(e.target)) {
                    dropdown.style.display = 'none';
                }
            });

            // Set max date to today for birth date
            birthDateInput.max = today.toISOString().split('T')[0];
            birthDateInput.min = startYear + '-01-01';
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            const sccnInput = document.querySelector('input[name="SeniorId"]');
            const birthDateInput = document.querySelector('input[name="BirthDate"]');
            const ageInput = document.querySelector('input[name="Age"]');

            // Format SCCN on blur
            sccnInput.addEventListener('blur', function() {
                let value = this.value.replace(/[^0-9]/g, '');
                if (value.length === 12) {
                    this.value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{3})/, '$1-$2-$3-$4');
                }
            });

            // Remove dashes on focus for easy editing
            sccnInput.addEventListener('focus', function() {
                this.value = this.value.replace(/-/g, '');
            });

            // Real-time digit counter
            const digitCounter = document.createElement('div');
            digitCounter.className = 'form-text text-end mt-1';
            digitCounter.innerHTML = '<small>Digits: <span id="digitCount">0</span>/12</small>';
            sccnInput.parentNode.parentNode.appendChild(digitCounter);

            sccnInput.addEventListener('input', function() {
                const digitCount = this.value.replace(/[^0-9]/g, '').length;
                document.getElementById('digitCount').textContent = digitCount;

                // Color code based on length
                const counterSpan = document.getElementById('digitCount');
                if (digitCount === 12) {
                    counterSpan.className = 'text-success fw-bold';
                } else if (digitCount > 12) {
                    counterSpan.className = 'text-danger fw-bold';
                } else {
                    counterSpan.className = '';
                }
            });

            // Setup custom birth date picker
            setupBirthDatePicker();

            // Calculate age when birth date changes
            birthDateInput.addEventListener('change', calculateAgeFromDate);

            // Check benefits when age changes
            ageInput.addEventListener('change', checkSpecialBenefits);

            // Update address preview when address fields change
            const addressFields = ['HouseNumber', 'Zone', 'CityMunicipality', 'Province', 'ZipCode'];
            addressFields.forEach(field => {
                const element = document.querySelector(`[name="${field}"]`);
                if (element) {
                    element.addEventListener('input', updateAddressPreview);
                    element.addEventListener('change', updateAddressPreview);
                }
            });

            // Initial checks
            if (ageInput.value) checkSpecialBenefits();
            updateAddressPreview();

            // Form validation
            const form = document.getElementById('createSeniorForm');
            form.addEventListener('submit', function(e) {
                // Validate SCCN
                const sccnValue = sccnInput.value.replace(/[^0-9]/g, '');
                if (sccnValue.length !== 12) {
                    e.preventDefault();
                    alert('SCCN number must be exactly 12 digits.');
                    sccnInput.focus();
                    return false;
                }

                // Validate age
                const age = parseInt(ageInput.value);
                if (age < 60 || age > 120) {
                    e.preventDefault();
                    alert('Age must be between 60 and 120 years.');
                    ageInput.focus();
                    return false;
                }

                // Submit raw SCCN digits
                sccnInput.value = sccnValue;

                return true;
            });
        });
    </script>
}