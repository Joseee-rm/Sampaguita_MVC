@model SeniorManagement.Models.Senior

@{
    ViewData["Title"] = "";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create New Senior Citizen</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateSenior" method="post" id="createSeniorForm">
                        @Html.AntiForgeryToken()

                        <!-- SCCN Number Section - MANUAL INPUT -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-id-card me-2"></i>OSCA Identification</h5>
                            </div>
                            <div class="section-body">
                                <div class="mb-3">
                                    <label asp-for="SeniorId" class="form-label required">OSCA Number</label>
                                    <div class="input-group">
                                        <input asp-for="SeniorId"
                                               class="form-control"
                                               placeholder="Enter 12-digit OSCA number"
                                               maxlength="12"
                                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 12)"
                                               required />
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                onclick="formatSCCN()"
                                                title="Format as XXX-XXX-XXX-XXX">
                                            <i class="fas fa-magic"></i> Format
                                        </button>
                                    </div>
                                    <div class="form-text">
                                        <small><i class="fas fa-info-circle text-primary"></i> Must be exactly 12 digits (numbers only)</small>
                                    </div>
                                    <span asp-validation-for="SeniorId" class="text-danger small"></span>
                                </div>

                                <!-- SCCN Format Example -->
                                <div class="alert alert-info mt-3">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-lightbulb me-2 mt-1"></i>
                                        <div>
                                            <h6 class="alert-heading mb-1">SCCN Format Example</h6>
                                            <p class="mb-1">Format: <code class="bg-light px-2 py-1 rounded">202-312-340-001</code></p>
                                            <p class="mb-0">Raw: <code class="bg-light px-2 py-1 rounded">202312340001</code> (12 digits)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-user me-2"></i>Personal Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="FirstName" class="form-label required">First Name</label>
                                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="LastName" class="form-label required">Last Name</label>
                                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                        <span asp-validation-for="LastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="MiddleInitial" class="form-label">Middle Initial</label>
                                        <input asp-for="MiddleInitial" class="form-control" maxlength="1" placeholder="M" />
                                        <span asp-validation-for="MiddleInitial" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Gender" class="form-label required">Gender</label>
                                        <select asp-for="Gender" class="form-select">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="CivilStatus" class="form-label">Civil Status</label>
                                        <select asp-for="CivilStatus" class="form-select">
                                            <option value="">Select Civil Status</option>
                                            <option value="Single">Single</option>
                                            <option value="Married">Married</option>
                                            <option value="Widowed">Widowed</option>
                                            <option value="Separated">Separated</option>
                                        </select>
                                        <span asp-validation-for="CivilStatus" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Age & Birth Date Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-birthday-cake me-2"></i>Age & Birth Date</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Age" class="form-label required">Age</label>
                                        <div class="input-group">
                                            <input asp-for="Age" type="number" class="form-control"
                                                   min="60" max="120" placeholder="Enter age (60-120)" />
                                            <span class="input-group-text">years old</span>
                                        </div>
                                        <span asp-validation-for="Age" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="BirthDate" class="form-label">Birth Date</label>
                                        <input asp-for="BirthDate" type="date" class="form-control" />
                                        <small class="text-muted">Optional - will auto-calculate age</small>
                                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contact & Location Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-map-marker-alt me-2"></i>Contact & Location</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Zone" class="form-label required">Zone</label>
                                        <select asp-for="Zone" class="form-select">
                                            <option value="">Select Zone</option>
                                            <option value="1">Zone 1</option>
                                            <option value="2">Zone 2</option>
                                            <option value="3">Zone 3</option>
                                            <option value="4">Zone 4</option>
                                            <option value="5">Zone 5</option>
                                            <option value="6">Zone 6</option>
                                            <option value="7">Zone 7</option>
                                        </select>
                                        <span asp-validation-for="Zone" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Barangay</label>
                                        <input type="text" class="form-control" value="Sampaguita" disabled readonly />
                                        <small class="text-muted">Fixed barangay for all seniors</small>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                                        <input asp-for="ContactNumber" class="form-control" placeholder="09XXXXXXXXX" />
                                        <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Senior")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Create Senior Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .section-card {
            border: 1px solid #e3f2fd;
            border-radius: 0.5rem;
            overflow: hidden;
            background: white;
        }

        .section-header {
            background: linear-gradient(135deg, #f8fbff 0%, #e3f2fd 100%);
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e3f2fd;
        }

            .section-header h5 {
                margin: 0;
                color: #1976d2;
                font-weight: 600;
            }

                .section-header h5 i {
                    color: #2196f3;
                }

        .section-body {
            padding: 1.5rem;
        }

        .form-label.required::after {
            content: " *";
            color: #f44336;
        }

        .form-control:focus, .form-select:focus {
            border-color: #2196f3;
            box-shadow: 0 0 0 0.2rem rgba(33, 150, 243, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            border: none;
            padding: 0.75rem 2rem;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
            }

        .btn-outline-secondary {
            border: 2px solid #78909c;
            color: #78909c;
            padding: 0.75rem 2rem;
            font-weight: 600;
        }

            .btn-outline-secondary:hover {
                background: #78909c;
                color: white;
                border-color: #78909c;
            }

        /* SCCN Input Styling */
        .input-group .btn-outline-secondary {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            border-left: 1px solid #dee2e6;
        }

        /* Alert Styling */
        .alert-info {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            border: 1px solid #90caf9;
            color: #1565c0;
        }

        .alert-heading {
            color: #0d47a1;
            font-size: 0.9rem;
        }

        code {
            font-family: 'Courier New', monospace;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script>
        // Format SCCN with dashes
        function formatSCCN() {
            const sccnInput = document.querySelector('input[name="SeniorId"]');
            let value = sccnInput.value.replace(/[^0-9]/g, '');

            if (value.length === 12) {
                // Format as XXX-XXX-XXX-XXX
                value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{3})/, '$1-$2-$3-$4');
                sccnInput.value = value;
            } else {
                alert('Please enter exactly 12 digits before formatting.');
                sccnInput.focus();
            }
        }

        // Auto-format on blur
        document.addEventListener('DOMContentLoaded', function() {
            const sccnInput = document.querySelector('input[name="SeniorId"]');

            // Format when user leaves the field
            sccnInput.addEventListener('blur', function() {
                let value = this.value.replace(/[^0-9]/g, '');

                if (value.length === 12) {
                    this.value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{3})/, '$1-$2-$3-$4');
                }
            });

            // Remove dashes on focus for easy editing
            sccnInput.addEventListener('focus', function() {
                this.value = this.value.replace(/-/g, '');
            });

            // Real-time digit counter
            const digitCounter = document.createElement('div');
            digitCounter.className = 'form-text text-end mt-1';
            digitCounter.innerHTML = '<small>Digits: <span id="digitCount">0</span>/12</small>';
            sccnInput.parentNode.parentNode.appendChild(digitCounter);

            sccnInput.addEventListener('input', function() {
                const digitCount = this.value.replace(/[^0-9]/g, '').length;
                document.getElementById('digitCount').textContent = digitCount;

                // Color code based on length
                const counterSpan = document.getElementById('digitCount');
                if (digitCount === 12) {
                    counterSpan.className = 'text-success fw-bold';
                } else if (digitCount > 12) {
                    counterSpan.className = 'text-danger fw-bold';
                } else {
                    counterSpan.className = '';
                }
            });

            // Birth date change triggers age calculation
            const birthDateInput = document.querySelector('input[name="BirthDate"]');
            const ageInput = document.querySelector('input[name="Age"]');

            birthDateInput.addEventListener('change', function() {
                if (this.value) {
                    const birthDate = new Date(this.value);
                    const today = new Date();
                    let age = today.getFullYear() - birthDate.getFullYear();
                    const monthDiff = today.getMonth() - birthDate.getMonth();

                    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                        age--;
                    }

                    if (age >= 60 && age <= 120) {
                        ageInput.value = age;
                    }
                }
            });

            // Age change triggers estimated birth date
            ageInput.addEventListener('change', function() {
                if (this.value && !birthDateInput.value) {
                    const age = parseInt(this.value);
                    if (age >= 60 && age <= 120) {
                        const today = new Date();
                        const estimatedBirthYear = today.getFullYear() - age;
                        birthDateInput.value = `${estimatedBirthYear}-01-01`;
                    }
                }
            });

            // SCCN input validation on submit
            const form = document.getElementById('createSeniorForm');
            form.addEventListener('submit', function(e) {
                const sccnValue = sccnInput.value.replace(/[^0-9]/g, '');

                if (sccnValue.length !== 12) {
                    e.preventDefault();
                    alert('SCCN number must be exactly 12 digits.');
                    sccnInput.focus();
                    return false;
                }

                // Ensure we submit the raw digits (no dashes)
                sccnInput.value = sccnValue;
            });
        });
    </script>
}