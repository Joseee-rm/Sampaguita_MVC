            }
        }

        // Toggle "Other" pension type field
        function toggleOtherPension() {
            const pensionTypeSelect = document.getElementById('pensionTypeSelect');
            const otherPensionContainer = document.getElementById('otherPensionContainer');
            const otherPensionInput = document.querySelector('input[name="PensionOther"]');

