@model SeniorManagement.Models.Senior

@{
    ViewData["Title"] = "Create New Senior";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create New Senior Citizen</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateSenior" method="post" id="createSeniorForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Profile Picture Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-camera me-2"></i>Profile Picture (4x4)</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <div class="profile-picture-container text-center">
                                            <div class="profile-picture-placeholder" id="picturePreview">
                                                <i class="fas fa-user fa-4x text-muted"></i>
                                                <div class="mt-2">No picture</div>
                                            </div>
                                            <input type="file" id="profilePicture" name="profilePicture"
                                                   class="form-control mt-3" accept=".jpg,.jpeg,.png"
                                                   onchange="previewProfilePicture(this)" />
                                            <small class="text-muted">2x2 size recommended (JPG, PNG)</small>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Picture Guidelines:</strong>
                                            <ul class="mb-0 mt-2">
                                                <li>Recent passport size photo (4x4)</li>
                                                <li>Clear face visible</li>
                                                <li>File size limit: 2MB</li>
                                                <li>Accepted formats: JPG, PNG</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- OSCA Identification Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-id-card me-2"></i>OSCA Identification</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-8 mb-3">
                                        <label asp-for="SeniorId" class="form-label required">OSCA Number *</label>
                                        <div class="input-group">
                                            <input asp-for="SeniorId"
                                                   class="form-control"
                                                   placeholder="Enter 12-digit OSCA number"
                                                   maxlength="12"
                                                   oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 12)"
                                                   required />
                                            <button type="button"
                                                    class="btn btn-outline-secondary"
                                                    onclick="formatSCCN()"
                                                    title="Format as XXX-XXX-XXX-XXX">
                                                <i class="fas fa-magic"></i> Format
                                            </button>
                                        </div>
                                        <div class="form-text">
                                            <small><i class="fas fa-info-circle text-primary"></i> Must be exactly 12 digits (numbers only)</small>
                                        </div>
                                        <span asp-validation-for="SeniorId" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="NCSRegistrationNumber" class="form-label">NCSC Registration Number</label>
                                        <input asp-for="NCSRegistrationNumber" class="form-control"
                                               placeholder="Optional NCSC reference"
                                               maxlength="50" />
                                        <small class="text-muted">NCSC Registration Reference Number (Optional)</small>
                                        <span asp-validation-for="NCSRegistrationNumber" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- OSCA Format Example -->
                                <div class="alert alert-info mt-3">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-lightbulb me-2 mt-1"></i>
                                        <div>
                                            <h6 class="alert-heading mb-1">OSCA Format Example</h6>
                                            <p class="mb-1">Format: <code class="bg-light px-2 py-1 rounded">202-312-340-001</code></p>
                                            <p class="mb-0">Raw: <code class="bg-light px-2 py-1 rounded">202312340001</code> (12 digits)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-user me-2"></i>Personal Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="FirstName" class="form-label required">First Name</label>
                                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="LastName" class="form-label required">Last Name</label>
                                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                                        <span asp-validation-for="LastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label asp-for="MiddleInitial" class="form-label">Middle Name</label>
                                        <input asp-for="MiddleInitial" class="form-control" maxlength="100" placeholder="M" />
                                        <span asp-validation-for="MiddleInitial" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label asp-for="Extension" class="form-label">Extension</label>
                                        <input asp-for="Extension" class="form-control" maxlength="10" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="Extension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label asp-for="Gender" class="form-label required">Sex</label>
                                        <select asp-for="Gender" class="form-select" required>
                                            <option value="">Select Sex</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="CivilStatus" class="form-label">Civil Status</label>
                                        <select asp-for="CivilStatus" class="form-select">
                                            <option value="">Select Civil Status</option>
                                            <option value="Single">Single</option>
                                            <option value="Married">Married</option>
                                            <option value="Widowed">Widowed</option>
                                            <option value="Separated">Separated</option>
                                            <option value="Divorced">Divorced</option>
                                        </select>
                                        <span asp-validation-for="CivilStatus" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Age & Birth Date Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-birthday-cake me-2"></i>Age & Birth Date</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Age" class="form-label required">Age</label>
                                        <div class="input-group">
                                            <input asp-for="Age" type="number" class="form-control"
                                                   min="60" max="120" placeholder="Enter age (60-120)" required
                                                   onchange="checkSpecialBenefits()" />
                                            <span class="input-group-text">years old</span>
                                        </div>
                                        <span asp-validation-for="Age" class="text-danger small"></span>
                                        <div id="specialBenefitsAlert" class="alert mt-2" style="display: none;">
                                            <i class="fas fa-award me-2"></i>
                                            <span id="benefitsText"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="BirthDate" class="form-label required">Birth Date</label>
                                        <div class="input-group">
                                            <input asp-for="BirthDate" type="date" class="form-control"
                                                   max="@DateTime.Now.AddYears(-60).ToString("yyyy-MM-dd")"
                                                   min="@DateTime.Now.AddYears(-120).ToString("yyyy-MM-dd")"
                                                   onchange="calculateAgeFromDate()" />
                                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        </div>
                                        <div class="form-text">
                                            <small><i class="fas fa-info-circle text-primary"></i> Senior must be at least 60 years old.</small>
                                        </div>
                                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Citizenship Information -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-passport me-2"></i>Citizenship Information</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Citizenship" class="form-label">Citizenship</label>
                                        <select asp-for="Citizenship" class="form-select" id="citizenshipSelect">
                                            <option value="Filipino">Filipino</option>
                                            <option value="DualCitizen">Dual Citizen</option>
                                        </select>
                                        <span asp-validation-for="Citizenship" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DualCitizenshipCountry" class="form-label" id="dualCitizenshipLabel" style="display: none;">Dual Citizenship Country</label>
                                        <input asp-for="DualCitizenshipCountry" class="form-control"
                                               id="dualCitizenshipInput" style="display: none;"
                                               placeholder="Enter country of dual citizenship" />
                                        <span asp-validation-for="DualCitizenshipCountry" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Permanent Address Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-home me-2"></i>Permanent Address</h5>
                            </div>
                            <div class="section-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="HouseNumber" class="form-label">House Number</label>
                                        <input asp-for="HouseNumber" class="form-control" placeholder="House/Lot/Blk No." />
                                        <span asp-validation-for="HouseNumber" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Zone" class="form-label required">Zone</label>
                                        <div class="input-group">
                                            <span class="input-group-text">Zone</span>
                                            <select asp-for="Zone" class="form-select" required onchange="updateAddressPreview()" id="zoneSelect">
                                                <option value="">Select Zone</option>
                                                @for (int i = 1; i <= 8; i++)
                                                {
                                                    <option value="@i">Zone @i</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="Zone" class="text-danger small"></span>
                                        <small class="text-muted" id="zoneStatus">Auto-updates when new zones are added</small>
                                    </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="CityMunicipality" class="form-label">City/Municipality</label>
                                        <input asp-for="CityMunicipality" class="form-control" value="Naujan" readonly />
                                        <small class="text-muted">Default: Naujan</small>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Province" class="form-label">Province</label>
                                        <input asp-for="Province" class="form-control" value="Oriental Mindoro" readonly />
                                        <small class="text-muted">Default: Oriental Mindoro</small>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="ZipCode" class="form-label">Zip Code</label>
                                        <input asp-for="ZipCode" class="form-control" value="5204" readonly />
                                        <small class="text-muted">Default: 5204</small>
                                    </div>
                                </div>

                                <!-- Address Preview -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title"><i class="fas fa-eye me-2"></i>Address Preview</h6>
                                                <p class="card-text" id="addressPreview">
                                                    <em>Address will appear here as you fill the fields...</em>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Family Information Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-users me-2"></i>Family Information</h5>
                            </div>
                            <div class="section-body">
                                <!-- Spouse Information -->
                                <div class="row mb-4">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-ring me-2"></i>Spouse Information</h6>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseFirstName" class="form-label">First Name</label>
                                        <input asp-for="SpouseFirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="SpouseFirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseLastName" class="form-label">Last Name</label>
                                        <input asp-for="SpouseLastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="SpouseLastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseMiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="SpouseMiddleName" class="form-control" placeholder="Middle Name" />
                                        <span asp-validation-for="SpouseMiddleName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="SpouseExtension" class="form-label">Extension</label>
                                        <input asp-for="SpouseExtension" class="form-control" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="SpouseExtension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="SpouseCitizenship" class="form-label">Citizenship</label>
                                        <select asp-for="SpouseCitizenship" class="form-select" id="spouseCitizenshipSelect">
                                            <option value="">Select Citizenship</option>
                                            <option value="Filipino">Filipino</option>
                                            <option value="DualCitizen">Dual Citizen</option>
                                        </select>
                                        <span asp-validation-for="SpouseCitizenship" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="SpouseDualCitizenshipCountry" class="form-label" id="spouseDualCitizenshipLabel" style="display: none;">Dual Citizenship Country</label>
                                        <input asp-for="SpouseDualCitizenshipCountry" class="form-control"
                                               id="spouseDualCitizenshipInput" style="display: none;"
                                               placeholder="Enter spouse's dual citizenship country" />
                                        <span asp-validation-for="SpouseDualCitizenshipCountry" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Children Information - UPDATED WITH MULTIPLE CHILDREN -->
                                <div class="row mb-4">
                                    <div class="col-md-12 mb-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="border-bottom pb-2 mb-0"><i class="fas fa-child me-2"></i>Children Information</h6>
                                            <button type="button" class="btn btn-sm btn-success" id="addChildBtn">
                                                <i class="fas fa-plus me-1"></i> Add Child
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Children Container -->
                                    <div class="col-md-12" id="childrenContainer">
                                        <!-- Child Template (Hidden) -->
                                        <div class="child-template d-none" id="childTemplate">
                                            <div class="child-entry card mb-3">
                                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                                    <span>Child <span class="child-index">1</span></span>
                                                    <button type="button" class="btn btn-sm btn-danger remove-child-btn">
                                                        <i class="fas fa-times"></i> Remove
                                                    </button>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-md-3 mb-3">
                                                            <label class="form-label">First Name</label>
                                                            <input type="text" class="form-control child-first-name"
                                                                   placeholder="First Name" />
                                                        </div>
                                                        <div class="col-md-3 mb-3">
                                                            <label class="form-label">Last Name</label>
                                                            <input type="text" class="form-control child-last-name"
                                                                   placeholder="Last Name" />
                                                        </div>
                                                        <div class="col-md-3 mb-3">
                                                            <label class="form-label">Middle Name</label>
                                                            <input type="text" class="form-control child-middle-name"
                                                                   placeholder="Middle Name" />
                                                        </div>
                                                        <div class="col-md-3 mb-3">
                                                            <label class="form-label">Extension</label>
                                                            <input type="text" class="form-control child-extension"
                                                                   placeholder="Jr, Sr, III" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- First Child (Default) -->
                                        <div class="child-entry card mb-3">
                                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                                <span>Child 1</span>
                                                <button type="button" class="btn btn-sm btn-danger remove-child-btn" disabled>
                                                    <i class="fas fa-times"></i> Remove
                                                </button>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-3 mb-3">
                                                        <label asp-for="ChildFirstName" class="form-label">First Name</label>
                                                        <input asp-for="ChildFirstName" class="form-control child-first-name"
                                                               placeholder="First Name" />
                                                        <span asp-validation-for="ChildFirstName" class="text-danger small"></span>
                                                    </div>
                                                    <div class="col-md-3 mb-3">
                                                        <label asp-for="ChildLastName" class="form-label">Last Name</label>
                                                        <input asp-for="ChildLastName" class="form-control child-last-name"
                                                               placeholder="Last Name" />
                                                        <span asp-validation-for="ChildLastName" class="text-danger small"></span>
                                                    </div>
                                                    <div class="col-md-3 mb-3">
                                                        <label asp-for="ChildMiddleName" class="form-label">Middle Name</label>
                                                        <input asp-for="ChildMiddleName" class="form-control child-middle-name"
                                                               placeholder="Middle Name" />
                                                        <span asp-validation-for="ChildMiddleName" class="text-danger small"></span>
                                                    </div>
                                                    <div class="col-md-3 mb-3">
                                                        <label asp-for="ChildExtension" class="form-label">Extension</label>
                                                        <input asp-for="ChildExtension" class="form-control child-extension"
                                                               placeholder="Jr, Sr, III" />
                                                        <span asp-validation-for="ChildExtension" class="text-danger small"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Additional Children Info -->
                                    <div class="col-md-12 mb-3 mt-3">
                                        <label asp-for="ChildrenInfo" class="form-label">Additional Children Info</label>
                                        <textarea asp-for="ChildrenInfo" class="form-control" rows="3"
                                                  placeholder="Enter any additional information about children not listed above"></textarea>
                                        <div class="form-text">
                                            <small><i class="fas fa-info-circle text-primary"></i> Use this field for any additional children information or notes.</small>
                                        </div>
                                        <span asp-validation-for="ChildrenInfo" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Authorized Representative - SEPARATED FIELDS -->
                                <div class="row mb-4">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-user-tie me-2"></i>Authorized Representative</h6>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="AuthorizedRepFirstName" class="form-label">First Name</label>
                                        <input asp-for="AuthorizedRepFirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="AuthorizedRepFirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="AuthorizedRepLastName" class="form-label">Last Name</label>
                                        <input asp-for="AuthorizedRepLastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="AuthorizedRepLastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="AuthorizedRepMiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="AuthorizedRepMiddleName" class="form-control" placeholder="Middle Name" />
                                        <span asp-validation-for="AuthorizedRepMiddleName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="AuthorizedRepExtension" class="form-label">Extension</label>
                                        <input asp-for="AuthorizedRepExtension" class="form-control" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="AuthorizedRepExtension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="AuthorizedRepRelationship" class="form-label">Relationship</label>
                                        <input asp-for="AuthorizedRepRelationship" class="form-control" placeholder="e.g., Son, Daughter, Relative" />
                                        <span asp-validation-for="AuthorizedRepRelationship" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="AuthorizedRepInfo" class="form-label">Additional Representative Info</label>
                                        <textarea asp-for="AuthorizedRepInfo" class="form-control" rows="2"
                                                  placeholder="Additional information about the representative"></textarea>
                                        <span asp-validation-for="AuthorizedRepInfo" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Designated Beneficiary Section -->
                        <div class="section-card mb-4">
                            <div class="section-header">
                                <h5><i class="fas fa-user-check me-2"></i>Designated Beneficiary</h5>
                            </div>
                            <div class="section-body">
                                <!-- Primary Beneficiary -->
                                <div class="row mb-4">
                                    <div class="col-md-12 mb-3">
                                        <h6 class="border-bottom pb-2"><i class="fas fa-star me-2"></i>Primary Beneficiary</h6>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryFirstName" class="form-label">First Name</label>
                                        <input asp-for="PrimaryBeneficiaryFirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="PrimaryBeneficiaryFirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryLastName" class="form-label">Last Name</label>
                                        <input asp-for="PrimaryBeneficiaryLastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="PrimaryBeneficiaryLastName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryMiddleName" class="form-label">Middle Name</label>
                                        <input asp-for="PrimaryBeneficiaryMiddleName" class="form-control" placeholder="Middle Name" />
                                        <span asp-validation-for="PrimaryBeneficiaryMiddleName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label asp-for="PrimaryBeneficiaryExtension" class="form-label">Extension</label>
                                        <input asp-for="PrimaryBeneficiaryExtension" class="form-control" placeholder="Jr, Sr, III" />
                                        <span asp-validation-for="PrimaryBeneficiaryExtension" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PrimaryBeneficiaryRelationship" class="form-label">Relationship</label>
                                        <input asp-for="PrimaryBeneficiaryRelationship" class="form-control" placeholder="e.g., Spouse, Child, Sibling" />
