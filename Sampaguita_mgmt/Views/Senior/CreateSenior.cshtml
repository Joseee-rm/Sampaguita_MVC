        // Setup SCCN validation
        function setupSCCNValidation() {
            const sccnInput = document.querySelector('input[name="SeniorId"]');

            // Real-time digit counter
            const digitCounter = document.createElement('div');
            digitCounter.className = 'form-text text-end mt-1';
            digitCounter.innerHTML = '<small>Digits: <span id="digitCount">0</span>/12</small>';
            sccnInput.parentNode.parentNode.appendChild(digitCounter);

            sccnInput.addEventListener('input', function() {
                const digitCount = this.value.replace(/[^0-9]/g, '').length;
                document.getElementById('digitCount').textContent = digitCount;

                // Color code based on length
                const counterSpan = document.getElementById('digitCount');
                if (digitCount === 12) {
                    counterSpan.className = 'text-success fw-bold';
                } else if (digitCount > 12) {
                    counterSpan.className = 'text-danger fw-bold';
                } else {
                    counterSpan.className = '';
                }
            });
        }

        // Initialize children functionality
        function initializeChildren() {
            const addChildBtn = document.getElementById('addChildBtn');
            const childrenContainer = document.getElementById('childrenContainer');
            const childTemplate = document.getElementById('childTemplate');

            let childCount = 1; // Start with 1 since we have the default child

            // Add child button click handler
            addChildBtn.addEventListener('click', function() {
                childCount++;
                const newChild = childTemplate.cloneNode(true);
                newChild.classList.remove('d-none');
                newChild.querySelector('.child-index').textContent = childCount;

                // Update input names to prevent conflict
                const inputs = newChild.querySelectorAll('input');
                inputs.forEach(input => {
                    const name = input.getAttribute('class').split(' ')[1]; // Get class name like 'child-first-name'
                    input.name = `Child${childCount}_${name}`;
                    input.id = `Child${childCount}_${name}`;
                    input.value = '';
                });

                // Add remove button functionality
                const removeBtn = newChild.querySelector('.remove-child-btn');
                removeBtn.disabled = false;
                removeBtn.addEventListener('click', function() {
                    newChild.remove();
                    childCount--;
                    updateChildIndices();
                });

                // Insert before the additional children info
                const additionalInfo = childrenContainer.querySelector('.col-md-12.mb-3.mt-3');
                childrenContainer.insertBefore(newChild, additionalInfo);

                updateChildIndices();
            });

            // Remove button functionality for existing children
            document.querySelectorAll('.remove-child-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const childEntry = this.closest('.child-entry');
                    if (childEntry) {
                        childEntry.remove();
                        childCount--;
                        updateChildIndices();
                    }
                });
            });

            function updateChildIndices() {
                const childEntries = childrenContainer.querySelectorAll('.child-entry');
                childEntries.forEach((entry, index) => {
                    const indexSpan = entry.querySelector('.child-index');
                    if (indexSpan) {
                        indexSpan.textContent = index + 1;
                        entry.querySelector('.card-header span').textContent = `Child ${index + 1}`;
                    }
                });
            }

            // Add event listener to collect children data before form submission
            const form = document.getElementById('createSeniorForm');
            form.addEventListener('submit', function(e) {
                // Collect children data
                const children = [];
                const childEntries = childrenContainer.querySelectorAll('.child-entry');

                childEntries.forEach((entry, index) => {
                    const firstName = entry.querySelector('.child-first-name').value.trim();
                    const lastName = entry.querySelector('.child-last-name').value.trim();
                    const middleName = entry.querySelector('.child-middle-name').value.trim();
                    const extension = entry.querySelector('.child-extension').value.trim();

                    if (firstName || lastName) {
                        children.push({
                            firstName,
                            lastName,
                            middleName,
                            extension
                        });
                    }
                });

                // Store children data in hidden field for server-side processing
                // This is a simplified approach - you might want to use JSON
                const childrenInfoField = document.querySelector('textarea[name="ChildrenInfo"]');
                if (children.length > 0) {
                    // Format children data for storage
                    const childrenText = children.map((child, index) => {
                        return `Child ${index + 1}: ${child.firstName} ${child.middleName} ${child.lastName} ${child.extension}`.trim();
                    }).join('\n');

                    // Combine with existing additional info
                    const existingInfo = childrenInfoField.value.trim();
                    if (existingInfo) {
                        childrenInfoField.value = childrenText + '\n\nAdditional Info:\n' + existingInfo;
                    } else {
                        childrenInfoField.value = childrenText;
                    }
                }
            });
        }

