        function initializeForm() {
            const form = document.getElementById('createSeniorForm');
            const citizenshipSelect = document.getElementById('citizenshipSelect');
            const spouseCitizenshipSelect = document.getElementById('spouseCitizenshipSelect');

            // Add event listeners
            if (citizenshipSelect) {
                citizenshipSelect.addEventListener('change', toggleDualCitizenship);
            }

            if (spouseCitizenshipSelect) {
                spouseCitizenshipSelect.addEventListener('change', toggleSpouseDualCitizenship);
            }

            // Form validation
            form.addEventListener('submit', function(e) {
                // Validate SCCN
                const sccnInput = document.querySelector('input[name="SeniorId"]');
                const sccnValue = sccnInput.value.replace(/[^0-9]/g, '');
                if (sccnValue.length !== 12) {
                    e.preventDefault();
                    alert('OSCA number must be exactly 12 digits.');
                    sccnInput.focus();
                    return false;
                }

                // Validate age
                const ageInput = document.querySelector('input[name="Age"]');
                const age = parseInt(ageInput.value);
                if (age < 60 || age > 120) {
                    e.preventDefault();
                    alert('Age must be between 60 and 120 years.');
                    ageInput.focus();
                    return false;
                }

                // Validate pension fields if pension is checked
                const hasPensionToggle = document.getElementById('hasPensionToggle');
                if (hasPensionToggle.checked) {
                    const pensionTypeSelect = document.getElementById('pensionTypeSelect');
                    if (!pensionTypeSelect.value) {
                        e.preventDefault();
                        alert('Please select a pension type.');
                        pensionTypeSelect.focus();
                        return false;
                    }

                    if (pensionTypeSelect.value === 'Other') {
                        const otherPensionInput = document.querySelector('input[name="PensionOther"]');
                        if (!otherPensionInput.value.trim()) {
                            e.preventDefault();
                            alert('Please specify the other pension type.');
                            otherPensionInput.focus();
                            return false;
                        }
                    }
                }

                // Validate dual citizenship if selected
                if (citizenshipSelect.value === 'DualCitizen') {
                    const dualCitizenshipInput = document.getElementById('dualCitizenshipInput');
                    if (!dualCitizenshipInput.value.trim()) {
                        e.preventDefault();
                        alert('Please specify the dual citizenship country.');
                        dualCitizenshipInput.focus();
                        return false;
                    }
                }

                // Validate spouse dual citizenship if selected
                if (spouseCitizenshipSelect && spouseCitizenshipSelect.value === 'DualCitizen') {
                    const spouseDualCitizenshipInput = document.getElementById('spouseDualCitizenshipInput');
                    if (!spouseDualCitizenshipInput.value.trim()) {
                        e.preventDefault();
                        alert('Please specify the spouse\'s dual citizenship country.');
                        spouseDualCitizenshipInput.focus();
                        return false;
                    }
                }

                // Submit raw SCCN digits (remove dashes)
                sccnInput.value = sccnValue;

                return true;
            });

            // Add event listeners for address fields
            const addressFields = ['HouseNumber', 'Zone'];
            addressFields.forEach(field => {
                const element = document.querySelector(`[name="${field}"]`);
                if (element) {
                    element.addEventListener('input', updateAddressPreview);
                    element.addEventListener('change', updateAddressPreview);
                }
            });

            // Add event listener for age field
            const ageInput = document.querySelector('input[name="Age"]');
            if (ageInput) {
                ageInput.addEventListener('change', checkSpecialBenefits);
            }

            // Add event listener for birth date field
            const birthDateInput = document.querySelector('input[name="BirthDate"]');
            if (birthDateInput) {
                birthDateInput.addEventListener('change', calculateAgeFromDate);
            }

            // Add event listener for pension type select
            const pensionTypeSelect = document.getElementById('pensionTypeSelect');
            if (pensionTypeSelect) {
                pensionTypeSelect.addEventListener('change', toggleOtherPension);
            }
        }
    </script>
