            }
        }

        // Toggle spouse dual citizenship field
        function toggleSpouseDualCitizenship() {
            const spouseCitizenshipSelect = document.getElementById('spouseCitizenshipSelect');
            const spouseDualCitizenshipLabel = document.getElementById('spouseDualCitizenshipLabel');
            const spouseDualCitizenshipInput = document.getElementById('spouseDualCitizenshipInput');

