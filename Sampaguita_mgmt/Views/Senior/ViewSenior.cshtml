@model SeniorManagement.Models.Senior
@{
    ViewData["Title"] = "Senior Details";

    // Calculate age with more detail
    string ageDetail = "";
    if (Model.BirthDate.HasValue)
    {
        var today = DateTime.Today;
        var age = today.Year - Model.BirthDate.Value.Year;
        if (Model.BirthDate.Value.Date > today.AddYears(-age)) age--;
        var months = today.Month - Model.BirthDate.Value.Month;
        if (months < 0)
        {
            months += 12;
            age--;
        }
        ageDetail = $"{age} years, {months} months";
    }

    // Static Special Benefits Program Information
    string beneficiaryProgram = "";
    string programBadgeClass = "";
    string programIcon = "";
    string programBenefits = "";

    // Static program rules (these can be configured in app settings)
    int centenarianAge = 100;  // Centenarian program starts at 100
    int nonagenarianAge = 90;  // Nonagenarian program starts at 90
    int octogenarianAge = 80;  // Octogenarian program starts at 80

    if (Model.Age >= centenarianAge)
    {
        beneficiaryProgram = "CENTENARIAN BENEFICIARY PROGRAM";
        programBadgeClass = "bg-danger";
        programIcon = "fa-crown";
        programBenefits = "₱100,000.00 Cash Gift + Enhanced Monthly Pension + Full Medical Coverage";
    }
    else if (Model.Age >= nonagenarianAge)
    {
        beneficiaryProgram = "NONAGENARIAN BENEFICIARY PROGRAM";
        programBadgeClass = "bg-warning";
        programIcon = "fa-star";
        programBenefits = "₱25,000.00 Annual Grant + Special Monthly Allowance + Medical Benefits";
    }
    else if (Model.Age >= octogenarianAge)
    {
        beneficiaryProgram = "OCTOGENARIAN BENEFICIARY PROGRAM";
        programBadgeClass = "bg-success";
        programIcon = "fa-award";
        programBenefits = "₱10,000.00 Annual Grant + Additional Monthly Pension + Health Care Benefits";
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <!-- Header Section -->
            <div class="card mb-4 non-printable">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">
                                <i class="fas fa-user-circle me-2"></i>Senior Citizen Details
                            </h3>
                            <p class="mb-0 opacity-75">Complete profile information for @Model.CompleteName</p>
                        </div>
                        <div>
                            <a href="@Url.Action("Index", "Senior")" class="btn btn-light me-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button onclick="window.print()" class="btn btn-info me-2">
                                <i class="fas fa-print me-1"></i> Print
                            </button>
                            <a href="@Url.Action("EditSenior", "Senior", new { id = Model.Id })" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i> Edit Record
                            </a>
                            @if (Model.Status == "Active")
                            {
                                <form asp-action="ArchiveSenior" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to archive this senior record?')">
                                        <i class="fas fa-archive me-1"></i> Archive Record
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Print Header (only visible when printing) -->
            <div class="print-header printable-only" style="display: none;">
                <div class="row">
                    <div class="col-12 text-center mb-4">
                        <h1 class="print-title">SENIOR CITIZEN OFFICIAL RECORD</h1>
                        <p class="print-subtitle">Office of the Senior Citizens Affairs (OSCA)</p>
                        <p class="print-subtitle">Barangay Sampaguita, Naujan, Oriental Mindoro</p>
                        <hr class="print-divider" />
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Left Column - Profile Picture and Basic Info -->
                <div class="col-md-4">
                    <!-- Profile Picture Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-camera me-2"></i>Profile Picture</h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="profile-picture-container mb-3">
                                @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureUrl))
                                {
                                    <img src="@ViewBag.ProfilePictureUrl"
                                         class="profile-picture-view img-fluid rounded"
                                         alt="Profile Picture"
                                         id="profilePictureDisplay">
                                }
                                else
                                {
                                    <div class="profile-picture-placeholder-view">
                                        <i class="fas fa-user fa-5x text-muted"></i>
                                        <div class="mt-2 text-muted">No picture available</div>
                                    </div>
                                }
                            </div>

                            <div class="senior-info">
                                <h4 class="mb-2">@Model.CompleteName</h4>
                                <div class="badge bg-success mb-2">Senior Citizen</div>

                                <!-- Beneficiary Program Badge -->
                                @if (!string.IsNullOrEmpty(beneficiaryProgram))
                                {
                                    <div class="badge @programBadgeClass mb-2">
                                        <i class="fas @programIcon me-1"></i> @beneficiaryProgram
                                    </div>
                                }

                                <div class="row text-start">
                                    <div class="col-12 mb-1">
                                        <i class="fas fa-venus-mars me-2 text-primary"></i>
                                        <strong>Gender:</strong> @Model.Gender
                                    </div>
                                    <div class="col-12 mb-1">
                                        <i class="fas fa-birthday-cake me-2 text-primary"></i>
                                        <strong>Age:</strong> @Model.Age years
                                        @if (!string.IsNullOrEmpty(ageDetail))
                                        {
                                            <br />
                                            <small class="text-muted">(@ageDetail)</small>
                                        }
                                    </div>
                                    <div class="col-12 mb-1">
                                        <i class="fas fa-calendar me-2 text-primary"></i>
                                        <strong>Birth Date:</strong>
                                        @if (Model.BirthDate.HasValue)
                                        {
                                            @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </div>
                                    <!-- Program Benefits -->
                                    @if (!string.IsNullOrEmpty(programBenefits))
                                    {
                                        <div class="col-12 mb-1 mt-2">
                                            <i class="fas fa-gift me-2 text-primary"></i>
                                            <strong>Benefits:</strong>
                                            <br />
                                            <small class="text-muted">@programBenefits</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- OSCA Number Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>OSCA IDENTIFICATION</h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="sccn-number-display">
                                <h2 class="text-primary mb-2">@Model.FormattedSCCN</h2>
                                <div class="print-barcode">
                                    <svg id="barcode"></svg>
                                </div>
                                <p class="text-muted mb-0">OSCA Identification Number</p>
                                <p class="text-muted small">Issued: @DateTime.Now.ToString("MMMM dd, yyyy")</p>

                                <!-- NCSC Registration Number -->
                                @if (!string.IsNullOrEmpty(Model.NCSRegistrationNumber))
                                {
                                    <div class="mt-3 pt-3 border-top">
                                        <p class="mb-1"><strong>NCSC Registration:</strong></p>
                                        <p class="text-success mb-0">@Model.NCSRegistrationNumber</p>
                                        <small class="text-muted">National Commission of Senior Citizens</small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Citizenship Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-passport me-2"></i>Citizenship Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="citizenship-info">
                                <p class="mb-2">
                                    <strong>Citizenship:</strong>
                                    <span class="badge bg-info">@Model.Citizenship</span>
                                </p>
                                @if (!string.IsNullOrEmpty(Model.DualCitizenshipCountry))
                                {
                                    <p class="mb-0">
                                        <strong>Dual Citizenship Country:</strong>
                                        <br />
                                        <span class="text-primary">@Model.DualCitizenshipCountry</span>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Eligibility Status Card -->
                    @if (!string.IsNullOrEmpty(beneficiaryProgram))
                    {
                        <div class="card mb-4">
                            <div class="card-header @programBadgeClass text-white">
                                <h5 class="mb-0"><i class="fas @programIcon me-2"></i>Program Eligibility Status</h5>
                            </div>
                            <div class="card-body">
                                <div class="eligibility-status text-center">
                                    <h4 class="mb-3">@beneficiaryProgram</h4>
                                    <div class="eligibility-details">
                                        <p class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Eligible for Special Benefits</p>
                                        <p class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>@programBenefits</p>
                                        <p class="mb-0"><i class="fas fa-check-circle text-success me-2"></i>Automatic Enrollment</p>
                                    </div>
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            This status is automatically determined by age based on static program rules
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Right Column - Detailed Information -->
                <div class="col-md-8">
                    <!-- Personal Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Personal Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Complete Name</label>
                                        <div class="info-value">@Model.CompleteName</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Age</label>
                                        <div class="info-value">
                                            @Model.Age years old
                                            @if (!string.IsNullOrEmpty(ageDetail))
                                            {
                                                <br />
                                                <small class="text-muted">(@ageDetail)</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Civil Status</label>
                                        <div class="info-value">
                                            <span class="badge bg-info">@(string.IsNullOrEmpty(Model.CivilStatus) ? "Not specified" : Model.CivilStatus)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Sex</label>
                                        <div class="info-value">
                                            <i class="fas @(Model.Gender == "Male" ? "fa-mars text-primary" : "fa-venus text-danger") me-2"></i>@Model.Gender
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Birth Date</label>
                                        <div class="info-value">
                                            @if (Model.BirthDate.HasValue)
                                            {
                                                @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                                                <br />
                                                <small class="text-muted">(@Model.BirthDate.Value.ToString("MM/dd/yyyy"))</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Citizenship</label>
                                        <div class="info-value">
                                            <i class="fas fa-flag me-2 text-primary"></i>@(string.IsNullOrEmpty(Model.Citizenship) ? "Filipino" : Model.Citizenship)
                                            @if (!string.IsNullOrEmpty(Model.DualCitizenshipCountry))
                                            {
                                                <br />
                                                <small class="text-muted">(Dual: @Model.DualCitizenshipCountry)</small>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- NCSC Registration -->
                                @if (!string.IsNullOrEmpty(Model.NCSRegistrationNumber))
                                {
                                    <div class="col-md-12 mb-3">
                                        <div class="info-item">
                                            <label class="info-label">NCSC Registration Number</label>
                                            <div class="info-value">
                                                <i class="fas fa-file-alt me-2 text-success"></i>
                                                <strong>@Model.NCSRegistrationNumber</strong>
                                                <br />
                                                <small class="text-muted">National Commission of Senior Citizens Reference</small>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Beneficiary Program Eligibility Section -->
                                @if (!string.IsNullOrEmpty(beneficiaryProgram))
                                {
                                    <div class="col-md-12 mb-3">
                                        <div class="info-item">
                                            <label class="info-label">Special Program Eligibility</label>
                                            <div class="info-value">
                                                <div class="d-flex align-items-start">
                                                    <i class="fas @programIcon me-3 text-success fa-2x mt-1"></i>
                                                    <div>
                                                        <h5 class="mb-1">@beneficiaryProgram</h5>
                                                        <div class="program-details">
                                                            <p class="mb-1"><strong>Benefits Package:</strong> @programBenefits</p>
                                                            <p class="mb-1"><strong>Eligibility Age:</strong> @Model.Age years old</p>
                                                            <p class="mb-1"><strong>Program Rules:</strong> Static age-based eligibility (80+/90+/100+)</p>
                                                            <p class="mb-0"><strong>Status:</strong> <span class="badge @programBadgeClass">ACTIVE</span></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-address-book me-2"></i>Contact Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Contact Number</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.ContactNumber))
                                            {
                                                <span><i class="fas fa-phone me-2 text-primary"></i>@Model.ContactNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Email Address</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.Email))
                                            {
                                                <span><i class="fas fa-envelope me-2 text-primary"></i>@Model.Email</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="address-section">
                                <div class="info-item">
                                    <label class="info-label">Permanent Address</label>
                                    <div class="address-box p-3 bg-light rounded">
                                        <div class="d-flex align-items-start">
                                            <i class="fas fa-home mt-1 me-3 text-primary fa-lg"></i>
                                            <div>
                                                <strong>@Model.PermanentAddress</strong><br />
                                                <small class="text-muted">
                                                    Zone: @Model.Zone | Barangay: @Model.Barangay<br />
                                                    Municipality: @Model.CityMunicipality | Province: @Model.Province<br />
                                                    ZIP Code: @Model.ZipCode
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Family Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Family Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Spouse Name</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.SpouseFullName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-friends me-2 text-success"></i>
                                                    <div>
                                                        @Model.SpouseFullName
                                                        @if (!string.IsNullOrEmpty(Model.SpouseCitizenship))
                                                        {
                                                            <br />
                                                            <small class="text-muted">Citizenship: @Model.SpouseCitizenship</small>
                                                        }
                                                        @if (!string.IsNullOrEmpty(Model.SpouseDualCitizenshipCountry))
                                                        {
                                                            <br />
                                                            <small class="text-muted">Dual Citizenship: @Model.SpouseDualCitizenshipCountry</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Child Information -->
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Child Information</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.ChildFullName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-child me-2 text-success"></i>
                                                    <div>
                                                        @Model.ChildFullName
                                                    </div>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.ChildrenInfo))
                                                {
                                                    <div class="mt-2">
                                                        <small class="text-muted">Additional Children:</small><br />
                                                        <small>@Model.ChildrenInfo</small>
                                                    </div>
                                                }
                                            }
                                            else if (!string.IsNullOrEmpty(Model.ChildrenInfo))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-child me-2 text-success"></i>
                                                    <div>
                                                        <small>@Model.ChildrenInfo</small>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Authorized Representative -->
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Authorized Representative</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.AuthorizedRepFullName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-tie me-2 text-success"></i>
                                                    <div>
                                                        @Model.AuthorizedRepFullName
                                                        @if (!string.IsNullOrEmpty(Model.AuthorizedRepRelationship))
                                                        {
                                                            <br />
                                                            <small class="text-muted">Relationship: @Model.AuthorizedRepRelationship</small>
                                                        }
                                                        @if (!string.IsNullOrEmpty(Model.AuthorizedRepInfo))
                                                        {
                                                            <br />
                                                            <small class="text-muted">@Model.AuthorizedRepInfo</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Designated Beneficiary -->
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Designated Beneficiary</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.PrimaryBeneficiaryFullName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-check me-2 text-success"></i>
                                                    <div>
                                                        @Model.PrimaryBeneficiaryFullName
                                                        @if (!string.IsNullOrEmpty(Model.PrimaryBeneficiaryRelationship))
                                                        {
                                                            <br />
                                                            <small class="text-muted">Relationship: @Model.PrimaryBeneficiaryRelationship</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pension Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-money-check-alt me-2"></i>Pension Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="info-item">
                                        <label class="info-label">Pension Status</label>
                                        <div class="info-value">
                                            @if (Model.HasPension)
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-university me-3 text-success fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-1">@Model.DisplayPensionType</h5>
                                                        <small class="text-muted">Registered Pension Type</small>
                                                        @if (Model.PensionType == "Other" && !string.IsNullOrEmpty(Model.PensionOther))
                                                        {
                                                            <br />
                                                            <small class="text-muted">(Specified: @Model.PensionOther)</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-times-circle me-3 text-secondary fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-1 text-muted">No Registered Pension</h5>
                                                        <small class="text-muted">No pension information recorded</small>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Special Benefits Program Card -->
                    @if (!string.IsNullOrEmpty(beneficiaryProgram))
                    {
                        <div class="card mb-4">
                            <div class="card-header @programBadgeClass text-white">
                                <h5 class="mb-0"><i class="fas fa-gift me-2"></i>Special Benefits Program</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="program-highlight p-3 rounded" style="background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(248,249,250,0.9) 100%); border: 2px dashed #ddd;">
                                            <div class="text-center">
                                                <h4 class="mb-3"><i class="fas @programIcon me-2"></i>@beneficiaryProgram</h4>
                                                <p class="text-muted mb-4">Static Age-Based Eligibility Program</p>

                                                <div class="row">
                                                    <div class="col-md-6 mb-2">
                                                        <div class="benefit-item p-2">
                                                            <i class="fas fa-money-bill-wave text-success fa-2x mb-2"></i>
                                                            <h6>Cash Benefit</h6>
                                                            @if (Model.Age >= 100)
