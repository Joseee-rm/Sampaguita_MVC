@model SeniorManagement.Models.Senior
@{
    ViewData["Title"] = "";

    // Calculate age with more detail
    string ageDetail = "";
    if (Model.BirthDate.HasValue)
    {
        var today = DateTime.Today;
        var age = today.Year - Model.BirthDate.Value.Year;
        if (Model.BirthDate.Value.Date > today.AddYears(-age)) age--;
        var months = today.Month - Model.BirthDate.Value.Month;
        if (months < 0)
        {
            months += 12;
            age--;
        }
        ageDetail = $"{age} years, {months} months";
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <!-- Header Section -->
            <div class="card mb-4 non-printable">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">
                                <i class="fas fa-user-circle me-2"></i>Senior Citizen Details
                            </h3>
                            <p class="mb-0 opacity-75">Complete profile information for @Model.CompleteName</p>
                        </div>
                        <div>
                            <a href="@Url.Action("Index", "Senior")" class="btn btn-light me-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button onclick="window.print()" class="btn btn-info me-2">
                                <i class="fas fa-print me-1"></i> Print
                            </button>
                            <a href="@Url.Action("EditSenior", "Senior", new { id = Model.Id })" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i> Edit Record
                            </a>
                            <form asp-action="ArchiveSenior" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to archive this senior record?')">
                                    <i class="fas fa-archive me-1"></i> Archive Record
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Print Header (only visible when printing) -->
            <div class="print-header printable-only" style="display: none;">
                <div class="row">
                    <div class="col-12 text-center mb-4">
                        <h1 class="print-title">SENIOR CITIZEN OFFICIAL RECORD</h1>
                        <p class="print-subtitle">Office of the Senior Citizens Affairs (OSCA)</p>
                        <hr class="print-divider" />
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Left Column - Profile Picture and Basic Info -->
                <div class="col-md-4">
                    <!-- Profile Picture Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-camera me-2"></i>Profile Picture</h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="profile-picture-container mb-3">
                                @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureUrl))
                                {
                                    <img src="@ViewBag.ProfilePictureUrl"
                                         class="profile-picture-view img-fluid rounded"
                                         alt="Profile Picture"
                                         id="profilePictureDisplay">
                                }
                                else
                                {
                                    <div class="profile-picture-placeholder-view">
                                        <i class="fas fa-user fa-5x text-muted"></i>
                                        <div class="mt-2 text-muted">No picture available</div>
                                    </div>
                                }
                            </div>

                            <div class="senior-info">
                                <h4 class="mb-2">@Model.CompleteName</h4>
                                <div class="badge bg-success mb-2">Senior Citizen</div>
                                <div class="row text-start">
                                    <div class="col-12 mb-1">
                                        <i class="fas fa-venus-mars me-2 text-primary"></i>
                                        <strong>Gender:</strong> @Model.Gender
                                    </div>
                                    <div class="col-12 mb-1">
                                        <i class="fas fa-birthday-cake me-2 text-primary"></i>
                                        <strong>Age:</strong> @Model.Age years
                                        @if (!string.IsNullOrEmpty(ageDetail))
                                        {
                                            <br />
                                        
                                            <small class="text-muted">(@ageDetail)</small>
                                        }
                                    </div>
                                    <div class="col-12 mb-1">
                                        <i class="fas fa-calendar me-2 text-primary"></i>
                                        <strong>Birth Date:</strong>
                                        @if (Model.BirthDate.HasValue)
                                        {
                                            @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- OSCA Number Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>OSCA IDENTIFICATION</h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="sccn-number-display">
                                <h2 class="text-primary mb-2">@Model.FormattedSCCN</h2>
                                <div class="print-barcode">
                                    <svg id="barcode"></svg>
                                </div>
                                <p class="text-muted mb-0">OSCA Identification Number</p>
                                <p class="text-muted small">Issued: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column - Detailed Information -->
                <div class="col-md-8">
                    <!-- Personal Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Personal Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Complete Name</label>
                                        <div class="info-value">@Model.CompleteName</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Age</label>
                                        <div class="info-value">
                                            @Model.Age years old
                                            @if (!string.IsNullOrEmpty(ageDetail))
                                            {
                                                <br />
                                            
                                                <small class="text-muted">(@ageDetail)</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Civil Status</label>
                                        <div class="info-value">
                                            <span class="badge bg-info">@(string.IsNullOrEmpty(Model.CivilStatus) ? "Not specified" : Model.CivilStatus)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Sex</label>
                                        <div class="info-value">
                                            <i class="fas @(Model.Gender == "Male" ? "fa-mars text-primary" : "fa-venus text-danger") me-2"></i>@Model.Gender
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Birth Date</label>
                                        <div class="info-value">
                                            @if (Model.BirthDate.HasValue)
                                            {
                                                @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                                                <br />
                                            
                                                <small class="text-muted">(@Model.BirthDate.Value.ToString("MM/dd/yyyy"))</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Citizenship</label>
                                        <div class="info-value">
                                            <i class="fas fa-flag me-2 text-primary"></i>@(string.IsNullOrEmpty(Model.Citizenship) ? "Filipino" : Model.Citizenship)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-address-book me-2"></i>Contact Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Contact Number</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.ContactNumber))
                                            {
                                                <span><i class="fas fa-phone me-2 text-primary"></i>@Model.ContactNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Email Address</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.Email))
                                            {
                                                <span><i class="fas fa-envelope me-2 text-primary"></i>@Model.Email</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="address-section">
                                <div class="info-item">
                                    <label class="info-label">Permanent Address</label>
                                    <div class="address-box p-3 bg-light rounded">
                                        <div class="d-flex align-items-start">
                                            <i class="fas fa-home mt-1 me-3 text-primary fa-lg"></i>
                                            <div>
                                                <strong>@Model.PermanentAddress</strong><br />
                                                <small class="text-muted">
                                                    Zone: @Model.Zone | Barangay: @Model.Barangay<br />
                                                    Municipality: @Model.CityMunicipality | Province: @Model.Province<br />
                                                    ZIP Code: @Model.ZipCode
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Family Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Family Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Spouse Name</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.SpouseFullName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-friends me-2 text-success"></i>
                                                    <div>
                                                        @Model.SpouseFullName
                                                        @if (!string.IsNullOrEmpty(Model.SpouseCitizenship))
                                                        {
                                                            <br />
                                                    
                                                            <small class="text-muted">Citizenship: @Model.SpouseCitizenship</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-item">
                                        <label class="info-label">Designated Beneficiary</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.PrimaryBeneficiaryFullName))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-check me-2 text-success"></i>
                                                    <div>
                                                        @Model.PrimaryBeneficiaryFullName
                                                        @if (!string.IsNullOrEmpty(Model.PrimaryBeneficiaryRelationship))
                                                        {
                                                            <br />
                                                    
                                                            <small class="text-muted">Relationship: @Model.PrimaryBeneficiaryRelationship</small>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pension Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-money-check-alt me-2"></i>Pension Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="info-item">
                                        <label class="info-label">Pension Type</label>
                                        <div class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.PensionType))
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-university me-3 text-success fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-1">@Model.DisplayPensionType</h5>
                                                        <small class="text-muted">Registered Pension Type</small>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-times-circle me-3 text-secondary fa-lg"></i>
                                                    <div>
                                                        <h5 class="mb-1 text-muted">No Registered Pension</h5>
                                                        <small class="text-muted">No pension information recorded</small>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Print Footer (only visible when printing) -->
            <div class="print-footer printable-only" style="display: none;">
                <hr class="print-divider" />
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="signature-box">
                            <p class="mb-0">_________________________________</p>
                            <p class="mb-0">Senior Citizen's Signature</p>
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="signature-box">
                            <p class="mb-0">_________________________________</p>
                            <p class="mb-0">OSCA Officer's Signature</p>
                            <p class="mb-0 text-muted small">Date: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <p class="footer-note mb-0">
                            <strong>Note:</strong> This is an official document issued by the Office of the Senior Citizens Affairs.
                            For verification, please contact OSCA Office at +63 123 456 7890.
                        </p>
                        <p class="document-id mb-0 small text-muted">
                            Document ID: OSCA-@Model.Id-@DateTime.Now.ToString("yyyyMMdd") | Printed on: @DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

