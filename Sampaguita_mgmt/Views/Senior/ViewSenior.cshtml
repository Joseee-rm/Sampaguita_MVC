}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Generate barcode for OSCA number
            const oscaNumber = '@Model.SeniorId';
            if (oscaNumber && oscaNumber.length === 12) {
                try {
                    JsBarcode("#barcode", oscaNumber, {
                        format: "CODE128",
                        lineColor: "#000",
                        width: 2,
                        height: 50,
                        displayValue: true,
                        fontOptions: "bold",
                        font: "Arial",
                        text: `OSCA: ${oscaNumber}`,
                        textMargin: 5,
                        fontSize: 14
                    });
                } catch (e) {
                    console.log("Barcode generation failed:", e);
                }
            }

            // Archive confirmation
            const archiveForm = document.querySelector('form[action*="ArchiveSenior"]');
            if (archiveForm) {
                const archiveBtn = archiveForm.querySelector('button[type="submit"]');
                archiveBtn.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to archive this senior record?')) {
                        e.preventDefault();
                    }
                });
            }

            // Print button functionality
            const printBtn = document.querySelector('button[onclick="window.print()"]');
            if (printBtn) {
                printBtn.addEventListener('click', function() {
                    // Show printable elements before printing
                    const printableElements = document.querySelectorAll('.printable-only');
                    printableElements.forEach(el => el.style.display = 'block');

                    // Trigger print
                    window.print();

                    // Hide printable elements after printing
                    setTimeout(() => {
                        printableElements.forEach(el => el.style.display = 'none');
                    }, 100);
                });
            }

            // Add copy OSCA ID functionality
            const oscaDisplay = document.querySelector('.sccn-number-display h2');
            if (oscaDisplay) {
                oscaDisplay.style.cursor = 'pointer';
                oscaDisplay.title = 'Click to copy OSCA ID';
                oscaDisplay.addEventListener('click', function() {
                    navigator.clipboard.writeText('@Model.FormattedSCCN').then(function() {
                        const originalText = oscaDisplay.textContent;
                        oscaDisplay.textContent = 'Copied!';
                        oscaDisplay.style.color = '#28a745';
                        setTimeout(function() {
                            oscaDisplay.textContent = originalText;
                            oscaDisplay.style.color = '#1565c0';
                        }, 1500);
                    });
                });
            }
        });
    </script>
}