@model List<SeniorManagement.Models.Senior>

@{
    ViewData["Title"] = "";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">
            <i class="fas fa-archive me-2"></i>Archived Senior Records
        </h3>
        <a href="@Url.Action("Index", "Senior")" class="btn btn-primary">
            <i class="fas fa-arrow-left me-1"></i> Back to Active Records
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Profile</th>
                            <th>OSCA Number</th>
                            <th>Full Name</th>
                            <th>Age</th>
                            <th>Sex</th>
                            <th>Zone</th>
                            <th>Pension Type</th>
                            <th>Archived On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var senior in Model)
                        {
                            <tr>
                                <td>
                                    <div class="profile-picture-small">
                                        <div class="profile-picture-placeholder-small" data-senior-id="@senior.Id">
                                            <i class="fas fa-user text-muted"></i>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge sccn-badge-archived">@senior.FormattedSCCN</span>
                                </td>
                                <td>@senior.CompleteName</td>
                                <td>
                                    <span class="age-badge">@senior.Age</span>
                                </td>
                                <td>
                                    <span class="badge @(senior.Gender == "Male" ? "badge-male" : "badge-female")">
                                        @senior.Gender
                                    </span>
                                </td>
                                <td>
                                    <span class="zone-badge">Zone @senior.Zone</span>
                                </td>
                                <td>
                                    <span class="pension-badge @(string.IsNullOrEmpty(senior.PensionType) ? "badge-none" : "badge-pension")">
                                        @senior.DisplayPensionType
                                    </span>
                                </td>
                                <td>@senior.UpdatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("ViewSenior", "Senior", new { id = senior.Id })"
                                           class="btn-action btn-view" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form method="post" action="@Url.Action("RestoreSenior", "Senior")"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to restore this senior record?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@senior.Id" />
                                            <button type="submit" class="btn-action btn-restore" title="Restore">
                                                <i class="fas fa-undo"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Statistics Summary -->
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="stat-card bg-light border">
                        <div class="stat-icon text-warning">
                            <i class="fas fa-archive fa-2x"></i>
                        </div>
                        <div class="stat-content">
                            <h4>@Model.Count</h4>
                            <p class="text-muted mb-0">Total Archived</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card bg-light border">
                        <div class="stat-icon text-primary">
                            <i class="fas fa-male fa-2x"></i>
                        </div>
                        <div class="stat-content">
                            <h4>@Model.Count(s => s.Gender == "Male")</h4>
                            <p class="text-muted mb-0">Male Seniors</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card bg-light border">
                        <div class="stat-icon text-danger">
                            <i class="fas fa-female fa-2x"></i>
                        </div>
                        <div class="stat-content">
                            <h4>@Model.Count(s => s.Gender == "Female")</h4>
                            <p class="text-muted mb-0">Female Seniors</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card bg-light border">
                        <div class="stat-icon text-success">
                            <i class="fas fa-money-check-alt fa-2x"></i>
                        </div>
                        <div class="stat-content">
                            <h4>@Model.Count(s => !string.IsNullOrEmpty(s.PensionType))</h4>
                            <p class="text-muted mb-0">With Pension</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5 empty-state">
                <div class="empty-icon">
                    <i class="fas fa-archive fa-4x"></i>
                </div>
                <h4 class="text-muted mt-3">No Archived Records Found</h4>
                <p class="text-muted">All senior records are currently active.</p>
                <a href="@Url.Action("Index", "Senior")" class="btn btn-primary mt-3">
                    <i class="fas fa-users me-2"></i> View Active Records
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        /* Card Styles */
        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 150, 243, 0.1);
            border-radius: 0.75rem;
            border-left: 4px solid #ff9800;
        }

        .card-header {
            background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
            color: white;
            border-bottom: none;
            padding: 1.5rem;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 0.375rem;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            border-radius: 0.25rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            color: white;
            transition: all 0.2s ease;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-view {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
        }

            .btn-view:hover {
                background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
                transform: translateY(-1px);
                box-shadow: 0 3px 8px rgba(33, 150, 243, 0.3);
            }

        .btn-restore {
            background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
        }

            .btn-restore:hover {
                background: linear-gradient(135deg, #388e3c 0%, #2e7d32 100%);
                transform: translateY(-1px);
                box-shadow: 0 3px 8px rgba(76, 175, 80, 0.3);
            }

        /* Profile Picture Small */
        .profile-picture-small {
            width: 40px;
            height: 40px;
        }

        .profile-picture-placeholder-small {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #fff3e0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #f57c00;
            font-size: 1rem;
            border: 2px solid #ffe0b2;
        }

        .profile-picture-small-preview {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #ff9800;
        }

        /* Badge Styles */
        .sccn-badge-archived {
            background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
            color: #ef6c00;
            border: 1px solid #ffe0b2;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            font-weight: 600;
            font-size: 0.75rem;
        }

        .age-badge {
            background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
            color: #2e7d32;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-weight: 600;
            font-size: 0.875rem;
            border: 1px solid #c8e6c9;
        }

        .badge-male {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            color: white;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
        }

        .badge-female {
            background: linear-gradient(135deg, #f06292 0%, #ec407a 100%);
            color: white;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
        }

        .zone-badge {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            color: #1565c0;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-weight: 600;
            border: 1px solid #bbdefb;
        }

        .pension-badge {
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            font-weight: 600;
            font-size: 0.75rem;
            border: 1px solid;
        }

        .badge-pension {
            background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
            color: #7b1fa2;
            border-color: #e1bee7;
        }

        .badge-none {
            background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
            color: #616161;
            border-color: #e0e0e0;
        }

        /* Button Styles */
        .btn-primary {
            background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
            border: none;
            color: white;
            padding: 0.625rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
            }

        /* Table Styles */
        .table th {
            background: linear-gradient(135deg, #f57c00 0%, #ef6c00 100%);
            color: white;
            border: none;
        }

        .table td {
            vertical-align: middle;
            border-bottom: 1px solid #ffe0b2;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #fff8e1;
        }

        .table-hover tbody tr:hover {
            background-color: #ffe0b2;
            transform: translateX(2px);
            transition: all 0.2s ease;
        }

        /* Empty State */
        .empty-state {
            padding: 4rem 2rem;
        }

        .empty-icon {
            font-size: 4rem;
            color: #ffcc80;
            margin-bottom: 1rem;
        }

        /* Statistics Cards */
        .stat-card {
            border-radius: 0.5rem;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 193, 7, 0.1);
        }

        .stat-content h4 {
            margin: 0;
            font-weight: 700;
            color: #333;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .table {
                font-size: 0.875rem;
            }

            .action-buttons {
                flex-direction: column;
                gap: 0.25rem;
            }

            .btn-action {
                width: 28px;
                height: 28px;
            }

            .stat-card {
                flex-direction: column;
                text-align: center;
                padding: 1rem;
            }

            .card-header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Load profile pictures for each senior
            document.querySelectorAll('.profile-picture-placeholder-small').forEach(placeholder => {
                const seniorId = placeholder.dataset.seniorId;
                loadProfilePicture(seniorId, placeholder);
            });

            // Add confirmation to restore buttons
            const restoreForms = document.querySelectorAll('form[onsubmit*="restore"]');
            restoreForms.forEach(form => {
                const button = form.querySelector('button[type="submit"]');
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to restore this senior record?')) {
                        e.preventDefault();
                        return false;
                    }
                });
            });

            // Add loading state to restore buttons
            restoreForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const btn = this.querySelector('button[type="submit"]');
                    btn.classList.add('btn-loading');
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                });
            });

            // Function to load profile picture
            function loadProfilePicture(seniorId, placeholder) {
                // You would typically fetch this from an API endpoint
                // For now, we'll check if there's a default picture
                const defaultImagePath = '/images/default-profile.png';

                // Create image element
                const img = document.createElement('img');
                img.className = 'profile-picture-small-preview';
                img.alt = 'Profile Picture';
                img.onload = function() {
                    placeholder.innerHTML = '';
                    placeholder.appendChild(img);
                };
                img.onerror = function() {
                    // Keep the placeholder icon if image fails to load
                    placeholder.innerHTML = '<i class="fas fa-user text-muted"></i>';
                };

                // Try to load the image
                img.src = `/uploads/profiles/${seniorId}.jpg`;

                // If that fails, try default
                setTimeout(() => {
                    if (!img.complete || img.naturalWidth === 0) {
                        img.src = defaultImagePath;
                    }
                }, 100);
            }
        });
    </script>
}