@section Scripts {
    <script>
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeFormValidation();
            setupRealTimeUpdates();
            setupSCCNFormatting();
            showTempDataMessages();

            // Set max date to today for birth date
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('birthDateField').max = today;
            document.getElementById('birthDateField').min = '1965-01-01';

            // Auto-calculate age when birth date changes
            document.getElementById('birthDateField').addEventListener('change', calculateAgeFromDate);

            // Check special benefits
            checkSpecialBenefits();

            // Update address preview
            updateAddressPreview();

            // Calculate age on load if birth date exists
            if (document.getElementById('birthDateField').value) {
                calculateAgeFromDate();
            }
        });

        // Preview profile picture
        function previewProfilePicture(input) {
            const preview = document.getElementById('picturePreview');
            const modalPreview = document.getElementById('modalPicturePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                const file = input.files[0];

                // Check file size (2MB limit)
                if (file.size > 2 * 1024 * 1024) {
                    alert('File size must be less than 2MB');
                    input.value = '';
                    return;
                }

                // Check file type
                const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                if (!validTypes.includes(file.type)) {
                    alert('Please select a JPG or PNG image file');
                    input.value = '';
                    return;
                }

                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" class="profile-picture-preview" alt="Profile Picture">`;
                    modalPreview.innerHTML = `<img src="${e.target.result}" class="img-fluid rounded" alt="Profile Picture">`;
                }
                reader.readAsDataURL(file);
            } else {
                preview.innerHTML = '<i class="fas fa-user fa-4x text-muted"></i><div class="mt-2">No picture</div>';
                modalPreview.innerHTML = '<i class="fas fa-user fa-5x text-muted"></i><div class="mt-2">No picture</div>';
            }
        }

        // Setup real-time form updates
        function setupRealTimeUpdates() {
            const fields = [
                'FirstName', 'LastName', 'MiddleInitial', 'Extension',
                'Gender', 'BirthDate', 'Zone', 'Age', 'Citizenship',
                'ContactNumber', 'Email', 'CivilStatus', 'PensionType',
                'HouseNumber', 'CityMunicipality', 'Province', 'ZipCode',
                'SpouseFirstName', 'SpouseLastName', 'SpouseMiddleName', 'SpouseExtension', 'SpouseCitizenship',
                'PrimaryBeneficiaryFirstName', 'PrimaryBeneficiaryLastName', 'PrimaryBeneficiaryMiddleName',
                'PrimaryBeneficiaryExtension', 'PrimaryBeneficiaryRelationship'
            ];

            fields.forEach(field => {
                const element = document.getElementById(field);
                if (element) {
                    element.addEventListener('input', updateSummary);
                    element.addEventListener('change', updateSummary);
                }
            });

            // Initial update
            updateSummary();
        }

        // Update summary card
        function updateSummary() {
            const firstName = document.getElementById('FirstName').value || '';
            const lastName = document.getElementById('LastName').value || '';
            const middleInitial = document.getElementById('MiddleInitial').value || '';
            const extension = document.getElementById('Extension').value || '';
            const age = document.getElementById('Age').value || 'Not set';
            const zone = document.getElementById('Zone').value || 'Not set';
            const pensionType = document.getElementById('PensionType').value || 'None';

            document.getElementById('summaryAge').textContent = age;
            document.getElementById('summaryZone').textContent = zone;
            document.getElementById('summaryPensionType').textContent = pensionType;

            let fullName = '';
            if (firstName || lastName) {
                fullName = `${firstName} ${lastName}`.trim();
                if (middleInitial) {
                    fullName = `${firstName} ${middleInitial}. ${lastName}`.trim();
                }
                if (extension) {
                    fullName = `${fullName} ${extension}`;
                }
            } else {
                fullName = 'Not set';
            }

            document.getElementById('summaryFullName').textContent = fullName;
            document.getElementById('summaryAddress').textContent = document.getElementById('addressPreview').innerText;
        }

        // Setup SCCN formatting
        function setupSCCNFormatting() {
            const formatBtn = document.getElementById('formatBtn');

            if (formatBtn) {
                formatBtn.addEventListener('click', function() {
                    const seniorId = document.getElementById('seniorIdInput').value;
                    if (seniorId.length === 12) {
                        const formatted = formatSCCNNumber(seniorId);
                        document.getElementById('formattedSCCN').textContent = formatted;
                        showAlert(`SCCN formatted: ${formatted}`, 'info');
                    }
                });
            }
        }

        // Format SCCN number with dashes
        function formatSCCNNumber(sccn) {
            if (!sccn || sccn.length !== 12) return sccn;
            return `${sccn.substring(0, 3)}-${sccn.substring(3, 6)}-${sccn.substring(6, 9)}-${sccn.substring(9, 12)}`;
        }

        // Calculate age from birth date
        function calculateAgeFromDate() {
            const birthDateField = document.getElementById('birthDateField');
            const ageField = document.getElementById('ageField');

            if (!birthDateField.value) {
                return;
            }

            const birthDate = new Date(birthDateField.value);
            const today = new Date();
            let age = today.getFullYear() - birthDate.getFullYear();
            const monthDiff = today.getMonth() - birthDate.getMonth();

            if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                age--;
            }

            ageField.value = age;
            checkSpecialBenefits();
        }

        // Check special benefits eligibility
        function checkSpecialBenefits() {
            const ageField = document.getElementById('ageField');
            const alertDiv = document.getElementById('specialBenefitsAlert');
            const benefitsText = document.getElementById('benefitsText');

            if (ageField.value) {
                const age = parseInt(ageField.value);

                if (age >= 100) {
                    alertDiv.className = 'alert alert-success mb-3';
                    benefitsText.innerHTML = '<strong>Centenarian Benefit Program Eligible!</strong> This senior is eligible for the Centenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else if (age >= 90) {
                    alertDiv.className = 'alert alert-warning mb-3';
                    benefitsText.innerHTML = '<strong>Nonagenarian Benefit Program Eligible!</strong> This senior is eligible for the Nonagenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else if (age >= 80) {
                    alertDiv.className = 'alert alert-info mb-3';
                    benefitsText.innerHTML = '<strong>Octogenarian Benefit Program Eligible!</strong> This senior is eligible for the Octogenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else {
                    alertDiv.style.display = 'none';
                }
            } else {
                alertDiv.style.display = 'none';
            }
        }

        // Update address preview
        function updateAddressPreview() {
            const houseNumber = document.getElementById('HouseNumber').value;
            const zone = document.getElementById('Zone').value;
            const city = document.getElementById('CityMunicipality').value;
            const province = document.getElementById('Province').value;
            const zipCode = document.getElementById('ZipCode').value;

            const addressParts = [];

            if (houseNumber) addressParts.push(houseNumber);
            if (zone) addressParts.push(`Zone ${zone}`);
            addressParts.push('Sampaguita');
            if (city) addressParts.push(city);
            if (province) addressParts.push(province);
            if (zipCode) addressParts.push(zipCode);

            const addressPreview = document.getElementById('addressPreview');
            addressPreview.innerHTML = addressParts.join(', ');
        }

        // Setup form validation
        function initializeFormValidation() {
            const form = document.getElementById('seniorForm');

            // Preview button
            document.getElementById('previewBtn').addEventListener('click', function() {
                if (validateForm()) {
                    showPreviewModal();
                }
            });
        }

        // Validate form
        function validateForm() {
            let isValid = true;
            let errors = [];

            // Check required fields
            const requiredFields = [
                { id: 'FirstName', name: 'First Name' },
                { id: 'LastName', name: 'Last Name' },
                { id: 'Gender', name: 'Gender' },
                { id: 'Age', name: 'Age' },
                { id: 'Zone', name: 'Zone' }
            ];

            requiredFields.forEach(field => {
                const element = document.getElementById(field.id);
                if (!element || !element.value.trim()) {
                    isValid = false;
                    errors.push(`• ${field.name} is required`);

                    // Highlight error
                    element.classList.add('is-invalid');
                } else {
                    element.classList.remove('is-invalid');
                }
            });

            // Validate Age range
            const ageField = document.getElementById('Age');
            if (ageField && ageField.value) {
                const age = parseInt(ageField.value);
                if (age < 60 || age > 120) {
                    isValid = false;
                    errors.push('• Age must be between 60 and 120');
                    ageField.classList.add('is-invalid');
                } else {
                    ageField.classList.remove('is-invalid');
                }
            }

            // Validate Zone range
            const zoneField = document.getElementById('Zone');
            if (zoneField && zoneField.value) {
                const zone = parseInt(zoneField.value);
                if (zone < 1 || zone > 7) {
                    isValid = false;
                    errors.push('• Zone must be between 1 and 7');
                    zoneField.classList.add('is-invalid');
                } else {
                    zoneField.classList.remove('is-invalid');
                }
            }

            if (!isValid) {
                const errorMessage = 'Please fix the following errors:\n\n' + errors.join('\n');
                showAlert(errorMessage, 'error');
            }

            return isValid;
        }

        // Show preview modal
        function showPreviewModal() {
            // Update preview modal with current values
            const seniorId = document.getElementById('seniorIdInput').value;
            const firstName = document.getElementById('FirstName').value || '';
            const lastName = document.getElementById('LastName').value || '';
            const middleInitial = document.getElementById('MiddleInitial').value || '';
            const extension = document.getElementById('Extension').value || '';
            const gender = document.getElementById('Gender').value || '';
            const age = document.getElementById('Age').value || '';
            const birthDate = document.getElementById('birthDateField').value || '';
            const citizenship = document.getElementById('Citizenship').value || '';
            const civilStatus = document.getElementById('CivilStatus').value || '';
            const contactNumber = document.getElementById('ContactNumber').value || '';
            const email = document.getElementById('Email').value || '';
            const pensionType = document.getElementById('PensionType').value || '';
            const zone = document.getElementById('Zone').value || '';
            const houseNumber = document.getElementById('HouseNumber').value || '';
            const city = document.getElementById('CityMunicipality').value || '';
            const province = document.getElementById('Province').value || '';
            const zipCode = document.getElementById('ZipCode').value || '';

            // Family information
            const spouseFirstName = document.getElementById('SpouseFirstName').value || '';
            const spouseLastName = document.getElementById('SpouseLastName').value || '';
            const spouseMiddleName = document.getElementById('SpouseMiddleName').value || '';
            const spouseExtension = document.getElementById('SpouseExtension').value || '';
            const spouseCitizenship = document.getElementById('SpouseCitizenship').value || '';
            const primaryFirstName = document.getElementById('PrimaryBeneficiaryFirstName').value || '';
            const primaryLastName = document.getElementById('PrimaryBeneficiaryLastName').value || '';
            const primaryMiddleName = document.getElementById('PrimaryBeneficiaryMiddleName').value || '';
            const primaryExtension = document.getElementById('PrimaryBeneficiaryExtension').value || '';
            const primaryRelationship = document.getElementById('PrimaryBeneficiaryRelationship').value || '';

            // Format SCCN for display
            const formattedSCCN = formatSCCNNumber(seniorId);

            // Update preview modal
            document.getElementById('previewSeniorId').textContent = formattedSCCN;

            let fullName = `${firstName} ${lastName}`.trim();
            if (middleInitial) {
                fullName = `${firstName} ${middleInitial}. ${lastName}`.trim();
            }
            if (extension) {
                fullName = `${fullName} ${extension}`;
            }
            document.getElementById('previewFullName').textContent = fullName || 'Not specified';

            document.getElementById('previewGender').textContent = gender || 'Not specified';
            document.getElementById('previewAge').textContent = age || 'Not specified';
            document.getElementById('previewCitizenship').textContent = citizenship || 'Not specified';

            // Format birth date for display
            let birthDateDisplay = 'Not specified';
            if (birthDate) {
                const date = new Date(birthDate);
                birthDateDisplay = date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            }
            document.getElementById('previewBirthDate').textContent = birthDateDisplay;

            document.getElementById('previewCivilStatus').textContent = civilStatus || 'Not specified';
            document.getElementById('previewContact').textContent = contactNumber || 'Not specified';
            document.getElementById('previewEmail').textContent = email || 'Not specified';
            document.getElementById('previewPensionType').textContent = pensionType || 'None';
            document.getElementById('previewZone').textContent = zone ? `Zone ${zone}` : 'Not specified';

            // Update address
            const addressParts = [];
            if (houseNumber) addressParts.push(houseNumber);
            if (zone) addressParts.push(`Zone ${zone}`);
            addressParts.push('Sampaguita');
            if (city) addressParts.push(city);
            if (province) addressParts.push(province);
            if (zipCode) addressParts.push(zipCode);
            document.getElementById('previewAddress').textContent = addressParts.join(', ');

            // Update family information
            let spouseFullName = '';
            if (spouseFirstName || spouseLastName) {
                spouseFullName = `${spouseFirstName} ${spouseLastName}`.trim();
                if (spouseMiddleName) {
                    spouseFullName = `${spouseFirstName} ${spouseMiddleName} ${spouseLastName}`.trim();
                }
                if (spouseExtension) {
                    spouseFullName = `${spouseFullName} ${spouseExtension}`;
                }
            }
            document.getElementById('previewSpouse').textContent = spouseFullName || 'Not specified';
            document.getElementById('previewSpouseCitizenship').textContent = spouseCitizenship || 'Not specified';

            let primaryBeneficiaryName = '';
            if (primaryFirstName || primaryLastName) {
                primaryBeneficiaryName = `${primaryFirstName} ${primaryLastName}`.trim();
                if (primaryMiddleName) {
                    primaryBeneficiaryName = `${primaryFirstName} ${primaryMiddleName} ${primaryLastName}`.trim();
                }
                if (primaryExtension) {
                    primaryBeneficiaryName = `${primaryBeneficiaryName} ${primaryExtension}`;
                }
            }
            document.getElementById('previewPrimaryBeneficiary').textContent = primaryBeneficiaryName || 'Not specified';
            document.getElementById('previewPrimaryRelationship').textContent = primaryRelationship || 'Not specified';

            // Show modal
            const previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
            previewModal.show();
        }

        // Alert function for popup messages
        function showAlert(message, type = 'success') {
            const alertClass = type === 'success' ? 'alert-success' :
                              type === 'error' ? 'alert-danger' :
                              type === 'info' ? 'alert-info' : 'alert-warning';
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${alertClass} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <strong>${type === 'success' ? 'Success!' :
                          type === 'error' ? 'Error!' :
                          type === 'info' ? 'Info!' : 'Warning!'}</strong>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            const container = document.getElementById('alertContainer');
            // Clear existing alerts
            container.innerHTML = '';
            container.appendChild(alertDiv);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentElement) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Show TempData messages
        function showTempDataMessages() {
            // Check for success message from TempData
            const successMessage = '@TempData["SuccessMessage"]';
            if (successMessage && successMessage !== '') {
                showAlert(successMessage, 'success');
            }

            // Check for error message from TempData
            const errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage && errorMessage !== '') {
                showAlert(errorMessage, 'error');
            }
        }
    </script>
}