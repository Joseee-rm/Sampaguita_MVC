@model SeniorManagement.Models.Senior
@{
    ViewData["Title"] = "Edit Senior Record";
}

<!-- Success/Error Message Display Area -->
<div id="alertContainer"></div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3><i class="fas fa-edit me-2"></i>Edit Senior Record</h3>
    </div>
    <div class="card-body">
        <form asp-action="EditSenior" method="post" id="seniorForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="Barangay" value="Sampaguita" />

            <!-- Profile Picture Section -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="profile-picture-section">
                        <h6 class="mb-3"><i class="fas fa-camera me-2"></i>Profile Picture</h6>
                        <div class="profile-picture-container text-center">
                            <div class="profile-picture-placeholder" id="picturePreview">
                                @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureUrl))
                                {
                                    <img src="@ViewBag.ProfilePictureUrl" class="profile-picture-preview" alt="Profile Picture">
                                }
                                else
                                {
                                    <i class="fas fa-user fa-4x text-muted"></i>
                                    <div class="mt-2">No picture</div>
                                }
                            </div>
                            <input type="file" id="profilePicture" name="profilePicture"
                                   class="form-control mt-3" accept=".jpg,.jpeg,.png"
                                   onchange="previewProfilePicture(this)" />
                            <small class="text-muted">4x4 size recommended</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <h5 class="mb-3 text-primary"><i class="fas fa-id-card me-2"></i>Senior Information</h5>

                    <!-- OSCA Number & NCSC Registration -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SeniorId" class="form-label required">OSCA Number *</label>
                                <div class="input-group">
                                    <input asp-for="SeniorId" class="form-control"
                                           placeholder="Enter 12-digit OSCA number"
                                           required
                                           id="seniorIdInput"
                                           pattern="\d{12}"
                                           maxlength="12"
                                           title="Exactly 12 digits (numbers only)" />
                                    <button type="button" class="btn btn-outline-info" id="formatBtn" title="Format OSCA number">
                                        <i class="fas fa-magic"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="SeniorId" class="text-danger"></span>
                                <div id="seniorIdStatus" class="mt-1">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle"></i>
                                        Formatted: <span id="formattedSCCN">@Model.FormattedSCCN</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NCSRegistrationNumber" class="form-label">NCSC Registration Number</label>
                                <input asp-for="NCSRegistrationNumber" class="form-control"
                                       placeholder="Optional NCSC reference"
                                       maxlength="50" />
                                <small class="text-muted">NCSC Registration Reference Number (Optional)</small>
                                <span asp-validation-for="NCSRegistrationNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Personal Information -->
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="FirstName" class="form-label required">First Name *</label>
                                <input asp-for="FirstName" class="form-control" placeholder="" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="LastName" class="form-label required">Last Name *</label>
                                <input asp-for="LastName" class="form-control" placeholder="" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mb-3">
                                <label asp-for="MiddleInitial" class="form-label">Middle Name</label>
                                <input asp-for="MiddleInitial" class="form-control" placeholder="" maxlength="100" />
                                <span asp-validation-for="MiddleInitial" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mb-3">
                                <label asp-for="Extension" class="form-label">Extension</label>
                                <input asp-for="Extension" class="form-control" placeholder="Jr, Sr" maxlength="10" />
                                <span asp-validation-for="Extension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mb-3">
                                <label asp-for="Gender" class="form-label required">Sex *</label>
                                <select asp-for="Gender" class="form-select" required>
                                    <option value="">-- Select Gender --</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Age, Birth Date & Citizenship -->
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="BirthDate" class="form-label required">Birth Date *</label>
                        <input asp-for="BirthDate" type="date" class="form-control"
                               max="@DateTime.Now.AddYears(-60).ToString("yyyy-MM-dd")"
                               min="@DateTime.Now.AddYears(-120).ToString("yyyy-MM-dd")"
                               onchange="calculateAgeFromDate()" required />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                        <small class="text-muted">Must be from 1965 or earlier (Age 60+)</small>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group mb-3">
                        <label asp-for="Age" class="form-label required">Age *</label>
                        <input asp-for="Age" type="number" class="form-control" id="ageField"
                               placeholder="Enter age" min="60" max="120" required
                               onchange="checkSpecialBenefits()" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Citizenship" class="form-label">Citizenship</label>
                        <select asp-for="Citizenship" class="form-select" id="citizenshipSelect" onchange="toggleDualCitizenship()">
                            <option value="Filipino">Filipino</option>
                            <option value="DualCitizen">Dual Citizen</option>
                        </select>
                        <span asp-validation-for="Citizenship" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="CivilStatus" class="form-label">Civil Status</label>
                        <select asp-for="CivilStatus" class="form-select">
                            <option value="">-- Select Status --</option>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Widowed">Widowed</option>
                            <option value="Separated">Separated</option>
                            <option value="Divorced">Divorced</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Dual Citizenship Field -->
            <div class="row mb-3" id="dualCitizenshipRow" style="display: @(Model.Citizenship == "DualCitizen" ? "block" : "none");">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DualCitizenshipCountry" class="form-label">Dual Citizenship Country</label>
                        <input asp-for="DualCitizenshipCountry" class="form-control"
                               placeholder="Enter country of dual citizenship"
                               id="dualCitizenshipInput" />
                        <span asp-validation-for="DualCitizenshipCountry" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Special Benefits Alert -->
            <div id="specialBenefitsAlert" class="alert mb-3" style="display: none;">
                <i class="fas fa-award me-2"></i>
                <span id="benefitsText"></span>
            </div>

            <!-- Permanent Address -->
            <div class="card mb-3 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-home me-2"></i>Permanent Address</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="HouseNumber" class="form-label">House Number</label>
                                <input asp-for="HouseNumber" class="form-control" placeholder="House/Lot/Blk No."
                                       oninput="updateAddressPreview()" />
                                <span asp-validation-for="HouseNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Zone" class="form-label required">Zone</label>
                            <div class="input-group">
                                <span class="input-group-text">Zone</span>
                                <select asp-for="Zone" class="form-select" required onchange="updateAddressPreview()" id="zoneSelect">
                                    <option value="">Select Zone</option>
                                    @for (int i = 1; i <= 99; i++)
                                    {
                                        <option value="@i">Zone @i</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="Zone" class="text-danger small"></span>
                            <small class="text-muted" id="zoneStatus">Auto-updates when new zones are added</small>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label class="form-label">Barangay</label>
                                <input type="text" class="form-control" value="Sampaguita" readonly />
                                <small class="text-muted">Default barangay</small>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="CityMunicipality" class="form-label">City/Municipality</label>
                                <input asp-for="CityMunicipality" class="form-control" value="Naujan" readonly />
                                <small class="text-muted">Default: Naujan</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Province" class="form-label">Province</label>
                                <input asp-for="Province" class="form-control" value="Oriental Mindoro" readonly />
                                <small class="text-muted">Default: Oriental Mindoro</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="ZipCode" class="form-label">Zip Code</label>
                                <input asp-for="ZipCode" class="form-control" value="5204" readonly />
                                <small class="text-muted">Default: 5204</small>
                            </div>
                        </div>
                    </div>

                    <!-- Address Preview -->
                    <div class="alert alert-light">
                        <strong><i class="fas fa-eye me-2"></i>Address Preview:</strong>
                        <div id="addressPreview" class="mt-1">
                            @Model.PermanentAddress
                        </div>
                    </div>
                </div>
            </div>

            <!-- Family Information -->
            <div class="card mb-3 border-success">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-users me-2"></i>Family Information</h6>
                </div>
                <div class="card-body">
                    <!-- Spouse Information -->
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <h6 class="border-bottom pb-2">Spouse Information</h6>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="SpouseFirstName" class="form-label">First Name</label>
                                <input asp-for="SpouseFirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="SpouseFirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="SpouseLastName" class="form-label">Last Name</label>
                                <input asp-for="SpouseLastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="SpouseLastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="SpouseMiddleName" class="form-label">Middle Name</label>
                                <input asp-for="SpouseMiddleName" class="form-control" placeholder="Middle Name" />
                                <span asp-validation-for="SpouseMiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="SpouseExtension" class="form-label">Extension</label>
                                <input asp-for="SpouseExtension" class="form-control" placeholder="Jr, Sr" />
                                <span asp-validation-for="SpouseExtension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SpouseCitizenship" class="form-label">Citizenship</label>
                                <select asp-for="SpouseCitizenship" class="form-select" id="spouseCitizenshipSelect" onchange="toggleSpouseDualCitizenship()">
                                    <option value="">-- Select Citizenship --</option>
                                    <option value="Filipino">Filipino</option>
                                    <option value="DualCitizen">Dual Citizen</option>
                                </select>
                                <span asp-validation-for="SpouseCitizenship" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6" id="spouseDualCitizenshipRow" style="display: @(Model.SpouseCitizenship == "DualCitizen" ? "block" : "none");">
                            <div class="form-group mb-3">
                                <label asp-for="SpouseDualCitizenshipCountry" class="form-label">Dual Citizenship Country</label>
                                <input asp-for="SpouseDualCitizenshipCountry" class="form-control"
                                       placeholder="Enter spouse's dual citizenship country"
                                       id="spouseDualCitizenshipInput" />
                                <span asp-validation-for="SpouseDualCitizenshipCountry" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Children Information - SEPARATED FIELDS -->
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <h6 class="border-bottom pb-2">Children Information</h6>
                            <small class="text-muted">(First child details)</small>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ChildFirstName" class="form-label">Child's First Name</label>
                                <input asp-for="ChildFirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="ChildFirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ChildLastName" class="form-label">Child's Last Name</label>
                                <input asp-for="ChildLastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="ChildLastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ChildMiddleName" class="form-label">Child's Middle Name</label>
                                <input asp-for="ChildMiddleName" class="form-control" placeholder="Middle Name" />
                                <span asp-validation-for="ChildMiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ChildExtension" class="form-label">Child's Extension</label>
                                <input asp-for="ChildExtension" class="form-control" placeholder="Jr, Sr" />
                                <span asp-validation-for="ChildExtension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="ChildrenInfo" class="form-label">Additional Children Info</label>
                                <textarea asp-for="ChildrenInfo" class="form-control" rows="3"
                                          placeholder="Enter details of other children (names, ages, etc.)"></textarea>
                                <small class="text-muted">You can add more children details here.</small>
                                <span asp-validation-for="ChildrenInfo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Authorized Representative - SEPARATED FIELDS -->
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <h6 class="border-bottom pb-2">Authorized Representative</h6>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="AuthorizedRepFirstName" class="form-label">First Name</label>
                                <input asp-for="AuthorizedRepFirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="AuthorizedRepFirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="AuthorizedRepLastName" class="form-label">Last Name</label>
                                <input asp-for="AuthorizedRepLastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="AuthorizedRepLastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="AuthorizedRepMiddleName" class="form-label">Middle Name</label>
                                <input asp-for="AuthorizedRepMiddleName" class="form-control" placeholder="Middle Name" />
                                <span asp-validation-for="AuthorizedRepMiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="AuthorizedRepExtension" class="form-label">Extension</label>
                                <input asp-for="AuthorizedRepExtension" class="form-control" placeholder="Jr, Sr" />
                                <span asp-validation-for="AuthorizedRepExtension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="AuthorizedRepRelationship" class="form-label">Relationship</label>
                                <input asp-for="AuthorizedRepRelationship" class="form-control" placeholder="e.g., Son, Daughter" />
                                <span asp-validation-for="AuthorizedRepRelationship" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="AuthorizedRepInfo" class="form-label">Additional Representative Info</label>
                                <textarea asp-for="AuthorizedRepInfo" class="form-control" rows="2"
                                          placeholder="Additional information about the representative"></textarea>
                                <span asp-validation-for="AuthorizedRepInfo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Designated Beneficiary -->
            <div class="card mb-3 border-warning">
                <div class="card-header bg-warning text-white">
                    <h6 class="mb-0"><i class="fas fa-user-check me-2"></i>Designated Beneficiary</h6>
                </div>
                <div class="card-body">
                    <!-- Primary Beneficiary -->
                    <div class="row mb-4">
                        <div class="col-md-12 mb-3">
                            <h6 class="border-bottom pb-2">Primary Beneficiary</h6>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="PrimaryBeneficiaryFirstName" class="form-label">First Name</label>
                                <input asp-for="PrimaryBeneficiaryFirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="PrimaryBeneficiaryFirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="PrimaryBeneficiaryLastName" class="form-label">Last Name</label>
                                <input asp-for="PrimaryBeneficiaryLastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="PrimaryBeneficiaryLastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="PrimaryBeneficiaryMiddleName" class="form-label">Middle Name</label>
                                <input asp-for="PrimaryBeneficiaryMiddleName" class="form-control" placeholder="Middle Name" />
                                <span asp-validation-for="PrimaryBeneficiaryMiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="PrimaryBeneficiaryExtension" class="form-label">Extension</label>
                                <input asp-for="PrimaryBeneficiaryExtension" class="form-control" placeholder="Jr, Sr" />
                                <span asp-validation-for="PrimaryBeneficiaryExtension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PrimaryBeneficiaryRelationship" class="form-label">Relationship</label>
                                <input asp-for="PrimaryBeneficiaryRelationship" class="form-control" placeholder="e.g., Spouse, Child" />
                                <span asp-validation-for="PrimaryBeneficiaryRelationship" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Contingent Beneficiary -->
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <h6 class="border-bottom pb-2">Contingent Beneficiary</h6>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ContingentBeneficiaryFirstName" class="form-label">First Name</label>
                                <input asp-for="ContingentBeneficiaryFirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="ContingentBeneficiaryFirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ContingentBeneficiaryLastName" class="form-label">Last Name</label>
                                <input asp-for="ContingentBeneficiaryLastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="ContingentBeneficiaryLastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ContingentBeneficiaryMiddleName" class="form-label">Middle Name</label>
                                <input asp-for="ContingentBeneficiaryMiddleName" class="form-control" placeholder="Middle Name" />
                                <span asp-validation-for="ContingentBeneficiaryMiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label asp-for="ContingentBeneficiaryExtension" class="form-label">Extension</label>
                                <input asp-for="ContingentBeneficiaryExtension" class="form-control" placeholder="Jr, Sr" />
                                <span asp-validation-for="ContingentBeneficiaryExtension" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ContingentBeneficiaryRelationship" class="form-label">Relationship</label>
                                <input asp-for="ContingentBeneficiaryRelationship" class="form-control" placeholder="e.g., Child, Sibling" />
                                <span asp-validation-for="ContingentBeneficiaryRelationship" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                        <input asp-for="ContactNumber" class="form-control" placeholder="Enter contact number" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="senior@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
