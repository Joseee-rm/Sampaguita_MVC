@model SeniorManagement.Models.Senior

@{
    ViewData["Title"] = "";
}

<!-- Success/Error Message Display Area -->
<div id="alertContainer"></div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3><i class="fas fa-edit me-2"></i>Edit Senior Record</h3>
    </div>
    <div class="card-body">
        <form asp-action="EditSenior" method="post" id="seniorForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="Barangay" />

            <h5 class="mb-3 text-primary"><i class="fas fa-id-card me-2"></i>Senior Information</h5>

            <!-- SCCN Number -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SeniorId" class="form-label">OSCA Number *</label>
                        <div class="input-group">
                            <input asp-for="SeniorId" class="form-control"
                                   placeholder="Enter 12-digit OSCN number"
                                   required
                                   id="seniorIdInput"
                                   pattern="\d{12}"
                                   maxlength="12"
                                   title="Exactly 12 digits (numbers only)" readonly />
                            <button type="button" class="btn btn-outline-info" id="formatBtn" title="Format OSCA number">
                                <i class="fas fa-magic"></i>
                            </button>
                        </div>
                        <span asp-validation-for="SeniorId" class="text-danger"></span>
                        <div id="seniorIdStatus" class="mt-1">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Formatted: <span id="formattedSCCN">@Model.FormattedSCCN</span>
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>OSCA Note:</strong> This field cannot be edited once created.
                    </div>
                </div>
            </div>

            <!-- Personal Information -->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label">First Name *</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label">Last Name *</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="MiddleInitial" class="form-label">Middle Initial</label>
                        <input asp-for="MiddleInitial" class="form-control" placeholder="Enter middle initial" maxlength="1" />
                        <span asp-validation-for="MiddleInitial" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Gender" class="form-label">Gender *</label>
                        <select asp-for="Gender" class="form-select" required>
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="BirthDate" class="form-label">Birth Date</label>
                        <input asp-for="BirthDate" type="date" class="form-control" id="birthDateField" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Age" class="form-label">Age *</label>
                        <input asp-for="Age" type="number" class="form-control" id="ageField"
                               placeholder="Enter age" min="60" max="120" required />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="CivilStatus" class="form-label">Civil Status</label>
                        <select asp-for="CivilStatus" class="form-select">
                            <option value="">-- Select Status --</option>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Widowed">Widowed</option>
                            <option value="Separated">Separated</option>
                            <option value="Divorced">Divorced</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                        <input asp-for="ContactNumber" class="form-control" placeholder="Enter contact number" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label asp-for="Zone" class="form-label">Zone *</label>
                        <select asp-for="Zone" class="form-select" required>
                            <option value="">-- Select Zone --</option>
                            @for (int i = 1; i <= 7; i++)
                            {
                                <option value="@i">Zone @i</option>
                            }
                        </select>
                        <span asp-validation-for="Zone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-3">
                        <label class="form-label">Barangay</label>
                        <input type="text" class="form-control" value="Sampaguita" readonly />
                        <div class="form-text">
                            <small class="text-muted">Fixed value as per requirement</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary Card -->
            <div class="card mt-4 mb-4 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Record Summary</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <p><strong>Senior ID:</strong> <span id="summarySeniorId">@Model.SeniorId</span></p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Full Name:</strong> <span id="summaryFullName">@Model.CompleteName</span></p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Zone:</strong> <span id="summaryZone">@Model.Zone</span></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-save"></i> Update Senior Record
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="button" class="btn btn-outline-info" id="previewBtn">
                    <i class="fas fa-eye"></i> Preview
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Preview Modal -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="previewModalLabel">
                    <i class="fas fa-eye me-2"></i>Record Preview
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th width="30%">SCCN Number</th>
                                <td id="previewSeniorId">@Model.FormattedSCCN</td>
                            </tr>
                            <tr>
                                <th>Full Name</th>
                                <td id="previewFullName">@Model.CompleteName</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td id="previewGender">@Model.Gender</td>
                            </tr>
                            <tr>
                                <th>Age</th>
                                <td id="previewAge">@Model.Age</td>
                            </tr>
                            <tr>
                                <th>Birth Date</th>
                                <td id="previewBirthDate">
                                    @if (Model.BirthDate.HasValue)
                                    {
                                        @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Civil Status</th>
                                <td id="previewCivilStatus">@Model.CivilStatus</td>
                            </tr>
                            <tr>
                                <th>Contact Number</th>
                                <td id="previewContact">@(string.IsNullOrEmpty(Model.ContactNumber) ? "Not specified" : Model.ContactNumber)</td>
                            </tr>
                            <tr>
                                <th>Zone</th>
                                <td id="previewZone">Zone @Model.Zone</td>
                            </tr>
                            <tr>
                                <th>Barangay</th>
                                <td id="previewBarangay">@Model.Barangay</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>
                                    <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-warning")">
                                        @Model.Status
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="document.getElementById('seniorForm').submit()">
                    <i class="fas fa-check"></i> Confirm Update
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeFormValidation();
            setupRealTimeUpdates();
            setupSCCNFormatting();
            showTempDataMessages();

            // Set max date to today for birth date
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('birthDateField').max = today;

            // Auto-calculate age when birth date changes
            document.getElementById('birthDateField').addEventListener('change', calculateAgeFromDate);

            // Calculate age on load if birth date exists
            if (document.getElementById('birthDateField').value) {
                calculateAgeFromDate();
            }
        });

        // Setup real-time form updates
        function setupRealTimeUpdates() {
            const fields = [
                'FirstName', 'LastName', 'MiddleInitial',
                'Gender', 'BirthDate', 'Zone', 'Age',
                'ContactNumber', 'CivilStatus'
            ];

            fields.forEach(field => {
                const element = document.getElementById(field);
                if (element) {
                    element.addEventListener('input', updateSummary);
                    element.addEventListener('change', updateSummary);
                }
            });

            // Initial update
            updateSummary();
        }

        // Update summary card
        function updateSummary() {
            const firstName = document.getElementById('FirstName').value || '';
            const lastName = document.getElementById('LastName').value || '';
            const middleInitial = document.getElementById('MiddleInitial').value || '';
            const zone = document.getElementById('Zone').value || 'Not set';

            document.getElementById('summaryZone').textContent = zone;

            let fullName = '';
            if (firstName || lastName) {
                fullName = `${firstName} ${lastName}`.trim();
                if (middleInitial) {
                    fullName = `${firstName} ${middleInitial}. ${lastName}`.trim();
                }
            } else {
                fullName = 'Not set';
            }

            document.getElementById('summaryFullName').textContent = fullName;
        }

        // Setup SCCN formatting
        function setupSCCNFormatting() {
            const formatBtn = document.getElementById('formatBtn');

            if (formatBtn) {
                formatBtn.addEventListener('click', function() {
                    const seniorId = document.getElementById('seniorIdInput').value;
                    if (seniorId.length === 12) {
                        const formatted = formatSCCNNumber(seniorId);
                        document.getElementById('formattedSCCN').textContent = formatted;
                        showAlert(`SCCN formatted: ${formatted}`, 'info');
                    }
                });
            }
        }

        // Format SCCN number with dashes
        function formatSCCNNumber(sccn) {
            if (!sccn || sccn.length !== 12) return sccn;
            return `${sccn.substring(0, 3)}-${sccn.substring(3, 6)}-${sccn.substring(6, 9)}-${sccn.substring(9, 12)}`;
        }

        // Calculate age from birth date
        function calculateAgeFromDate() {
            const birthDateField = document.getElementById('birthDateField');
            const ageField = document.getElementById('ageField');

            if (!birthDateField.value) {
                return;
            }

            const birthDate = new Date(birthDateField.value);
            const today = new Date();
            let age = today.getFullYear() - birthDate.getFullYear();
            const monthDiff = today.getMonth() - birthDate.getMonth();

            if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                age--;
            }

            ageField.value = age;
        }

        // Setup form validation
        function initializeFormValidation() {
            const form = document.getElementById('seniorForm');

            // Preview button
            document.getElementById('previewBtn').addEventListener('click', function() {
                if (validateForm()) {
                    showPreviewModal();
                }
            });
        }

        // Validate form
        function validateForm() {
            let isValid = true;
            let errors = [];

            // Check required fields
            const requiredFields = [
                { id: 'FirstName', name: 'First Name' },
                { id: 'LastName', name: 'Last Name' },
                { id: 'Gender', name: 'Gender' },
                { id: 'Age', name: 'Age' },
                { id: 'Zone', name: 'Zone' }
            ];

            requiredFields.forEach(field => {
                const element = document.getElementById(field.id);
                if (!element || !element.value.trim()) {
                    isValid = false;
                    errors.push(`• ${field.name} is required`);

                    // Highlight error
                    element.classList.add('is-invalid');
                } else {
                    element.classList.remove('is-invalid');
                }
            });

            // Validate Age range
            const ageField = document.getElementById('Age');
            if (ageField && ageField.value) {
                const age = parseInt(ageField.value);
                if (age < 60 || age > 120) {
                    isValid = false;
                    errors.push('• Age must be between 60 and 120');
                    ageField.classList.add('is-invalid');
                } else {
                    ageField.classList.remove('is-invalid');
                }
            }

            // Validate Zone range
            const zoneField = document.getElementById('Zone');
            if (zoneField && zoneField.value) {
                const zone = parseInt(zoneField.value);
                if (zone < 1 || zone > 7) {
                    isValid = false;
                    errors.push('• Zone must be between 1 and 7');
                    zoneField.classList.add('is-invalid');
                } else {
                    zoneField.classList.remove('is-invalid');
                }
            }

            if (!isValid) {
                const errorMessage = 'Please fix the following errors:\n\n' + errors.join('\n');
                showAlert(errorMessage, 'error');
            }

            return isValid;
        }

        // Show preview modal
        function showPreviewModal() {
            // Update preview modal with current values
            const seniorId = document.getElementById('seniorIdInput').value;
            const firstName = document.getElementById('FirstName').value || '';
            const lastName = document.getElementById('LastName').value || '';
            const middleInitial = document.getElementById('MiddleInitial').value || '';
            const gender = document.getElementById('Gender').value || '';
            const age = document.getElementById('Age').value || '';
            const birthDate = document.getElementById('birthDateField').value || '';
            const civilStatus = document.getElementById('CivilStatus').value || '';
            const contactNumber = document.getElementById('ContactNumber').value || '';
            const zone = document.getElementById('Zone').value || '';

            // Format SCCN for display
            const formattedSCCN = formatSCCNNumber(seniorId);

            // Update preview modal
            document.getElementById('previewSeniorId').textContent = formattedSCCN;

            let fullName = `${firstName} ${lastName}`.trim();
            if (middleInitial) {
                fullName = `${firstName} ${middleInitial}. ${lastName}`.trim();
            }
            document.getElementById('previewFullName').textContent = fullName || 'Not specified';

            document.getElementById('previewGender').textContent = gender || 'Not specified';
            document.getElementById('previewAge').textContent = age || 'Not specified';

            // Format birth date for display
            let birthDateDisplay = 'Not specified';
            if (birthDate) {
                const date = new Date(birthDate);
                birthDateDisplay = date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            }
            document.getElementById('previewBirthDate').textContent = birthDateDisplay;

            document.getElementById('previewCivilStatus').textContent = civilStatus || 'Not specified';
            document.getElementById('previewContact').textContent = contactNumber || 'Not specified';
            document.getElementById('previewZone').textContent = zone ? `Zone ${zone}` : 'Not specified';

            // Show modal
            const previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
            previewModal.show();
        }

        // Alert function for popup messages
        function showAlert(message, type = 'success') {
            const alertClass = type === 'success' ? 'alert-success' :
                              type === 'error' ? 'alert-danger' :
                              type === 'info' ? 'alert-info' : 'alert-warning';
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${alertClass} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <strong>${type === 'success' ? 'Success!' :
                          type === 'error' ? 'Error!' :
                          type === 'info' ? 'Info!' : 'Warning!'}</strong>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            const container = document.getElementById('alertContainer');
            // Clear existing alerts
            container.innerHTML = '';
            container.appendChild(alertDiv);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentElement) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Show TempData messages
        function showTempDataMessages() {
            // Check for success message from TempData
            const successMessage = '@TempData["SuccessMessage"]';
            if (successMessage && successMessage !== '') {
                showAlert(successMessage, 'success');
            }

            // Check for error message from TempData
            const errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage && errorMessage !== '') {
                showAlert(errorMessage, 'error');
            }
        }
    </script>
}