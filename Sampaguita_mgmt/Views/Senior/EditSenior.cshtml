@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeForm();
            checkSpecialBenefits();
            updateAddressPreview();

            // Initialize children and representatives functionality
            initializeChildren();
            initializeRepresentatives();

            // Setup event listeners
            document.getElementById('hasPensionToggle').addEventListener('change', togglePensionFields);
            document.getElementById('pensionTypeSelect').addEventListener('change', toggleOtherPension);
            document.getElementById('citizenshipSelect').addEventListener('change', toggleDualCitizenship);
            document.getElementById('spouseCitizenshipSelect').addEventListener('change', toggleSpouseDualCitizenship);

            // Calculate age on load
            if (document.getElementById('BirthDate').value) {
                calculateAgeFromDate();
            }
        });

        function togglePensionFields() {
            const hasPensionToggle = document.getElementById('hasPensionToggle');
            const pensionFields = document.getElementById('pensionFields');
            const pensionTypeSelect = document.getElementById('pensionTypeSelect');

            if (hasPensionToggle.checked) {
                pensionFields.style.display = 'block';
                pensionTypeSelect.required = true;
            } else {
                pensionFields.style.display = 'none';
                pensionTypeSelect.required = false;
                pensionTypeSelect.value = '';
                toggleOtherPension();
            }
        }

        function toggleOtherPension() {
            const pensionTypeSelect = document.getElementById('pensionTypeSelect');
            const otherPensionContainer = document.getElementById('otherPensionContainer');
            const otherPensionInput = document.querySelector('input[name="PensionOther"]');

            if (pensionTypeSelect.value === 'Other') {
                otherPensionContainer.style.display = 'block';
                otherPensionInput.required = true;
            } else {
                otherPensionContainer.style.display = 'none';
                otherPensionInput.required = false;
                otherPensionInput.value = '';
            }
        }

        function toggleDualCitizenship() {
            const citizenshipSelect = document.getElementById('citizenshipSelect');
            const dualCitizenshipRow = document.getElementById('dualCitizenshipRow');
            const dualCitizenshipInput = document.getElementById('dualCitizenshipInput');

            if (citizenshipSelect.value === 'DualCitizen') {
                dualCitizenshipRow.style.display = 'block';
                dualCitizenshipInput.required = true;
            } else {
                dualCitizenshipRow.style.display = 'none';
                dualCitizenshipInput.required = false;
                dualCitizenshipInput.value = '';
            }
        }

        function toggleSpouseDualCitizenship() {
            const spouseCitizenshipSelect = document.getElementById('spouseCitizenshipSelect');
            const spouseDualCitizenshipRow = document.getElementById('spouseDualCitizenshipRow');
            const spouseDualCitizenshipInput = document.getElementById('spouseDualCitizenshipInput');

            if (spouseCitizenshipSelect.value === 'DualCitizen') {
                spouseDualCitizenshipRow.style.display = 'block';
                spouseDualCitizenshipInput.required = true;
            } else {
                spouseDualCitizenshipRow.style.display = 'none';
                spouseDualCitizenshipInput.required = false;
                spouseDualCitizenshipInput.value = '';
            }
        }

        function calculateAgeFromDate() {
            const birthDateInput = document.querySelector('input[name="BirthDate"]');
            const ageField = document.getElementById('ageField');

            if (birthDateInput.value) {
                const birthDate = new Date(birthDateInput.value);
                const today = new Date();
                let age = today.getFullYear() - birthDate.getFullYear();
                const monthDiff = today.getMonth() - birthDate.getMonth();

                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
                    age--;
                }

                if (age >= 60 && age <= 120) {
                    ageField.value = age;
                    checkSpecialBenefits();
                } else {
                    alert('Age must be between 60 and 120 years old.');
                    birthDateInput.value = '';
                    ageField.value = '';
                }
            }
        }

        function checkSpecialBenefits() {
            const ageField = document.getElementById('ageField');
            const alertDiv = document.getElementById('specialBenefitsAlert');
            const benefitsText = document.getElementById('benefitsText');

            if (ageField.value) {
                const age = parseInt(ageField.value);

                if (age >= 100) {
                    alertDiv.className = 'alert alert-success mb-3';
                    benefitsText.innerHTML = '<strong>Centenarian Benefit Program Eligible!</strong> This senior is eligible for the Centenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else if (age >= 90) {
                    alertDiv.className = 'alert alert-warning mb-3';
                    benefitsText.innerHTML = '<strong>Nonagenarian Benefit Program Eligible!</strong> This senior is eligible for the Nonagenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else if (age >= 80) {
                    alertDiv.className = 'alert alert-info mb-3';
                    benefitsText.innerHTML = '<strong>Octogenarian Benefit Program Eligible!</strong> This senior is eligible for the Octogenarian Benefit Program.';
                    alertDiv.style.display = 'block';
                } else {
                    alertDiv.style.display = 'none';
                }
            } else {
                alertDiv.style.display = 'none';
            }
        }

        function updateAddressPreview() {
            const houseNumber = document.getElementById('HouseNumber').value;
            const zone = document.getElementById('Zone').value;
            const city = document.getElementById('CityMunicipality').value;
            const province = document.getElementById('Province').value;
            const zipCode = document.getElementById('ZipCode').value;

            const addressParts = [];

            if (houseNumber) addressParts.push(houseNumber);
            if (zone) addressParts.push(`Zone ${zone}`);
            addressParts.push('Sampaguita');
            if (city) addressParts.push(city);
            if (province) addressParts.push(province);
            if (zipCode) addressParts.push(zipCode);

            const addressPreview = document.getElementById('addressPreview');
            addressPreview.innerHTML = addressParts.join(', ');
        }

        // Initialize children functionality for Edit - FIXED WITH PROPER NUMBERING
        function initializeChildren() {
            const addChildBtn = document.getElementById('addChildBtn');
            const childrenContainer = document.getElementById('childrenContainer');
            const childTemplate = document.getElementById('childTemplate');

            let childCount = 1; // Start with 1 since we have the default child

            // Add child button click handler
            addChildBtn.addEventListener('click', function() {
                const newChild = childTemplate.cloneNode(true);
                newChild.classList.remove('d-none');
                newChild.classList.remove('child-template');

                // Update index before adding
                const currentIndex = childCount;
                newChild.querySelector('.child-index').textContent = currentIndex;

                // Update header text
                const headerSpan = newChild.querySelector('.child-header-text');
                headerSpan.innerHTML = `Child <span class="child-index">${currentIndex}</span>`;

                // Update input names with proper indices
                const inputs = newChild.querySelectorAll('input');
                inputs.forEach(input => {
                    const originalName = input.name;
                    const newName = originalName.replace('__INDEX__', (currentIndex - 1).toString());
                    input.name = newName;
                    input.id = newName.replace(/[\[\].]/g, '_');
                });

                // Add remove button functionality
                const removeBtn = newChild.querySelector('.remove-child-btn');
                removeBtn.disabled = false;
                removeBtn.addEventListener('click', function() {
                    newChild.remove();
                    childCount--;
                    updateChildIndices();
                });

                // Insert before the additional children info
                const additionalInfo = childrenContainer.querySelector('.col-md-12');
                childrenContainer.insertBefore(newChild, additionalInfo);

                childCount++;
                updateChildIndices();
            });

            // Remove button functionality for existing children
            document.querySelectorAll('.remove-child-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    if (!btn.disabled) {
                        const childEntry = this.closest('.child-entry');
                        if (childEntry && childrenContainer.querySelectorAll('.child-entry').length > 1) {
                            childEntry.remove();
                            childCount--;
                            updateChildIndices();
                        }
                    }
                });
            });

            function updateChildIndices() {
                const childEntries = childrenContainer.querySelectorAll('.child-entry:not(.d-none)');
                childEntries.forEach((entry, index) => {
                    const displayIndex = index + 1;
                    const indexSpan = entry.querySelector('.child-index');
                    const headerSpan = entry.querySelector('.child-header-text');

                    if (indexSpan) {
                        indexSpan.textContent = displayIndex;
                    }

                    if (headerSpan) {
                        headerSpan.innerHTML = `Child <span class="child-index">${displayIndex}</span>`;
                    }

                    // Update input names with new indices
                    const inputs = entry.querySelectorAll('input');
                    inputs.forEach(input => {
                        const originalName = input.name;
                        if (originalName.includes('Children[')) {
                            const newName = originalName.replace(/Children\[\d+\]/, `Children[${index}]`);
                            input.name = newName;
                            input.id = newName.replace(/[\[\].]/g, '_');
                        }
                    });
                });
            }
        }

        // Initialize representatives functionality for Edit - FIXED WITH PROPER NUMBERING
        function initializeRepresentatives() {
            const addRepBtn = document.getElementById('addRepBtn');
            const repsContainer = document.getElementById('representativesContainer');
            const repTemplate = document.getElementById('repTemplate');

            let repCount = 1; // Start with 1 since we have the default representative

            // Add representative button click handler
            addRepBtn.addEventListener('click', function() {
                const newRep = repTemplate.cloneNode(true);
                newRep.classList.remove('d-none');
                newRep.classList.remove('rep-template');

                // Update index before adding
                const currentIndex = repCount;
                newRep.querySelector('.rep-index').textContent = currentIndex;

                // Update header text
                const headerSpan = newRep.querySelector('.rep-header-text');
                headerSpan.innerHTML = `Representative <span class="rep-index">${currentIndex}</span>`;

                // Update input names with proper indices
                const inputs = newRep.querySelectorAll('input');
                inputs.forEach(input => {
                    const originalName = input.name;
                    const newName = originalName.replace('__INDEX__', (currentIndex - 1).toString());
                    input.name = newName;
                    input.id = newName.replace(/[\[\].]/g, '_');
                });

                // Add remove button functionality
                const removeBtn = newRep.querySelector('.remove-rep-btn');
                removeBtn.disabled = false;
                removeBtn.addEventListener('click', function() {
                    newRep.remove();
                    repCount--;
                    updateRepIndices();
                });

                // Insert before the additional rep info
                const additionalInfo = repsContainer.querySelector('.col-md-12');
                repsContainer.insertBefore(newRep, additionalInfo);

                repCount++;
                updateRepIndices();
            });

            // Remove button functionality for existing representatives
            document.querySelectorAll('.remove-rep-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    if (!btn.disabled) {
                        const repEntry = this.closest('.rep-entry');
                        if (repEntry && repsContainer.querySelectorAll('.rep-entry').length > 1) {
                            repEntry.remove();
                            repCount--;
                            updateRepIndices();
                        }
                    }
                });
            });

            function updateRepIndices() {
                const repEntries = repsContainer.querySelectorAll('.rep-entry:not(.d-none)');
                repEntries.forEach((entry, index) => {
                    const displayIndex = index + 1;
                    const indexSpan = entry.querySelector('.rep-index');
                    const headerSpan = entry.querySelector('.rep-header-text');

                    if (indexSpan) {
                        indexSpan.textContent = displayIndex;
                    }

                    if (headerSpan) {
                        headerSpan.innerHTML = `Representative <span class="rep-index">${displayIndex}</span>`;
                    }

                    // Update input names with new indices
                    const inputs = entry.querySelectorAll('input');
                    inputs.forEach(input => {
                        const originalName = input.name;
                        if (originalName.includes('Representatives[')) {
                            const newName = originalName.replace(/Representatives\[\d+\]/, `Representatives[${index}]`);
                            input.name = newName;
                            input.id = newName.replace(/[\[\].]/g, '_');
                        }
                    });
                });
            }
        }

        function initializeForm() {
            const form = document.getElementById('seniorForm');

            form.addEventListener('submit', function(e) {
                // Validate OSCA number
                const seniorIdInput = document.getElementById('seniorIdInput');
                const seniorIdValue = seniorIdInput.value.replace(/[^0-9]/g, '');
                if (seniorIdValue.length !== 12) {
                    e.preventDefault();
                    alert('OSCA number must be exactly 12 digits.');
                    seniorIdInput.focus();
                    return false;
                }

                // Validate age
                const ageField = document.getElementById('ageField');
                const age = parseInt(ageField.value);
                if (age < 60 || age > 120) {
                    e.preventDefault();
                    alert('Age must be between 60 and 120 years.');
                    ageField.focus();
                    return false;
                }

                // Validate pension fields if pension is checked
                const hasPensionToggle = document.getElementById('hasPensionToggle');
                if (hasPensionToggle.checked) {
                    const pensionTypeSelect = document.getElementById('pensionTypeSelect');
                    if (!pensionTypeSelect.value) {
                        e.preventDefault();
                        alert('Please select a pension type.');
                        pensionTypeSelect.focus();
                        return false;
                    }

                    if (pensionTypeSelect.value === 'Other') {
                        const otherPensionInput = document.querySelector('input[name="PensionOther"]');
                        if (!otherPensionInput.value.trim()) {
                            e.preventDefault();
                            alert('Please specify the other pension type.');
                            otherPensionInput.focus();
                            return false;
                        }
                    }
                }

                // Validate dual citizenship if selected
                const citizenshipSelect = document.getElementById('citizenshipSelect');
                if (citizenshipSelect.value === 'DualCitizen') {
                    const dualCitizenshipInput = document.getElementById('dualCitizenshipInput');
                    if (!dualCitizenshipInput.value.trim()) {
                        e.preventDefault();
                        alert('Please specify the dual citizenship country.');
                        dualCitizenshipInput.focus();
                        return false;
                    }
                }

                // Validate spouse dual citizenship if selected
                const spouseCitizenshipSelect = document.getElementById('spouseCitizenshipSelect');
                if (spouseCitizenshipSelect && spouseCitizenshipSelect.value === 'DualCitizen') {
                    const spouseDualCitizenshipInput = document.getElementById('spouseDualCitizenshipInput');
                    if (!spouseDualCitizenshipInput.value.trim()) {
                        e.preventDefault();
                        alert('Please specify the spouse\'s dual citizenship country.');
                        spouseDualCitizenshipInput.focus();
                        return false;
                    }
                }

                // Submit raw OSCA digits (remove dashes)
                seniorIdInput.value = seniorIdValue;

                return true;
            });
        }
