@model List<SeniorManagement.Models.Senior>

@{
    ViewData["Title"] = "Archived Senior Records";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3><i class="fas fa-archive me-2"></i>Archived Senior Records</h3>
        <a href="@Url.Action("Index", "Senior")" class="btn btn-primary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to Active Records
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Age</th>
                            <th>Sex</th>
                            <th>Archived On</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var senior in Model)
                        {
                            <tr>
                                <td>@senior.Id</td>
                                <td>@senior.FullName</td>
                                <td>@senior.s_age</td>
                                <td>@senior.s_sex</td>
                                <td>@senior.DeletedAt?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-warning">Archived</span>
                                </td>
                                <td>
                                    <form method="post" action="@Url.Action("RestoreSenior", "Senior")"
                                          onsubmit="return confirmRestore(this);" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@senior.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fas fa-undo"></i> Restore
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-archive fa-4x text-muted mb-4"></i>
                <h4 class="text-muted">No Archived Records Found</h4>
                <p class="text-muted">All senior records are currently active.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmRestore(form) {
            if (confirm('Are you sure you want to restore this senior record? It will be moved back to active records.')) {
                // Show loading indicator
                const btn = form.querySelector('button[type="submit"]');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Restoring...';
                btn.disabled = true;

                // Re-enable after 3 seconds if submission fails
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }, 3000);

                return true;
            }
            return false;
        }
    </script>
}