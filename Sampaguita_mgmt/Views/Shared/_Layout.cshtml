    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mobile sidebar toggle
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            const mainContent = document.getElementById('mainContent');

            // Toggle sidebar on mobile
            function toggleSidebar() {
                sidebar.classList.toggle('active');
                sidebarOverlay.classList.toggle('active');
                document.body.classList.toggle('sidebar-open');
            }

            // Close sidebar when clicking overlay
            function closeSidebar() {
                sidebar.classList.remove('active');
                sidebarOverlay.classList.remove('active');
                document.body.classList.remove('sidebar-open');
            }

            // Event listeners
            sidebarToggle.addEventListener('click', toggleSidebar);
            sidebarOverlay.addEventListener('click', closeSidebar);

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                if (window.innerWidth < 768 &&
                    !sidebar.contains(event.target) &&
                    !sidebarToggle.contains(event.target) &&
                    sidebar.classList.contains('active')) {
                    closeSidebar();
                }
            });

            // Set active menu items based on current URL
            function setActiveMenu() {
                const currentUrl = window.location.pathname.toLowerCase();
                const menuItems = document.querySelectorAll('.menu-item');

                menuItems.forEach(item => {
                    item.classList.remove('active');

                    // Check if this menu item matches current URL
                    const href = item.getAttribute('href')?.toLowerCase();
                    if (href && currentUrl.includes(href.replace(/\/index$/, '').replace(/\/$/, ''))) {
                        item.classList.add('active');
                    }
                });
            }

            // Initial call to set active menu
            setActiveMenu();

            // Handle window resize
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    if (window.innerWidth >= 768) {
                        closeSidebar();
                    }
                }, 250);
            });

            // Prevent zoom on input focus for iOS
            document.addEventListener('touchstart', function(event) {
                if (event.target.tagName === 'INPUT' ||
                    event.target.tagName === 'TEXTAREA' ||
                    event.target.tagName === 'SELECT') {
                    event.target.style.fontSize = '16px';
                }
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);

            // Add touch feedback to buttons
            const buttons = document.querySelectorAll('.btn, .menu-item, .card');
            buttons.forEach(button => {
                button.addEventListener('touchstart', function() {
                    this.classList.add('touch-active');
                });

                button.addEventListener('touchend', function() {
                    this.classList.remove('touch-active');
                });
            });
        });

        // Event-specific JavaScript functions
        function updateAttendance(eventId, change) {
            const counter = document.querySelector(`[data-event-id="${eventId}"] .attendance-count`);
            const maxCapacity = counter ? counter.getAttribute('data-max-capacity') : null;
            const currentCount = parseInt(counter ? counter.textContent : 0);
            let newCount = currentCount + change;

            // Validate bounds
            if (newCount < 0) newCount = 0;
            if (maxCapacity && newCount > parseInt(maxCapacity)) newCount = parseInt(maxCapacity);

            // Animate update
            if (counter) {
                counter.classList.add('attendance-updated');
                counter.textContent = newCount;

                // Update progress bar if exists
                const progressBar = document.querySelector(`[data-event-id="${eventId}"] .progress-bar`);
                if (progressBar && maxCapacity) {
                    const percentage = (newCount / maxCapacity) * 100;
                    progressBar.style.width = `${percentage}%`;
                    progressBar.setAttribute('aria-valuenow', percentage);
                }

                // Remove animation class after animation completes
                setTimeout(() => {
                    counter.classList.remove('attendance-updated');
                }, 500);
            }

            // Send update to server
            fetch(`/Event/UpdateAttendance?id=${eventId}&attendanceCount=${newCount}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            }).then(response => {
                if (!response.ok) {
                    // Revert on error
                    if (counter) {
                        counter.textContent = currentCount;
                        counter.classList.add('attendance-updated');
                        setTimeout(() => {
                            counter.classList.remove('attendance-updated');
                        }, 500);
                    }
                }
            }).catch(error => {
                console.error('Error updating attendance:', error);
                // Revert on error
                if (counter) {
                    counter.textContent = currentCount;
                }
            });
        }

        function archiveEvent(eventId, eventTitle) {
            if (confirm(`Are you sure you want to archive "${eventTitle}"? This event will be moved to the archived section.`)) {
                // Add loading state
                const archiveBtn = document.querySelector(`[data-event-id="${eventId}"]`);
                if (archiveBtn) {
                    const originalHTML = archiveBtn.innerHTML;
                    archiveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                    archiveBtn.classList.add('btn-loading');
                }

                fetch(`/Event/Archive?id=${eventId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                }).then(response => {
                    if (response.ok) {
                        // Refresh page after successful archive
                        window.location.reload();
                    } else {
                        // Restore button on error
                        if (archiveBtn) {
                            archiveBtn.innerHTML = originalHTML;
                            archiveBtn.classList.remove('btn-loading');
                        }
                        alert('Failed to archive event. Please try again.');
                    }
                }).catch(error => {
                    console.error('Error archiving event:', error);
                    if (archiveBtn) {
                        archiveBtn.innerHTML = originalHTML;
                        archiveBtn.classList.remove('btn-loading');
                    }
                    alert('Error archiving event. Please check your connection and try again.');
                });
            }
        }

        function restoreEvent(eventId, eventTitle) {
            if (confirm(`Are you sure you want to restore "${eventTitle}"? This event will be moved back to active events.`)) {
                // Add loading state
                const restoreBtn = document.querySelector(`[data-restore-id="${eventId}"]`);
                if (restoreBtn) {
                    const originalHTML = restoreBtn.innerHTML;
                    restoreBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                    restoreBtn.classList.add('btn-loading');
                }

                fetch(`/Event/Restore?id=${eventId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                }).then(response => {
                    if (response.ok) {
                        // Refresh page after successful restore
                        window.location.reload();
                    } else {
                        // Restore button on error
                        if (restoreBtn) {
                            restoreBtn.innerHTML = originalHTML;
                            restoreBtn.classList.remove('btn-loading');
                        }
                        alert('Failed to restore event. Please try again.');
                    }
                }).catch(error => {
                    console.error('Error restoring event:', error);
                    if (restoreBtn) {
                        restoreBtn.innerHTML = originalHTML;
                        restoreBtn.classList.remove('btn-loading');
                    }
                    alert('Error restoring event. Please check your connection and try again.');
                });
            }
        }

        // Initialize tooltips for event actions
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Bootstrap tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Update status dropdown functionality
            document.querySelectorAll('.status-dropdown').forEach(dropdown => {
                dropdown.addEventListener('change', function() {
                    const eventId = this.getAttribute('data-event-id');
                    const newStatus = this.value;
                    const originalStatus = this.getAttribute('data-original-status') || this.value;

                    // Show loading state
                    const originalValue = this.value;
                    this.value = 'Updating...';
                    this.disabled = true;

                    fetch(`/Event/UpdateStatus?id=${eventId}&status=${encodeURIComponent(newStatus)}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        }
                    }).then(response => {
                        if (response.ok) {
                            // Success - reload page
                            window.location.reload();
                        } else {
                            // Error - revert to original status
                            this.value = originalStatus;
                            this.disabled = false;
                            alert('Failed to update status. Please try again.');
                        }
                    }).catch(error => {
                        console.error('Error updating status:', error);
                        this.value = originalStatus;
                        this.disabled = false;
                        alert('Error updating status. Please check your connection and try again.');
                    });
                });
            });

            // Mobile view adjustments for events
            if (window.innerWidth < 768) {
                // Convert table to cards for mobile
                convertTableToCards();
            }

            // Handle window resize for responsive events
            window.addEventListener('resize', function() {
                if (window.innerWidth < 768) {
                    convertTableToCards();
                } else {
                    convertCardsToTable();
                }
            });
        });

        // Helper function for mobile responsive events
        function convertTableToCards() {
            const table = document.querySelector('.event-table-desktop');
            if (!table) return;

            const rows = table.querySelectorAll('tbody tr');
            let cardsContainer = document.querySelector('.event-card-mobile');

            if (!cardsContainer) {
                // Create cards container if it doesn't exist
                cardsContainer = document.createElement('div');
                cardsContainer.className = 'event-card-mobile';
                table.parentNode.insertBefore(cardsContainer, table.nextSibling);
            } else {
                cardsContainer.innerHTML = '';
            }

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                if (cells.length < 6) return;

                const card = document.createElement('div');
                card.className = 'event-card';

                // Extract data from table cells
                const eventTitle = cells[0].querySelector('.fw-bold')?.textContent || 'No Title';
                const eventDescription = cells[0].querySelector('small')?.textContent || '';
                const eventType = cells[1].querySelector('.badge')?.textContent || 'General';
                const eventDate = cells[2].querySelector('.fw-bold')?.textContent || '';
                const eventTime = cells[2].querySelector('small')?.textContent || '';
                const eventLocation = cells[3]?.textContent || '';
                const attendanceElement = cells[4].querySelector('.fw-bold');
                const attendanceCount = attendanceElement ? attendanceElement.textContent : '0';
                const eventId = row.getAttribute('data-event-id') || '';

                card.innerHTML = `
                    <div class="event-card-header">
                        <div>
                            <div class="event-card-title">${eventTitle}</div>
                            <div class="event-card-meta">${eventType} • ${eventDate} ${eventTime}</div>
                        </div>
                        <span class="badge bg-primary">${eventType}</span>
                    </div>
                    <div class="event-card-body">
                        <p class="text-muted mb-2">${eventDescription}</p>
                        <div class="mb-2">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <span>${eventLocation}</span>
                        </div>
                        <div class="attendance-counter-mobile">
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                <button class="attendance-btn minus" onclick="updateAttendance('${eventId}', -1)">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <div class="mx-3 text-center">
                                    <div class="fw-bold fs-4 attendance-count">${attendanceCount}</div>
                                    <small class="text-muted">Attendance</small>
                                </div>
                                <button class="attendance-btn plus" onclick="updateAttendance('${eventId}', 1)">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="event-card-actions">
                        <a href="/Event/Edit/${eventId}" class="btn btn-sm btn-outline-primary flex-fill">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <button class="btn btn-sm btn-outline-warning flex-fill" onclick="archiveEvent('${eventId}', '${eventTitle.replace(/'/g, "\\'")}')">
                            <i class="fas fa-archive"></i> Archive
                        </button>
                    </div>
                `;

                cardsContainer.appendChild(card);
            });

            // Hide table, show cards
            table.style.display = 'none';
            cardsContainer.style.display = 'block';
        }

        function convertCardsToTable() {
            const table = document.querySelector('.event-table-desktop');
            const cardsContainer = document.querySelector('.event-card-mobile');

            if (table) {
                table.style.display = '';
            }
            if (cardsContainer) {
                cardsContainer.style.display = 'none';
            }
        }

        // Handle form submissions with loading state
        document.addEventListener('submit', function(event) {
            if (event.target.tagName === 'FORM') {
                const submitBtn = event.target.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                    submitBtn.disabled = true;
                }
            }
        });

        // Back button handling for mobile
        window.addEventListener('popstate', function() {
            location.reload();
        });
    </script>

    <!-- Render additional scripts from views -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
