@model SeniorManagement.Models.Zone

@{
    ViewData["Title"] = "Edit Zone";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Edit Zone</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ZoneNumber" class="form-label">Zone Number *</label>
                    <input asp-for="ZoneNumber" type="number" min="1" class="form-control" required />
                    <small class="text-muted">Enter a unique zone number</small>
                    <span asp-validation-for="ZoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ZoneName" class="form-label">Zone Name *</label>
                    <input asp-for="ZoneName" class="form-control" required />
                    <span asp-validation-for="ZoneName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active Zone</label>
                </div>
                <small class="text-muted">If unchecked, this zone will not be available for new senior registrations</small>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Zone")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Zone
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}