@model SeniorManagement.Models.ReportViewModel
@{
    ViewData["Title"] = $"";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2 text-gray-800">Zone @Model.SelectedZoneFilter Report</h1>
            <p class="mb-0">Senior citizens in Zone @Model.SelectedZoneFilter</p>
        </div>
        <div class="btn-group">
            <a asp-action="ExportZonePdf" asp-route-zone="@Model.SelectedZoneFilter" class="btn btn-outline-primary">
                <i class="fas fa-download me-2"></i>Export PDF
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Registry
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Seniors
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSeniors</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Senior Registry Table -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Senior Citizens in Zone @Model.SelectedZoneFilter</h6>
        </div>
        <div class="card-body">
            @if (Model.SeniorList.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>SCCN Number</th>
                                <th>Full Name</th>
                                <th>Gender</th>
                                <th>Age</th>
                                <th>Civil Status</th>
                                <th>Contact Number</th>
                                <th>Status</th>
                                <th>Registered On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var senior in Model.SeniorList)
                            {
                                <tr>
                                    <td>
                                        <span class="badge badge-info">@senior.FormattedSCCN</span>
                                    </td>
                                    <td>@senior.CompleteName</td>
                                    <td>@senior.Gender</td>
                                    <td>@senior.Age</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(senior.CivilStatus))
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                        else
                                        {
                                            @senior.CivilStatus
                                        }
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(senior.ContactNumber))
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                        else
                                        {
                                            @senior.ContactNumber
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(senior.Status == "Active" ? "badge-success" : "badge-warning")">
                                            @senior.Status
                                        </span>
                                    </td>
                                    <td>@senior.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("ViewSenior", "Senior", new { id = senior.Id })"
                                               class="btn btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("EditSenior", "Senior", new { id = senior.Id })"
                                               class="btn btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No senior records found in Zone @Model.SelectedZoneFilter</h5>
                    <a asp-action="Index" class="btn btn-primary mt-2">
                        <i class="fas fa-arrow-left me-1"></i> Back to Registry
                    </a>
                </div>
            }
        </div>
    </div>
</div>