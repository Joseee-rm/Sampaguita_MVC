@model SeniorManagement.Models.StaffVisualizationViewModel
@{
    ViewData["Title"] = "";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="container-fluid px-0">
    <!-- Welcome Header -->
    <div class="row mx-0 mb-4">
        <div class="col-12 px-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Staff Dashboard</h3>
                <div class="d-flex align-items-center gap-2">
                    <button id="refreshBtn" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-sync-alt me-1"></i> Refresh
                    </button>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="autoRefreshToggle" checked>
                        <label class="form-check-label small" for="autoRefreshToggle">Auto-refresh</label>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mb-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="flex-grow-1">
                        <h5 class="mb-1">
                            <i class="fas fa-user-circle me-2"></i>Welcome, @Model.StaffName!
                        </h5>
                        <p class="mb-0 small">
                            @Model.CurrentDate
                            <span class="badge bg-success ms-2">
                                <i class="fas fa-circle me-1"></i>Online
                            </span>
                        </p>
                    </div>
                    <div class="text-end">
                        <div id="currentTime" class="small text-muted">@DateTime.Now.ToString("HH:mm:ss")</div>
                        <div class="badge bg-primary small">Staff View</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Senior Statistics Cards -->
    <div class="row mx-0">
        <!-- Total Seniors -->
        <div class="col-12 col-md-6 col-lg-3 px-2 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Seniors
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSeniors</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span class="text-success mr-2">
                                    <i class="fas fa-user-check"></i> @Model.ActiveSeniors Active
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gender Distribution -->
        <div class="col-12 col-md-6 col-lg-3 px-2 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Gender Distribution
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.MaleCount M / @Model.FemaleCount F
                            </div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                @if (Model.GenderDistribution != null && Model.GenderDistribution.Count > 0)
                                {
                                    foreach (var gender in Model.GenderDistribution)
                                    {
                                        <span class="@(gender.Gender == "Male" ? "text-primary" : "text-danger") mr-2">
                                            <i class="fas @(gender.Gender == "Male" ? "fa-male" : "fa-female")"></i>
                                            @gender.Percentage%
                                        </span>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-venus-mars fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Registrations -->
        <div class="col-12 col-md-6 col-lg-3 px-2 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Recent Registrations
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RecentRegistrations</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span class="text-warning mr-2">
                                    <i class="fas fa-calendar-day"></i> Last 7 days
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Events -->
        <div class="col-12 col-md-6 col-lg-3 px-2 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Upcoming Events
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UpcomingEvents</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span class="text-info mr-2">
                                    <i class="fas fa-calendar-check"></i> @Model.TodayEvents Today
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Visualizations -->
    <div class="row mx-0">
        <!-- Gender Distribution Chart -->
        <div class="col-12 col-lg-6 px-2 mb-3">
            <div class="card shadow">
                <div class="card-header py-2">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>Gender Distribution
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="genderChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Age Distribution Chart -->
        <div class="col-12 col-lg-6 px-2 mb-3">
            <div class="card shadow">
                <div class="card-header py-2">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-chart-bar me-2"></i>Age Distribution
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar pt-4">
                        <canvas id="ageChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Zone Distribution -->
    <div class="row mx-0">
        <div class="col-12 px-2 mb-3">
            <div class="card shadow">
                <div class="card-header py-2 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-map-marker-alt me-2"></i>Zone Distribution
                    </h6>
                    <small class="text-muted">Total: @Model.TotalSeniors seniors</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        @for (int i = 1; i <= 7; i++)
                        {
                            var countProperty = typeof(StaffVisualizationViewModel).GetProperty($"Zone{i}Count");
                            var count = (int)(countProperty?.GetValue(Model) ?? 0);
                            var percentage = Model.TotalSeniors > 0 ? Math.Round((count / (double)Model.TotalSeniors) * 100, 1) : 0;
                            var colors = new[] { "primary", "success", "info", "warning", "danger", "secondary", "dark" };

                            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                                <div class="card border-left-@colors[i - 1] shadow-sm h-100">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="text-xs font-weight-bold text-@colors[i - 1] text-uppercase">
                                                    Zone @i
                                                </div>
                                                <div class="h6 mb-0 font-weight-bold text-gray-800">@count</div>
                                            </div>
                                            <div class="text-end">
                                                <small class="text-muted">@percentage%</small>
                                            </div>
                                        </div>
                                        <div class="progress mt-2" style="height: 5px;">
                                            <div class="progress-bar bg-@colors[i - 1]"
                                                 role="progressbar"
                                                 style="width: @percentage%"
                                                 aria-valuenow="@percentage"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Event Type Distribution -->
    <div class="row mx-0">
        <div class="col-12 px-2 mb-3">
            <div class="card shadow">
                <div class="card-header py-2">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-calendar-week me-2"></i>Event Types
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (Model.EventTypeDistribution != null)
                        {
                            foreach (var eventType in Model.EventTypeDistribution.Where(e => e.Count > 0))
                            {
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                                    <div class="card border-left-warning shadow-sm h-100">
                                        <div class="card-body py-2">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-warning p-2 me-3">
                                                    <i class="fas @eventType.Icon text-white"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="text-xs font-weight-bold text-warning text-uppercase">
                                                        @eventType.EventType
                                                    </div>
                                                    <div class="h6 mb-0 font-weight-bold text-gray-800">@eventType.Count</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Seniors & Upcoming Events -->
    <div class="row mx-0">
        <!-- Recent Seniors -->
        <div class="col-12 col-lg-6 px-2 mb-3">
            <div class="card shadow">
                <div class="card-header py-2 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user-clock me-2"></i>Recently Registered Seniors
                    </h6>
                    <a href="@Url.Action("Index", "Senior")" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (Model.RecentSeniors != null && Model.RecentSeniors.Count > 0)
                        {
                            foreach (var senior in Model.RecentSeniors)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@senior.Name</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i> Age: @senior.Age |
                                                <i class="fas fa-map-marker-alt me-1"></i> Zone: @senior.Zone
                                            </small>
                                        </div>
                                        <span class="badge bg-@(senior.Status == "Active" ? "success" : "secondary")">
                                            @senior.Status
                                        </span>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        Registered: @senior.RegisteredDate.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item text-center text-muted py-4">
                                <i class="fas fa-user-slash fa-2x mb-2"></i>
                                <p class="mb-0">No recent seniors found</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Events -->
        <div class="col-12 col-lg-6 px-2 mb-3">
            <div class="card shadow">
                <div class="card-header py-2 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-calendar-day me-2"></i>Upcoming Events
                    </h6>
                    <a href="@Url.Action("Index", "Event")" class="btn btn-sm btn-success">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (Model.UpcomingEventsList != null && Model.UpcomingEventsList.Count > 0)
                        {
                            foreach (var evt in Model.UpcomingEventsList)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@evt.Title</h6>
                                            <small class="text-muted">
                                                <i class="fas @(evt.EventType == "Medical Mission" ? "fa-stethoscope" :
                                                                                                            evt.EventType == "Assistance Program" ? "fa-hand-holding-heart" :
                                                                                                            "fa-users") me-1"></i>
                                        @evt.EventType
                                    </small>
                                </div>
                                <span class="badge bg-@(evt.Status == "Scheduled" ? "info" :
                                                                                                     evt.Status == "Ongoing" ? "warning" : "success")">
                                    @evt.Status
                                </span>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    @evt.EventDate.ToString("MMM dd, yyyy hh:mm tt") |
                                    <i class="fas fa-map-marker-alt me-1"></i> @evt.Location
                                </small>
                            </div>
                        </div>
                                                }
                        }
                        else
                        {
                            <div class="list-group-item text-center text-muted py-4">
                                <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                <p class="mb-0">No upcoming events</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Civil Status Distribution -->
    @if (Model.CivilStatusDistribution != null && Model.CivilStatusDistribution.Any(s => s.Count > 0))
    {
        <div class="row mx-0">
            <div class="col-12 px-2 mb-3">
                <div class="card shadow">
                    <div class="card-header py-2">
                        <h6 class="m-0 font-weight-bold text-secondary">
                            <i class="fas fa-heart me-2"></i>Civil Status Distribution
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var status in Model.CivilStatusDistribution.Where(s => s.Count > 0))
                            {
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                                    <div class="card border-left-secondary shadow-sm h-100">
                                        <div class="card-body py-2">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-secondary p-2 me-3">
                                                    <i class="fas
                                                                @(status.Status == "Married" ? "fa-ring" :
                                                                                                                 status.Status == "Single" ? "fa-user" :
                                                                                                                 status.Status == "Widowed" ? "fa-user-times" :
                                                                                                                 "fa-heart-broken") text-white"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="text-xs font-weight-bold text-secondary text-uppercase">
                                                @status.Status
                                            </div>
                                            <div class="h6 mb-0 font-weight-bold text-gray-800">@status.Count</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .chart-pie, .chart-bar {
            position: relative;
            height: 250px;
        }

        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }

        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }

        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }

        .border-left-danger {
            border-left: 0.25rem solid #e74a3b !important;
        }

        .border-left-secondary {
            border-left: 0.25rem solid #858796 !important;
        }

        .border-left-dark {
            border-left: 0.25rem solid #5a5c69 !important;
        }

        .card {
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        .list-group-item {
            border-left: none;
            border-right: none;
            transition: background-color 0.2s;
        }

            .list-group-item:first-child {
                border-top: none;
            }

            .list-group-item:hover {
                background-color: rgba(0, 0, 0, 0.02);
            }

        .progress {
            border-radius: 10px;
        }

        .progress-bar {
            border-radius: 10px;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Global variables
        let genderChart = null;
        let ageChart = null;
        let isAutoRefresh = true;
        let autoRefreshTimer = null;

        // Initialize charts
        function initializeCharts() {
            // Gender Distribution Chart
            var genderCtx = document.getElementById('genderChart').getContext('2d');
            genderChart = new Chart(genderCtx, {
                type: 'pie',
                data: {
                    labels: ['Male', 'Female'],
                    datasets: [{
                        data: [@Model.MaleCount, @Model.FemaleCount],
                        backgroundColor: ['#4e73df', '#e74a3b'],
                        hoverBackgroundColor: ['#2e59d9', '#d62c1a'],
                        borderWidth: 2,
                        borderColor: '#ffffff'
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    let value = context.raw || 0;
                                    let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    let percentage = total > 0 ? Math.round((value / total) * 100) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });

            // Age Distribution Chart
            var ageCtx = document.getElementById('ageChart').getContext('2d');
            ageChart = new Chart(ageCtx, {
                type: 'bar',
                data: {
                    labels: ['60-69', '70-79', '80-89', '90+'],
                    datasets: [{
                        label: 'Seniors Count',
                        data: [
                            @Model.Age60_69,
                            @Model.Age70_79,
                            @Model.Age80_89,
                            @Model.Age90plus
                        ],
                        backgroundColor: [
                            '#4e73df',
                            '#1cc88a',
                            '#36b9cc',
                            '#f6c23e'
                        ],
                        borderColor: [
                            '#2e59d9',
                            '#17a673',
                            '#2c9faf',
                            '#e6b200'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // Refresh dashboard data
        async function refreshDashboard() {
            try {
                // Show loading state
                $('#refreshBtn').html('<i class="fas fa-spinner fa-spin me-1"></i> Refreshing...');
                $('#refreshBtn').prop('disabled', true);

                // You can add AJAX calls here if you want live data
                // For now, just reload the page
                window.location.reload();

            } catch (error) {
                console.error("Error refreshing dashboard:", error);
                showNotification('Error refreshing data', 'danger');
            }
        }

        // Show notification
        function showNotification(message, type = 'info') {
            // Remove any existing notification
            $('.notification-toast').remove();

            const notification = $(`
                <div class="notification-toast alert alert-${type} alert-dismissible fade show position-fixed" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-${type === 'success' ? 'check-circle' :
                                           type === 'warning' ? 'exclamation-triangle' :
                                           'info-circle'} me-2"></i>
                        <div>${message}</div>
                        <button type="button" class="btn-close ms-3" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            `);

            notification.css({
                top: '20px',
                right: '20px',
                zIndex: '9999',
                minWidth: '300px'
            });

            $('body').append(notification);

            // Auto remove after 3 seconds
            setTimeout(() => {
                notification.alert('close');
            }, 3000);
        }

        // Update current time
        function updateCurrentTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            $('#currentTime').text(timeString);
        }

        // Setup auto-refresh
        function setupAutoRefresh() {
            if (isAutoRefresh) {
                autoRefreshTimer = setInterval(() => {
                    refreshDashboard();
                }, 300000); // Refresh every 5 minutes
            } else if (autoRefreshTimer) {
                clearInterval(autoRefreshTimer);
                autoRefreshTimer = null;
            }
        }

        // Initialize on page load
        $(document).ready(function() {
            // Initialize charts
            initializeCharts();

            // Update current time every second
            setInterval(updateCurrentTime, 1000);
            updateCurrentTime();

            // Setup auto-refresh
            setupAutoRefresh();

            // Refresh button click
            $('#refreshBtn').click(function() {
                refreshDashboard();
            });

            // Auto-refresh toggle
            $('#autoRefreshToggle').change(function() {
                isAutoRefresh = this.checked;
                setupAutoRefresh();

                if (isAutoRefresh) {
                    showNotification('Auto-refresh enabled (5 minutes)', 'success');
                } else {
                    showNotification('Auto-refresh disabled', 'warning');
                }
            });

            // Adjust chart sizes on window resize
            $(window).resize(function() {
                if (genderChart) {
                    genderChart.resize();
                }
                if (ageChart) {
                    ageChart.resize();
                }
            });

            // Card hover effects
            $('.card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );
        });

        // Cleanup on page unload
        $(window).on('beforeunload', function() {
            if (autoRefreshTimer) {
                clearInterval(autoRefreshTimer);
            }
        });
    </script>
}