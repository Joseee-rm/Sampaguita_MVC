@model SeniorManagement.Models.DashboardViewModel
@{
    ViewData["Title"] = "Senior & Event Dashboard";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div>
            <h1 class="h3 mb-2 text-gray-800"><i class="fas fa-tachometer-alt text-primary"></i> Senior & Event Dashboard</h1>
            <p class="mb-0">Overview of senior citizens and event management</p>
        </div>
    </div>

    <!-- Senior Statistics Cards -->
    <div class="row mb-4">
        <!-- Total Seniors -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Seniors
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SeniorStats.TotalSeniors</div>
                            <div class="mt-1">
                                <span class="text-xs text-success">Active: @Model.SeniorStats.ActiveSeniors</span>
                                <span class="text-xs text-secondary ml-2">Archived: @Model.SeniorStats.ArchivedSeniors</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Senior Gender -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Gender Distribution
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <i class="fas fa-male text-info"></i> @Model.SeniorStats.MaleCount
                                <i class="fas fa-female text-danger ml-2"></i> @Model.SeniorStats.FemaleCount
                            </div>
                            <div class="mt-1">
                                @if (Model.SeniorStats.TotalSeniors > 0)
                                {
                                    var malePercent = Math.Round((double)Model.SeniorStats.MaleCount / Model.SeniorStats.TotalSeniors * 100, 1);
                                    var femalePercent = Math.Round((double)Model.SeniorStats.FemaleCount / Model.SeniorStats.TotalSeniors * 100, 1);
                                    <span class="text-xs">@malePercent% Male / @femalePercent% Female</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-venus-mars fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Events -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Total Events
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.EventStats.TotalEvents</div>
                            <div class="mt-1">
                                <span class="text-xs text-warning">Upcoming: @Model.EventStats.UpcomingEvents</span>
                                <span class="text-xs text-danger ml-2">Today: @Model.EventStats.TodayEvents</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Event Attendance -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Event Attendance
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.EventStats.TotalAttendance</div>
                            <div class="mt-1">
                                <span class="text-xs">Total Capacity: @Model.EventStats.TotalCapacity</span>
                                @if (Model.EventStats.TotalCapacity > 0)
                                {
                                    var attendanceRate = Math.Round((double)Model.EventStats.TotalAttendance / Model.EventStats.TotalCapacity * 100, 1);
                                    <span class="text-xs ml-2">(@attendanceRate% filled)</span>
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Left Column - Senior Charts -->
        <div class="col-lg-8">
            <!-- Senior Age Distribution -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Senior Age Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <canvas id="ageGroupChart" width="400" height="200"></canvas>
                    </div>
                    <div class="mt-3 text-center">
                        <div class="row">
                            <div class="col-3">
                                <div class="text-xs font-weight-bold text-primary mb-1">60-69 Years</div>
                                <div class="h5 mb-0">@Model.SeniorStats.Age60_69</div>
                            </div>
                            <div class="col-3">
                                <div class="text-xs font-weight-bold text-success mb-1">70-79 Years</div>
                                <div class="h5 mb-0">@Model.SeniorStats.Age70_79</div>
                            </div>
                            <div class="col-3">
                                <div class="text-xs font-weight-bold text-info mb-1">80-89 Years</div>
                                <div class="h5 mb-0">@Model.SeniorStats.Age80_89</div>
                            </div>
                            <div class="col-3">
                                <div class="text-xs font-weight-bold text-warning mb-1">90+ Years</div>
                                <div class="h5 mb-0">@Model.SeniorStats.Age90plus</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event Status Distribution -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-warning">Event Status Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="chart-bar">
                                <canvas id="eventStatusChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mt-4">
                                <h6 class="font-weight-bold text-gray-800 mb-3">Event Status</h6>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-xs"><i class="fas fa-clock text-primary mr-1"></i> Scheduled</span>
                                        <span class="font-weight-bold">@Model.EventStats.ScheduledEvents</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" role="progressbar"
                                             style="width: @(Model.EventStats.TotalEvents > 0 ? Math.Round((double)Model.EventStats.ScheduledEvents / Model.EventStats.TotalEvents * 100, 1) : 0)%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-xs"><i class="fas fa-play-circle text-warning mr-1"></i> Ongoing</span>
                                        <span class="font-weight-bold">@Model.EventStats.OngoingEvents</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-warning" role="progressbar"
                                             style="width: @(Model.EventStats.TotalEvents > 0 ? Math.Round((double)Model.EventStats.OngoingEvents / Model.EventStats.TotalEvents * 100, 1) : 0)%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-xs"><i class="fas fa-check-circle text-success mr-1"></i> Completed</span>
                                        <span class="font-weight-bold">@Model.EventStats.CompletedEvents</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success" role="progressbar"
                                             style="width: @(Model.EventStats.TotalEvents > 0 ? Math.Round((double)Model.EventStats.CompletedEvents / Model.EventStats.TotalEvents * 100, 1) : 0)%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-xs"><i class="fas fa-times-circle text-danger mr-1"></i> Cancelled</span>
                                        <span class="font-weight-bold">@Model.EventStats.CancelledEvents</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-danger" role="progressbar"
                                             style="width: @(Model.EventStats.TotalEvents > 0 ? Math.Round((double)Model.EventStats.CancelledEvents / Model.EventStats.TotalEvents * 100, 1) : 0)%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Distribution Charts -->
        <div class="col-lg-4">
            <!-- Senior Gender Distribution -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Senior Gender Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="genderChart" width="300" height="150"></canvas>
                    </div>
                    <div class="mt-4 text-center">
                        <div class="row">
                            <div class="col-6">
                                <div class="text-xs font-weight-bold text-primary mb-1">Male</div>
                                <div class="h4 mb-0">@Model.SeniorStats.MaleCount</div>
                            </div>
                            <div class="col-6">
                                <div class="text-xs font-weight-bold text-danger mb-1">Female</div>
                                <div class="h4 mb-0">@Model.SeniorStats.FemaleCount</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event Types Distribution -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">Event Types Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="eventTypeChart" width="300" height="150"></canvas>
                    </div>
                    <div class="mt-3">
                        <div class="row text-center">
                            <div class="col-4 mb-2">
                                <span class="badge bg-primary p-2">Medical: @Model.EventStats.MedicalCount</span>
                            </div>
                            <div class="col-4 mb-2">
                                <span class="badge bg-success p-2">Assistance: @Model.EventStats.AssistanceCount</span>
                            </div>
                            <div class="col-4 mb-2">
                                <span class="badge bg-info p-2">Community: @Model.EventStats.CommunityCount</span>
                            </div>
                            <div class="col-4 mb-2">
                                <span class="badge bg-warning p-2">Wellness: @Model.EventStats.WellnessCount</span>
                            </div>
                            <div class="col-4 mb-2">
                                <span class="badge bg-danger p-2">Social: @Model.EventStats.SocialCount</span>
                            </div>
                            <div class="col-4 mb-2">
                                <span class="badge bg-secondary p-2">Educational: @Model.EventStats.EducationalCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Zone Distribution Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">Senior Zone Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @for (int i = 1; i <= 7; i++)
                        {
                            var zoneCount = Model.SeniorStats.ZoneDistribution.ContainsKey(i) ?
                            Model.SeniorStats.ZoneDistribution[i] : 0;
                            var percentage = Model.SeniorStats.TotalSeniors > 0 ?
                            Math.Round((double)zoneCount / Model.SeniorStats.TotalSeniors * 100, 1) : 0;

                            <div class="col-md-3 col-sm-6 mb-3">
                                <div class="card border-left-info shadow h-100">
                                    <div class="card-body">
                                        <div class="text-center">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Zone @i
                                            </div>
                                            <div class="h4 mb-0 font-weight-bold text-gray-800">@zoneCount</div>
                                            <div class="mt-2">
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar bg-info" role="progressbar"
                                                         style="width: @percentage%"></div>
                                                </div>
                                                <small class="text-muted">@percentage% of total seniors</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
        });

        function initializeCharts() {
            // Senior Gender Distribution Chart
            var genderCtx = document.getElementById('genderChart')?.getContext('2d');
            if (genderCtx) {
                new Chart(genderCtx, {
                    type: 'pie',
                    data: {
                        labels: ['Male', 'Female'],
                        datasets: [{
                            data: [@Model.SeniorStats.MaleCount, @Model.SeniorStats.FemaleCount],
                            backgroundColor: ['#4e73df', '#e74a3b'],
                            hoverBackgroundColor: ['#2e59d9', '#d52a1a'],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            // Senior Age Group Chart
            var ageCtx = document.getElementById('ageGroupChart')?.getContext('2d');
            if (ageCtx) {
                new Chart(ageCtx, {
                    type: 'bar',
                    data: {
                        labels: ['60-69', '70-79', '80-89', '90+'],
                        datasets: [{
                            label: 'Number of Seniors',
                            data: [
                                @Model.SeniorStats.Age60_69,
                                @Model.SeniorStats.Age70_79,
                                @Model.SeniorStats.Age80_89,
                                @Model.SeniorStats.Age90plus
                            ],
                            backgroundColor: '#4e73df',
                            hoverBackgroundColor: '#2e59d9',
                            borderColor: '#4e73df',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    precision: 0
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            // Events Status Distribution Chart
            var eventStatusCtx = document.getElementById('eventStatusChart')?.getContext('2d');
            if (eventStatusCtx) {
                new Chart(eventStatusCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Scheduled', 'Ongoing', 'Completed', 'Cancelled'],
                        datasets: [{
                            label: 'Number of Events',
                            data: [
                                @Model.EventStats.ScheduledEvents,
                                @Model.EventStats.OngoingEvents,
                                @Model.EventStats.CompletedEvents,
                                @Model.EventStats.CancelledEvents
                            ],
                            backgroundColor: ['#4e73df', '#f6c23e', '#1cc88a', '#e74a3b'],
                            hoverBackgroundColor: ['#2e59d9', '#dda20a', '#17a673', '#d52a1a'],
                            borderColor: '#fff',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    precision: 0
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            // Event Types Distribution Chart
            var eventTypeCtx = document.getElementById('eventTypeChart')?.getContext('2d');
            if (eventTypeCtx) {
                new Chart(eventTypeCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Medical', 'Assistance', 'Community', 'Wellness', 'Educational', 'Social'],
                        datasets: [{
                            data: [
                                @Model.EventStats.MedicalCount,
                                @Model.EventStats.AssistanceCount,
                                @Model.EventStats.CommunityCount,
                                @Model.EventStats.WellnessCount,
                                @Model.EventStats.EducationalCount,
                                @Model.EventStats.SocialCount
                            ],
                            backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'],
                            hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#dda20a', '#d52a1a', '#6c757d'],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        }
    </script>

    <style>
        .card {
            border-radius: 8px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .chart-bar, .chart-pie {
            position: relative;
            height: 200px;
        }

        .border-left-primary {
            border-left-color: #4e73df !important;
        }

        .border-left-info {
            border-left-color: #36b9cc !important;
        }

        .border-left-warning {
            border-left-color: #f6c23e !important;
        }

        .border-left-success {
            border-left-color: #1cc88a !important;
        }
    </style>
}